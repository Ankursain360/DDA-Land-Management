@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="icon" href="~/images/favicon.png" type="image/png" sizes="16x16" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>DDA Land Management</title>
    <!--font css-->
    <link rel="stylesheet" href="~/font/open-sans/stylesheet.css" />

    <!--icon css-->
    <link rel="stylesheet" href="~/font/icon/remixicon.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    @* <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/css/bootstrap/css/bootstrap.min.css" />
    <link href="~/lib/css/style.css" rel="stylesheet" />
    <link href="~/lib/toaster/toastr.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/lib/select2/select2.css" rel="stylesheet" />
    <script src="~/lib/select2/select2.js"></script>

</head>
<body class="bg-gray">
    <div id="loader-wrapper" style="display:none">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <div class="top-header">
        <header>
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <div class="menu me-3 p-2 text-white order-md-2 me-md-auto open" id="mobileMenu">
                        @*<i class="ri-menu-fold-line"></i>*@
                        <i class="ri-menu-unfold-line"></i>
                    </div>
                    <div class="logo py-1 me-auto me-md-4 order-md-1">
                        <a href="/" class="d-block">
                            <figure class="m-0">
                                <img src="~/images/header-logo.png" alt="DDA Logo" class="img-fluid">
                            </figure>
                        </a>
                    </div>
                    @*<div class="dropdown noti text-white my-2  me-3 order-md-3">
                    <a href="~/docs/Acquiredlandinformation.pdf" target="_blank" role="button" title="User Manual" class='p-2 d-block text-white no-dec'>
                    <i class="ri-folder-user-fill" style="font-size:20px"></i>
                    </a>
                    </div>*@
                    <div class="dropdown noti text-white my-2  me-3 order-md-3">
                        <a href="https://ddalmis.org.in/" role="button" id="notification" title="Go back to modules!" class='p-2 d-block text-white no-dec'>
                            @*<i class="ri-notification-2-line"></i>*@
                            <i class="ri-home-3-fill" style="font-size:20px"></i>
                            @*<small class="bg-success rounded-circle position-absolute nofi-active">99</small>*@
                        </a>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="pt-5 mt-5">
    </div>

    @* <aside class="left-menu small slow" id="leftMenu">
    <ul class="accordion list-unstyled mb-0">

    </ul>
    </aside>*@

    <partial name="_CookieConsentPartial" />
    <section class="slow bg-gray">
        <div class="container-fluid">
            <div class="section-wraper px-3  pb-md-0">
                <div class="form-control" style="margin-top:70px;">
                    <p><h2 class="text-center"><strong>Content Review Policy (CRP)</strong></h2></p>
                    <div class="card p-3 bg-gray-100 overflow-auto">
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered table-responsive">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <p>LIMS Application is the face of Delhi Development Authority (DDA), Ministry of Housing and Urban Affairs, Govt. Of India. It is therefore required to keep the content on the application current and up‐to‐date and hence there is a need for the Content Review Policy. Since the scope of the content is huge, different Review Policies are defined for the diverse content elements.</p>
                                                <p>The Review Policy is based on different type of content elements, its validity and relevance as well as the archival policy. The entire Application content would be reviewed for syntax checks in a regular interval (once in a month /once in a quarter) by the DDA Team.</p>
                                                
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <br />
    <br />
    <br />
    <footer class="footers slow">
        <div class="container-fluid">
            <p class="my-0 py-2 text-center">
                <a asp-action="Login" asp-controller="Account">Home</a>
                | <a asp-action="PrivacyPolicy" asp-controller="Account">Privacy Policy</a>
                | <a asp-action="TermsandConditions" asp-controller="Account">Terms & Conditions</a>
                | <a asp-action="copyRight" asp-controller="Account">Copyright Policy</a>
                | <a asp-action="HyperlinkPolicy" asp-controller="Account">Hyperlink policy</a>
                | <a asp-action="WebInformationManager" asp-controller="Account">Web Information Manager</a>
                | <a asp-action="Contactus" asp-controller="Account">Contact Us</a>
                | <a asp-action="Help" asp-controller="Account">Help</a>
                | <a asp-action="Disclaimer" asp-controller="Account">Disclaimer</a>
                | <a asp-action="AboutUs" asp-controller="Account">AboutUs</a>
                | <a asp-action="ContingencyManagementPlan" asp-controller="Account">Contingency Management Plan</a>
                | <a asp-action="ContentArchivalCAPPolicy" asp-controller="Account">Content Archival Policy ( CAP)</a>
                | <a asp-action="ContentReviewCAPPolicy" asp-controller="Account">Content Review Policy (CRP)</a>
                | <a asp-action="WebsiteMonitoringPlan" asp-controller="Account">Website Monitoring Plan</a>
                | <a asp-action="SecurityPolicy" asp-controller="Account">Security Policy</a><br>
                &nbsp; &copy; Content Owned by DDA, Government of India. &nbsp;&nbsp;<label>Last Updated : @HttpContextAccessor.HttpContext.Session.GetString("LastUpdatedDate")</label>
            </p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/dist/Chart.min.js"></script>
    <script src="~/lib/toaster/toastr.min.js"></script>

    <environment include="Development">
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @Html.Raw(ViewBag.Message)
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor
</body>
</html>
