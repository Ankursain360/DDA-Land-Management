@model Libraries.Model.Entity.Sakanidetail
@await Component.InvokeAsync("PageHeader", new { pageName = "Sakani Details Form" })



<div class="pt-3">

  
    <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="mb-3 d-flex">Add Details</h3>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select class="floating-label-field floating-label-field--s3" asp-for="VillageId" asp-items="@(new SelectList(Model.VillageList, "Id","Name"))">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="VillageId" class="text-danger"></span>
                    <label class="floating-label">Village Name</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input type="Date" class="floating-label-field floating-label-field--s3" placeholder="Year Of Jamabandi" asp-for="YearOfJamabandi" />
                    <label class="floating-label">Year Of Jamabandi</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">


                    <select class="floating-label-field floating-label-field--s3" asp-for="KhewatId" asp-items="@(new SelectList(Model.KhewatList, "Id","Number"))">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="KhewatId" class="text-danger"></span>
                    <label class="floating-label">No. Of Khewat</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input type="text" class="floating-label-field floating-label-field--s3" asp-for="Location" />
                    <label class="floating-label">Location Name </label>
                </div>
            </div>
        </div>
      
        <div id="DivDetails">
            <div class="row mt-md-3">
                <h3 class="mb-3 d-flex">Details</h3>
                </div>
                <div class="row mt-md-3">
                    <div class="col-md-4">
                        <div class="floating-label-wrap mb-3 mb-md-0">


                            <input type="text" placeholder="OwnerDetails" asp-for="OwnerDetails" class="floating-label-field floating-label-field--s3" />
                            <label class="floating-label">Owner Details</label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="floating-label-wrap mb-3 mb-md-0">



                            <input type="text" placeholder="LeaseDetails" asp-for="LeaseDetails" class="floating-label-field floating-label-field--s3" />
                            <label class="floating-label">Lease Details</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="floating-label-wrap mb-3 mb-md-0">

                            <input type="text" placeholder="Tenant" asp-for="Tenant" class="floating-label-field floating-label-field--s3" />
                            <label class="floating-label">Tenant</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap">


                        <select class="floating-label-field floating-label-field--s3" asp-for="KhasraId" asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="KhasraId" class="text-danger"></span>
                        <label class="floating-label">Khasra No</label>

                    </div>
                </div>


            </div>
            <div class="row mt-md-3">
                <div class="col-md-12">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea type="text" asp-for="Remarks" placeholder="Remarks" class="floating-label-field floating-label-field--s3"></textarea>
                        <label class="floating-label">Remarks</label>
                    </div>
                </div>
            </div>

            <div class="row mt-md-3">
                <div class=" col-md-12">
                    <button class="btn btn-theme " type="submit">Create</button>
                    @Html.ActionLink("Back", "Index", "SakaniDetails", null, new { @class = "btn btn-theme " })
                </div>
            </div>




</form>
    </div>








