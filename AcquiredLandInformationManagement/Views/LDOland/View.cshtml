@model Libraries.Model.Entity.Ldoland
@await Component.InvokeAsync("PageHeader", new { pageName = "L&DO Lands" })

<div class="pt-3">
    <form asp-action="View" method="post" disabled="disabled" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
        <h3 class="mb-3 d-flex">View Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="OtherLandNotificationId"
                            asp-items="@(new SelectList(Model.OtherlandnotificationList, "Id","NotificationNumber"))">
                        <option value="" selected="selected" disabled="disabled">Select</option>
                    </select>
                    <span asp-validation-for="OtherLandNotificationId" class="text-danger"></span>
                    <label asp-for="OtherLandNotificationId" class="floating-label">Notification No <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="NotificationDate" placeholder="Name" type="date"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="NotificationDate" class="text-danger"></span>
                    <label class="floating-label">Notification Date <span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="hidden" asp-for="GOINotificationDocumentName" />
                    @{
                        @if (Model.GOINotificationDocumentName != null)
                        {
                            <input disabled type="file" asp-for="GOINotificationDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                            <label class="badge  bg-primary px-2">(View File)</label>
                        }
                        else
                        {
                            <input disabled type="file" asp-for="GOINotificationDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                        }
                    }
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="GOINotificationDocumentName"></span>
                    <label class="floating-label">Upload GOI Notification(L&DO)</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <input asp-for="SerialNumber" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                    <label asp-for="SerialNumber" class="floating-label">Serial Number <span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="PropertySiteNo" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="PropertySiteNo" class="text-danger"></span>
                    <label class="floating-label">Property/Site/KhasraNo <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Location" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                    <label class="floating-label">Location Name(Village) <span style="color:red">*</span> </label>
                </div>
            </div>
          
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="SiteDescription" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="SiteDescription" class="text-danger"></span>
                    <label class="floating-label">Site Description(With Khasra No)  <span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div id="Divclsification">
            <h3 class="my-3 d-flex sub-heading"> Area </h3>
            <div class="row mt-md-3">
                <div class="col-md-2">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input asp-for="Area" placeholder="Name" type="text"
                               class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="Area" class="text-danger"></span>
                        <label class="floating-label">Acre<span style="color:red">*</span></label>
                    </div>
                </div>
            </div>
        </div>
        <div id="Divclsification">
            <h2 class="my-3 sub-heading">
                <label class="control-label lb-sm" asp-for="StatusOfLand">Status of Land</label>
            </h2>

            <div class="row pt-3">

                <div class="col-md-12">
                    <input type="hidden" asp-for="StatusOfLand" id="StatusOfLand" />
                    <span asp-validation-for="StatusOfLand" class="text-danger"></span>

                    <div class="form-row">

                        <div class="form-group col-md-3">
                            <label class="radio-inline">
                                <input asp-for="StatusOfLand" type="radio" class="floating-label-field  " placeholder="Name" name="grpLand" value="Allotted" id="A">Allotted
                            </label>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="radio-inline">
                                <input asp-for="StatusOfLand" type="radio" class="floating-label-field " placeholder="Name" name="grpLand" value="Vacant" id="V">Vacant
                            </label>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="radio-inline">
                                <input asp-for="StatusOfLand" type="radio" class="floating-label-field floating-label-field--s3 " placeholder="Name" name="grpLand" value="Buildup/Encroached" id="E">Buildup/Encroached
                            </label>
                        </div>
                        <div class="form-group col-md-3">
                            <label class="radio-inline">
                                <input asp-for="StatusOfLand" type="radio" class="floating-label-field floating-label-field--s3 " placeholder="Name" name="grpLand" value="Green" id="G">Green
                            </label>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <h3 class="my-3 d-flex sub-heading"> Details </h3>
        <div class="row mt-md-3">

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="OccupiedBy" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="OccupiedBy" class="text-danger"></span>
                    <label class="floating-label">Occupied By <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="DateofPossession" placeholder="Name" type="date"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="DateofPossession" class="text-danger"></span>
                    <label class="floating-label">Date Of Possession <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="DateOfLandResume" type="date" disabled
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="DateOfLandResume" class="text-danger"></span>
                    <label class="floating-label">Date of  Land Resume/Taken Back by L&DO </label>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="hidden" asp-for="OrderDocumentName" />
                    @{
                        @if (Model.OrderDocumentName != null)
                        {
                            <input disabled type="file" asp-for="OrderDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                            <label class="badge  bg-primary px-2">(View File)</label>
                        }
                        else
                        {
                            <input disabled type="file" asp-for="OrderDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                        }
                    }
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="OrderDocumentName"></span>
                    <label class="floating-label">Upload Order<span style="color:red">(.pdf only)</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="hidden" asp-for="PossessionDocumentName" />
                    @{
                        @if (Model.PossessionDocumentName != null)
                        {
                            <input disabled type="file" asp-for="PossessionDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                            <label class="badge  bg-primary px-2">(View File)</label>
                        }
                        else
                        {
                            <input disabled type="file" asp-for="PossessionDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                        }
                    }
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="PossessionDocumentName"></span>
                    <label class="floating-label">Upload Possession proceedings<span style="color:red">(.pdf only)</span></label>
                </div>
            </div>
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>
     
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <textarea asp-for="Remarks" placeholder="Description" class="floating-label-field floating-label-field--s3"></textarea>

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label class="floating-label">Remarks <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class=" col-md-12">

                @Html.ActionLink("Back", "Index", "LDOland", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/booktransferlandcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/booktransferlandcreate.min.js" asp-append-version="true"></script>
</environment>
