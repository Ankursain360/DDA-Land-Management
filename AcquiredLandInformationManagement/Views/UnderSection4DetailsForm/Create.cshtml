@model Libraries.Model.Entity.Undersection4

<div class="row">
    <div class="col-sm-12">
        <div class="myapp-hed">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Under Section-4 Details</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading  myapp-hed1">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">Add Details </h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="row" style="margin-bottom:35px;">
                    <div class="col-sm-12">
                        <div class=" myapp-hed2">
                            <div class="col-md-12">
                                <h6 class="pull-left" style="color:white;margin-top:5px;">Under Section-4 Details</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Purpose Name</label>
                        <select class="form-control dda-dropdown" asp-for="PurposeId" asp-items="@(new SelectList(Model.PurposeList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="PurposeId" class="text-danger"></span>

                    </div>
                </div>
                <div id="Divnotification">
                    <div class="row" style="margin-bottom:35px;">
                        <div class="col-sm-12">
                            <div class=" myapp-hed2">
                                <div class="col-md-12">
                                    <h6 class="pull-left" style="color:white;margin-top:5px;">Notification Under Section-4 Details</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Notification No</label>
                        <input type="text" asp-for="Number" class="form-control"/>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Notification Date</label>
                        <input type="Date" asp-for="Ndate" class="form-control"/>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Puropse</label>
                        <input type="text" asp-for="Npurpose" class="form-control"/>
                    </div>
                </div>
                <div id="Divnotificationtype">
                    <div class="row" style="margin-bottom:35px;">
                        <div class="col-sm-12">
                            <div class=" myapp-hed2">
                                <div class="col-md-12">
                                    <h6 class="pull-left" style="color:white;margin-top:5px;">Notification Type Under Section-4 Details</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="radio-inline">
                                <input type="radio" asp-for="TypeDetails" value="Khasra" checked="checked" />Khasra
                            </label>
                            <label class="radio-inline">
                                <input type="radio"  asp-for="TypeDetails"  value="Boundary" />Boundary
                            </label>
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-12">
                            <label class="control-label lb-sm">Purpose</label>
                            <textarea type="text" asp-for="TypePurpose" class="form-control" style=" background-color: #dddddd;"></textarea>
                        </div>
                    </div>
                </div>






                <div class="form-row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="Submit" value="Create" class="btn btn-primary dda-pageheading" />
                        @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
                        @Html.ActionLink("Back", "Index", "UnderSection4DetailsForm", null, new { @class = "btn btn-primary myapp-hed1" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<script>

    $(function () {
        $('#Boundary').change(function () {
            var value = $('#Boundary').val();
            if (value == "No") {
                $('#txtBoundaryRemarks').val('');
                $("#txtBoundaryRemarks").attr("disabled", "disabled");
            }
            else {
                $('#txtBoundaryRemarks').val('');
                $("#txtBoundaryRemarks").attr("disabled", "disabled");
                $("#txtBoundaryRemarks").removeAttr("disabled", "disabled");
            }
        });
    });

</script>


