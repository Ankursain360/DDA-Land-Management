@model Libraries.Model.Entity.Undersection4

@await Component.InvokeAsync("PageHeader", new { pageName = "Notification U/S-4 Details Master" })


<div class="pt-3">
    <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">

        <h3 class="mb-3 d-flex">Add Details</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="ProposalId"
                            asp-items="@(new SelectList(Model.ProposalList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>

                    </select>
                    <span asp-validation-for="ProposalId" class="text-danger"></span>
                    <label asp-for="ProposalId" class="floating-label">Proposal Name </label>
                </div>


            </div>

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input type="text" asp-for="Number" placeholder="Notification No" class="floating-label-field floating-label-field--s3" />
                    <label class="floating-label">Notification No</label>
                </div>
            </div>

        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input type="Date" asp-for="Ndate" placeholder="Notification Date" class="floating-label-field floating-label-field--s3" />
                    <label class="floating-label">Notification Date</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input type="text" asp-for="Npurpose" placeholder="Purpose" class="floating-label-field floating-label-field--s3" />
                    <label class="floating-label">Purpose</label>
                </div>
            </div>


        </div>
        <div class="pt-3">
            <h3 class="mb-3 d-flex">Notification Type</h3>

            <div class="row">



                <div class="col-md-3">
                    <div class="form-check theme">


                        <input class="form-check-input" type="radio" id="khasra_id" asp-for="TypeDetails" value="Khasra" checked="checked" />    <label class="radio-inline">
                            Khasra
                        </label>
                    </div>
                </div>   <div class="col-md-3">
                    <div class="form-check theme">


                        <input class="form-check-input" type="radio" id="boundary_id" asp-for="TypeDetails" value="Boundary"  />
                        <label class="radio-inline">
                            Boundary
                        </label>
                    </div>
                </div>
            </div>
        </div>


        <div class="row mt-md-3" id="boundary_div" style="display:none" >

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <textarea type="text" asp-for="BoundaryDescription" placeholder="Purpose" class="floating-label-field floating-label-field--s3"></textarea>
                    <label class="floating-label">Boundary Description</label>
                </div>


            </div>
            </div>



            <div class="row mt-md-3">
                <div class=" col-md-12">
                    <button class="btn btn-theme " type="submit">Create</button>
                    @Html.ActionLink("Back", "Index", "UnderSection4DetailsForm", null, new { @class = "btn btn-theme " })
                </div>
            </div>


</form>
</div>
 
<script>


    $('#khasra_id').click(function () {
        $("#boundary_div").hide();
    });

    $('#boundary_id').click(function () {
        $("#boundary_div").show();
    });

</script>