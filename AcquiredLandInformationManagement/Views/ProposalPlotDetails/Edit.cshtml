@model Libraries.Model.Entity.Proposalplotdetails
@await Component.InvokeAsync("PageHeader", new { pageName = "Proposal Plot Details" })

<div class="pt-3">
    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">
            Edit Details
            <span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span>
        </h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="ProposaldetailsId" asp-items="@(new SelectList(Model.ProposaldetailsList, "Id","Name"))">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="ProposaldetailsId" class="text-danger"></span>
                    <label asp-for="ProposaldetailsId" class="floating-label">Proposal Name <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="AcquiredlandvillageId" asp-items="@(new SelectList(Model.AcquiredlandvillageList, "Id","Name"))"
                             onchange="return onChange(this.options[this.selectedIndex].value);">

                        <option>Select</option>
                    </select>
                    <span asp-validation-for="AcquiredlandvillageId" class="text-danger"></span>
                    <label asp-for="AcquiredlandvillageId" class="floating-label">Village Name <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="KhasraId" asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">

                        <option>Select</option>
                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger"></span>
                    <label asp-for="KhasraId" class="floating-label">Khasra No <span style="color:red">*</span> </label>
                </div>
            </div>

            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>

        <div id="Divclsification">
            <h3 class="my-3 d-flex sub-heading">Total Area of the Proposal</h3>
            <div class="row mt-md-3">
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input asp-for="Bigha" placeholder="Name" type="text"
                            class="floating-label-field floating-label-field--s3 onlynumbers"limit="4" />
                        <span asp-validation-for="Bigha" class="text-danger"></span>
                        <label class="floating-label">Bigha <span style="color:red">*</span>   </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input asp-for="Biswa" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3 onlynumbers"limit="2" />
                        <span asp-validation-for="Biswa" class="text-danger"></span>
                        <label class="floating-label">Biswa <span style="color:red">*</span> </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input asp-for="Biswanshi" placeholder="Name" type="text" limit="2"
                         class="floating-label-field floating-label-field--s3 onlynumbers" />
                        <span asp-validation-for="Biswanshi" class="text-danger"></span>
                        <label class="floating-label">Biswanshi <span style="color:red">*</span> </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "ProposalPlotDetails", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>

</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/proposalplotcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/proposalplotcreate.min.js" asp-append-version="true"></script>
</environment>