@model IEnumerable<Libraries.Model.Entity.Proposalplotdetails>
@{int rowNo = 0; }

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Proposal Plot Details  </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div>
    @Html.ActionLink("Add New", "Create", "ProposalPlotDetails", null, new { @class = "btn btn-primary pull-right dda-pageheading", style = "margin-top: -10px;" })
</div>
<br />
<br />
<div class="container-fluid">
    <div class="card  table-card table-responsive">

        <table class="table  table-bordered table-card">
            <thead class="thead">
                <tr>
                    <th>Sr.No</th>
                    <th>Proposal Name</th>
                    <th>Village Name</th>
                    <th>Khasra No.</th>
                    <th>Bigha</th>
                    <th>Biswa</th>
                    <th>Biswanshi</th>
                    <th>Operation</th>
                </tr>


            </thead>
            <tbody class="tbody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rowNo += 1)</td>
                        <td>@item.Proposaldetails.Name</td>
                        <td>@item.Village.Name</td>
                        @*<td>@item.Khasra.Name</td>*@
                      
                        <td>@item.Bigha</td>
                        <td>@item.Biswa</td>
                        <td>@item.Biswanshi</td>
                       
                        <td>
                            <a asp-action="View" asp-route-id="@item.Id" title="View">  <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" title="edit"> &nbsp; | &nbsp;  <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" title="delete" onclick="return confirm('Are You Sure, You want to Delete this Record?')">   &nbsp;|&nbsp;<i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>

                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
