@model Libraries.Model.Entity.Disposallandtype

@await Component.InvokeAsync("PageHeader", new { pageName = "Disposal Land Type" })






<div class="pt-3">


    <form asp-action="Edit" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">

        <h3 class="mb-3 d-flex">Edit Details</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Name" asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">New Land  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">


                    <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Code" asp-for="LandCode"/>
                    <span asp-validation-for="LandCode" class="text-danger"></span>
                    <label class="floating-label">Land Code </label>
                </div>
            </div>
        </div>



        <div class="row mt-md-3">

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input class="floating-label-field floating-label-field--s3" placeholder="Rec State" asp-for="RecState" limit="1"/>
                    <span asp-validation-for="RecState" class="text-danger"></span>
                    <label class="floating-label">RecState</label>
                </div>
            </div>


            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <textarea type="text" asp-for="Remarks" class="floating-label-field floating-label-field--s3" placeholder="Description"></textarea>

                    <label class="floating-label">Remarks</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>





        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "DisposalLandType", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>


</div>














