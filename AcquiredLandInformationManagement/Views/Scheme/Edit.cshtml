@model Libraries.Model.Entity.Scheme





<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Village</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Scheme Name  </label>
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Scheme Code </label>
                        <input class="form-control" asp-for="Code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>




                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Scheme Date </label>
                        <input class="form-control" asp-for="SchemeDate" />
                        <span asp-validation-for="SchemeDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Scheme File No.  </label>
                        <input class="form-control" asp-for="FileNo" />
                        <span asp-validation-for="FileNo" class="text-danger"></span>
                    </div>
                </div>






                <div class="row">


                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Description</label>
                        <textarea type="text" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Status</label>
                        <select asp-for="IsActive" class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>



                <br />







                <div class="form-row">
                    <div class=" form-group  col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" onclick="return PasswordMatch();" />
                        @Html.ActionLink("Back", "Index", "Scheme", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

