                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label class="control-label lb-sm">Action Date</label>
                                <input type="Date" class="form-control">
                            </div>

                            <div class="form-group col-md-4">
                                <label class="control-label lb-sm">Reasons</label>
                                <select style="height:30px; background-color: #dddddd;" id="" required="" class="form-control">
