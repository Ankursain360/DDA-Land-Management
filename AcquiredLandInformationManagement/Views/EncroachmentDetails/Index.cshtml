@model IEnumerable<Libraries.Model.Entity.Enchroachment>
@{int rowNo = 0; }
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Encroachment Details Form</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div>
    @Html.ActionLink("Add New", "Create", "EncroachmentDetails", null, new { @class = "btn btn-primary pull-right dda-pageheading ", style = "margin-top: -10px;" })
</div>
<br />
<br />
<div class="container-fluid" id="MainContentForm">
    <div class="card  table-card" style="overflow:scroll;">

        <table class="table table-responsive table-bordered table-card">

            <thead class="thead">
                <tr>
                    <th>Sr.No</th>
                    <th>Village Name</th>
                    <th>Khasra No</th>
                    <th>Land Use</th>
                    @*<th>Area</th>*@
                    <th>Reference No.</th>
                    <th>Action Taken</th>
                  <th>Status</th>
                    <th>Operation</th>
                </tr>
            </thead>

            <tbody class="tbody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rowNo += 1)</td>

                        <td>@item.Village.Name</td>
                        <td>@item.Khasra.Name</td>
                        <td>Yes</td>
                        <td>@item.FileNo</td>
                        <td>@item.ActionDate</td>
                        

                        

                        <td>@(item.IsActive==1?"Active":"InActive")</td>
                        <td>
                            <a asp-action="View" asp-route-id="@item.Id" title="View">  <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" title="edit"> &nbsp; | &nbsp;  <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" title="delete" onclick="return confirm('Are You Sure, You want to Delete this Record?')">   &nbsp;|&nbsp;<i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
<br />
<br />
