@model Libraries.Repository.Common.PagedResult<Libraries.Model.Entity.Possessiondetails>
@{int rowNo = 0; }


<table class="table table-sm table-bordered mb-0 table-striped">


    <thead class="text-nowrap">
        <tr>
            <th> Village Name </th>
            <th> Khasra No </th>
            <th> AREA (B-B-B) (ACRE) </th>
            <th> NOTIFIED AREA (B-B-B) (ACRE) </th>
            <th> Possession Date </th>
        </tr>

    </thead>
    <tbody class="tbody">
        @if (Model != null && Model.Results.Count() > 0)
        {
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td>@(item.Village == null ? "" : item.Village.Name)</td>
                    <td>@(item.Khasra == null ? "" : item.Khasra.Name)</td>
                    <td>@(item.Khasra == null ? "" : (item.Khasra.Bigha +  '-' + item.Khasra.Biswa + '-' + item.Khasra.Biswanshi))</td>
                    <td>@((item.Bigha.ToString() +  '-' + item.Biswa.ToString()))</td>
                    <td> @(item.PossDate.ToString("dd-MMM-yyyy"))</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th colspan="14" style="text-align:center"> No Record Available! </th>
            </tr>
        }

    </tbody>

</table>



@await Component.InvokeAsync("Pager", new { totalCount = Model.RowCount, pageNumber = Model.CurrentPage, pageSize = Model.PazeSize })