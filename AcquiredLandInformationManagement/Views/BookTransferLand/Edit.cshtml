@model Libraries.Model.Entity.Booktransferland
@await Component.InvokeAsync("PageHeader", new { pageName = "Book Transfer Land" })

<div class="pt-3">
    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="LandNotificationId " asp-items="@(new SelectList(Model.LandNotificationList, "Id","Name"))">
                        <option disabled="disabled">Select</option>
                    </select>
                    <span asp-validation-for="LandNotificationId" class="text-danger"></span>
                    <label class="floating-label" asp-for="LandNotificationId">Notification No.</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="NotificationDate" type="date" class="floating-label-field floating-label-field--s3 ">
                    <span asp-validation-for="NotificationDate" class="text-danger"></span>
                    <label class="floating-label" asp-for="NotificationDate">Notification Date</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="LocalityId " asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))">
                        <option disabled="disabled">Select</option>
                    </select>
                    <span asp-validation-for="LocalityId" class="text-danger"></span>
                    <label class="floating-label" asp-for="LocalityId">Locality Name (Village)</label>


                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="KhasraId " asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">
                        <option disabled="disabled">Select</option>
                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger"></span>
                    <label class="floating-label" asp-for="KhasraId">Khasra No.</label>

                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="Part" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="200">

                    <span asp-validation-for="Part" class="text-danger"></span>
                    <label class="floating-label" asp-for="Part">Part</label>


                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <input asp-for="Area" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="200">

                    <span asp-validation-for="Area" class="text-danger"></span>
                    <label class="floating-label" asp-for="Area">Area (Acre)</label>

                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="StatusOfLand" type="radio" class="floating-label-field  " placeholder="Name" name="grpLand" value="Allotted" id="A">Allotted
                    <input asp-for="StatusOfLand" type="radio" class="floating-label-field " placeholder="Name" name="grpLand" value="Vacant" id="V">Vacant
                    <input asp-for="StatusOfLand" type="radio" class="floating-label-field floating-label-field--s3 " placeholder="Name" name="grpLand" value="Enchroched" id="E">Enchroched
                    <input asp-for="StatusOfLand" type="radio" class="floating-label-field floating-label-field--s3 " placeholder="Name" name="grpLand" value="Green" id="G">Green

                    <span asp-validation-for="StatusOfLand" class="text-danger"></span>
                    <label class="floating-label" asp-for="StatusOfLand">Status Of Land</label>


                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <input asp-for="DateofPossession" type="date" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="200">

                    <span asp-validation-for="DateofPossession" class="text-danger"></span>
                    <label class="floating-label" asp-for="DateofPossession">Date of Possession</label>

                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="Remarks" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="200">

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label asp-for="Remarks" class="floating-label">Remarks </label>
                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "BookTransferLand", null, new { @class = "btn btn-theme " })

            </div>
        </div>
    </form>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/booktransferlandcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/booktransferlandcreate.min.js" asp-append-version="true"></script>
</environment>