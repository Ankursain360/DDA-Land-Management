@model Libraries.Repository.Common.PagedResult<Libraries.Model.Entity.Booktransferland>
@{int rowNo = 0; }
<table class="table table-sm table-bordered mb-0 table-striped">
    <thead class="text-nowrap">
        <tr>
            <th>Sr.No</th>
            <th>Notification No.</th>
            <th>Notification Date</th>
            @*<th>Locality Name (Village)</th>
            <th>Khasra Number</th>*@
            <th>Part</th>
            <th>Area</th>
            <th>Status of Land</th>
            <th>Date of Possession</th>
            <th>Remarks</th>
            <th>Status</th>
            <th>Operations</th>
        </tr>


    </thead>
    <tbody class="tbody">
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>@(rowNo += 1)</td>
                <td>@item.LandNotification.Name</td>

                <td>@(Convert.ToDateTime(item.NotificationDate).ToString("dd-MMM-yyyy"))</td>
                @*<td>@item.Locality.Name</td>
                    <td>@item.Khasra.Name</td>*@
                <td>@item.Part</td>


                <td>@item.Area</td>

                <td>@item.StatusOfLand</td>

                <td>@(Convert.ToDateTime(item.DateofPossession).ToString("dd-MMM-yyyy"))</td>
                <td>@item.Remarks</td>

                <td>
                    @if (item.IsActive == 1)
                    {
                        <span class="badge badge-primary px-2 py-1">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger px-2 py-1">Inactive</span>
                    }
                </td>
                <td>
                    <div class="action-btns">
                        <a asp-action="View" asp-route-id="@item.Id" title="View" class="view">  <i class="ri-eye-fill"></i> </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="edit" class="edit"> <i class="ri-edit-line"></i> </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="delete" class="remove" onclick="return confirm('Are you sure, you want to delete this record?')"><i class="ri-delete-bin-5-fill"></i></a>

                        @*<a asp-action="View" asp-route-id="@item.Id" title="View">  <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> </a>

        <a asp-action="Edit" asp-route-id="@item.Id" title="edit"> &nbsp; | &nbsp;  <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>

        <a asp-action="Delete" asp-route-id="@item.Id" title="delete" onclick="return confirm('Are You Sure, You want to Delete this Record?')">   &nbsp;|&nbsp;<i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>*@
                    </div>
</td>

            </tr>
        }
    </tbody>
</table>
@await Component.InvokeAsync("Pager", new { totalCount = Model.RowCount, pageNumber = Model.CurrentPage, pageSize = Model.PazeSize })