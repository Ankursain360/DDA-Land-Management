@model Libraries.Model.Entity.Booktransferland

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Book Transfer Land  </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Notification No.</label>
                        <select asp-for="LandNotificationId" asp-items="@(new SelectList(Model.LandNotificationList, "Id","Name"))"
                                class="form-control dda-dropdown">
                            <option value="0">---Select---</option>

                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Notification Date</label>
                        <input asp-for="NotificationDate" type="date" class="form-control">

                    </div>


                </div>
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Locality Name (Village)</label>
                        <select asp-for="LocalityId" asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))"
                                class="form-control dda-dropdown">
                            <option value="0">---Select---</option>

                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Khasra No.</label>
                        <select asp-for="KhasraId" asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))"
                                class="form-control dda-dropdown">
                            <option value="0">---Select---</option>

                        </select>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Part </label>
                        <input asp-for="Part" type="text" class="form-control">

                    </div>
                </div>

                <div id="Divclsification">
                    <div class="row" style="margin-bottom:35px;">
                        <div class="col-sm-12">
                            <div class="dda-innerheading">
                                <div class="col-md-12">
                                    <h6 class="pull-left" style="color:white;margin-top:5px;">Used Area </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label class="control-label lb-sm">Bigha</label>
                            <input asp-for="Bigha" type="text" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label lb-sm">Biswa</label>
                            <input asp-for="Biswa" type="text" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label lb-sm">Biswanshi</label>
                            <input asp-for="Biswanshi" type="text" class="form-control" placeholder="0" />
                        </div>
                    </div>
                </div>

                <div id="Divclsification">
                    <div class="row" style="margin-bottom:35px;">
                        <div class="col-sm-12">
                            <div class="dda-innerheading">
                                <div class="col-md-12">
                                    <h6 class="pull-left" style="color:white;margin-top:5px;"> Land Status Details </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="control-label lb-sm">Status Of Land</label>
                            <input asp-for="StatusOfLand" type="text" class="form-control" placeholder="0" />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label lb-sm">Date Of Possession</label>
                            <input asp-for="DateofPossession" type="date" class="form-control" placeholder="0" />
                        </div>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label>
                        <select asp-for="IsActive" class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Remarks</label>
                        <textarea asp-for="Remarks" type="text" class="form-control" style=" background-color: #dddddd;"></textarea>
                    </div>
                </div>

                <div class="form-row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" />
                        @Html.ActionLink("Back", "Index", "BookTransferLand", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
