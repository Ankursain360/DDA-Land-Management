@model Libraries.Model.Entity.Tehsil
@await Component.InvokeAsync("PageHeader", new { pageName = "Tehsil Details" })

<div class="pt-3">

    <form asp-action="View"  id="myForm" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            @*<div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="SchemeId" asp-items="@(new SelectList(Model.SchemeList, "Id","Name"))">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="SchemeId" class="text-danger"></span>
                    <label asp-for="SchemeId" class="floating-label">Scheme </label>
                </div>
            </div>*@
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input disabled asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Proposal Name    </label>
                </div>
            </div>
        </div>
       
        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="form-group col-md-12" style="margin-bottom:40px;">
                @Html.ActionLink("Back", "Index", "Tehsil", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>


</div>
