@model IEnumerable<Libraries.Model.Entity.Undersection22>
@{int rowNo = 0; }

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Under Section-22 Details   </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div>
    @Html.ActionLink("Add New", "Create", "UnderSection22Details", null, new { @class = "btn btn-primary pull-right dda-pageheading", style = "margin-top: -10px;" })
</div>
<br />
<br />
<div class="container-fluid">
    <div class="card  table-card table-responsive">

        <table class="table  table-bordered table-card">
            <thead class="thead">
                <tr>
                    <th>Sr.No</th>

                    <th>Notification No.</th>
                    <th>Notification Date</th>

                    <th>Status</th>
                    <th>Operation</th>
                </tr>


            </thead>
            <tbody class="tbody">
                @foreach (var item in Model)
                {
                <tr>
                    <td>@(rowNo += 1)</td>

                    <td>@item.NotificationNo</td>
                   
                    <td>@(Convert.ToDateTime(item.NotificationDate).ToString("dd-MMM-yyyy"))</td>
                    <td>
                        @(item.IsActive  == 1 ? "Active" : "Inactive" )
                    </td>
                    <td>
                        <a asp-action="View" asp-route-id="@item.Id" title="View">  <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> </a>

                        <a asp-action="Edit" asp-route-id="@item.Id" title="edit"> &nbsp; | &nbsp;  <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" title="delete" onclick="return confirm('Are You Sure, You want to Delete this Record?')">   &nbsp;|&nbsp;<i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>

                    </td>

                </tr>
                }

            </tbody>
        </table>

    </div>
</div>
