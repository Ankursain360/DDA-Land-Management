@model Libraries.Model.Entity.Appealdetail
@await Component.InvokeAsync("PageHeader", new { pageName = "Appeal Details" })

<div class="pt-3">
    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Edit Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="DemandListNo" placeholder="Demand List No" type="text"
                           class="floating-label-field floating-label-field--s3" limit="200" />

                    <span asp-validation-for="DemandListNo" class="text-danger"></span>

                    <label class="floating-label">Demand List No<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="EnmSno" placeholder="Enm Sno" type="text"
                           class="floating-label-field floating-label-field--s3" limit="200" />

                    <span asp-validation-for="EnmSno" class="text-danger"></span>

                    <label class="floating-label">Enm Sno <span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="AppealNo" placeholder="Appeal No" type="text"
                           class="floating-label-field floating-label-field--s3" limit="200" />

                    <span asp-validation-for="AppealNo" class="text-danger"></span>

                    <label class="floating-label">Appeal No<span style="color:red">*</span> </label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <label>
                            Appeal By Department:<span style="color:red">*</span>
                        </label>
                    </div>
                    <div class="col-md-3">
                        <input type="hidden" asp-for="AppealByDept" />

                        <div class="form-check theme">
                            <input class="form-check-input" type="radio" asp-for="AppealByDept" name="villageradio" id="rUOI" value="UOI" checked="checked">
                            <label class="form-check-label" for="radio">
                                UOI
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check theme">
                            <input class="form-check-input" type="radio" asp-for="AppealByDept" name="villageradio" id="rDDA" value="DDA">
                            <label class="form-check-label" for="radio">
                                DDA
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-check theme">
                            <input class="form-check-input" asp-for="AppealByDept" type="radio" name="villageradio" id="OtherDDA" value="Department">
                            <label class="form-check-label" for="radio">
                                Other
                            </label>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row mt-md-3" id="Departmentdiv" style="display:none">
            <div class="col-md-6 ">
                <input asp-for="Department" placeholder="Department" type="text"
                       class="floating-label-field floating-label-field--s3" />

                @*<span asp-validation-for="Department" class="text-danger"></span>*@

                <label class="floating-label"> Department </label>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="DateOfAppeal" placeholder="Date Of Appeal" type="Date"
                           class="floating-label-field floating-label-field--s3" />

                    <span asp-validation-for="DateOfAppeal" class="text-danger"></span>

                    <label class="floating-label">Date Of Appeal </label>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="PanelLawer" placeholder="Panel Lawyer" type="text"
                           class="floating-label-field floating-label-field--s3" limit="500" />

                    <span asp-validation-for="PanelLawer" class="text-danger"></span>

                    <label class="floating-label">Panel Lawyer </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status <span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "AppealDetail", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>

</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/appealdetailcreateedit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/appealdetailcreateedit.min.js" asp-append-version="true"></script>
</environment>
