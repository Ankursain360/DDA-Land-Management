    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="pt-3">
    <form asp-action="Edit" id="create_user" enctype="multipart/form-data" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
