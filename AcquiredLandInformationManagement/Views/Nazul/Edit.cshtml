        <div class="row pt-3">

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="hidden" asp-for="DocumentName" />
                    @{
                        @if (Model.DocumentName != null)
                        {
                            <input type="file" asp-for="DocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                            <a class="badge  bg-primary px-2" asp-action="ViewUploadedDocument" asp-route-id="@Model.Id" target="_blank"> (View File)</a>
                        }
                        else
                        {
                            <input type="file" asp-for="DocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                        }
                    }
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="DocumentName"></span>
                    <label class="floating-label">Upload GOI Notification Document</label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="hidden" asp-for="DocumentNameSizra" />
                    @{
                        @if (Model.DocumentNameSizra != null)
                        {
                            <input type="file" asp-for="DocumentSizraIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                            <a class="badge  bg-primary px-2" asp-action="ViewUploadedDocument" asp-route-id="@Model.Id" target="_blank"> (View File)</a>
                        }
                        else
                        {
                            <input type="file" asp-for="DocumentSizraIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                        }
                    }
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="DocumentNameSizra"></span>
                    <label class="floating-label">Sizra Map Upload</label>
                </div>
            </div>
        </div>
        <div class="pt-3">

            <h3 class="mb-3 d-flex">Area</h3>


            <div class="row">
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">



                        <input limit="4" placeholder="Bigha" type="text" asp-for="Bigha" class="floating-label-field floating-label-field--s3 onlynumbers" />
                        <span asp-validation-for="Bigha" class="text-danger"></span>
                        <label class="floating-label">Bigha</label>

                    </div>
                </div>

                <div class="form-group col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">



                        <input limit="2" type="text" asp-for="Biswa" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Biswa" />
                        <span asp-validation-for="Biswa" class="text-danger"></span>
                        <label class="floating-label">Biswa</label>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">



                        <input limit="2" type="text" asp-for="Biswanshi" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Biswa" />
                        <span asp-validation-for="Biswanshi" class="text-danger"></span>
                        <label class="floating-label">Biswanshi</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>



        <div class="row mt-md-3">
            <div class=" col-md-12">
                <input type="submit" value="Update" class="btn btn-theme" onclick="return PasswordMatch();" />
                @Html.ActionLink("Back", "Index", "Nazul", null, new { @class = "btn btn-theme" })
            </div>
        </div>

    </form>
</div>

<environment include="Development">
    <script src="~/js/nazulcreateedit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/nazulcreateedit.min.js" asp-append-version="true"></script>
</environment>




