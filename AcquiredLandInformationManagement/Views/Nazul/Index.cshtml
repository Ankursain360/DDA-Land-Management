@model IEnumerable<Libraries.Model.Entity.Nazul>
@{int rowNo = 0; }


<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Nazul Village</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Create" class="btn btn-primary pull-right dda-pageheading " style="margin-top: -10px;">Add New</a>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="card  table-card">

        <table class="table table-responsive table-bordered table-card">

            <thead class="thead">
                <tr class="myapp-hed1">
                    <th>Sr.No</th>
                    <th>Village</th>
                    <th>Jarai/Sakni</th>
                    <th>Language</th>
                    <th>Year Of Consolidation</th>
                    <th>Year Of Jamabandi</th>
                    <th>Last Mutation No</th>
                    <th>Remarks</th>
                    <th>Active Status</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody class="tbody">
                @foreach (var item in Model)
                {
                <tr>
                    <td>@(rowNo += 1)</td>
                    <td>@item.VillageId</td>
                    <td>@(item.JaraiSakni == 0 ? "Jarai" : "Sakani")</td>
                    <td>@(item.Language == 0 ? "Hindi" : "Urdu")</td>
                    <td>@item.YearOfConsolidation.ToString("dd-MMM-yyyy")</td>
                    <td>@item.YearOfJamabandi.ToString("dd-MMM-yyyy")</td>

                    <td>@item.LastMutationNo</td>
                    <td>@item.Remarks</td>

                    <td>@(item.IsActive == 1 ? "Active" : "InActive")</td>
                    <td>
                        <a asp-action="View" asp-route-id="@item.Id" title="View">  <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> </a>

                        <a asp-action="Edit" asp-route-id="@item.Id" title="edit"> &nbsp; | &nbsp;  <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>

                        <a asp-action="DeleteConfirmed" asp-route-id="@item.Id" title="delete" onclick="return confirm('Are You Sure, You want to Delete this Record?')">   &nbsp;|&nbsp;<i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>
                    </td>

                </tr>

                }
            </tbody>

        </table>

    </div>
</div>


