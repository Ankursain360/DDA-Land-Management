
@model Libraries.Model.Entity.Nazul
@await Component.InvokeAsync("PageHeader", new { pageName = "Nazul Villages" })

<div class="pt-3">
    <form asp-action="View" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select class="floating-label-field floating-label-field--s3" asp-for="VillageId" asp-items="@(new SelectList(Model.VillageList, "Id","Name"))">
                        <option>Select</option>
                    </select>
                    <span asp-validation-for="VillageId" class="text-danger"></span>
                    <label class="floating-label">Village Name</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="YearOfConsolidation" type="date" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="YearOfConsolidation" class="text-danger"></span>
                    <label class="floating-label">Year of Consolidation</label>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="form-check theme">
                    @*<label class="control-label lb-sm">Jarai/Sakni</label>
                    <div class="form-row">
                        <div class="form-group col-md-4">*@

                    <input class="form-check-input" type="radio" asp-for="JaraiSakani" id="rdbJarai" value="1" />
                    <label class="form-check-label" for="radio">
                        Jarai
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check theme">

                    <input class="form-check-input" type="radio" asp-for="JaraiSakani" id="rdbsakni" value="2" />
                    <label class="form-check-label" for="radio">
                        Sakani
                    </label>
                </div>
            </div>



            <div class="col-md-3">
                <div class="form-check theme">
                    @*<label class="control-label lb-sm">Language</label>
                    <div class="form-row">
                        <div class="form-group col-md-4">*@

                    <input class="form-check-input" type="radio" asp-for="Language" id="rdbhindi" value="1" />
                    <label class="form-check-label" for="radio">
                        Hindi
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check theme">

                    <input class="form-check-input" type="radio" asp-for="Language" id="rdburdu" value="2" />
                    <label class="form-check-label" for="radio">
                        Urdu
                    </label>
                </div>
            </div>
        </div>


        <div class="row pt-3">

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">



                    <input asp-for="YearOfJamabandi" type="date" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="YearOfJamabandi" class="text-danger"></span>
                    <label class="floating-label">Year of Jamabandi</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="LastMutationNo" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="LastMutationNo" class="text-danger"></span>
                    <label class="floating-label">Last Mutation No.</label>
                </div>
            </div>
        </div>

        

        <div class="row mt-md-3">
            <div class=" col-md-12">
                @Html.ActionLink("Back", "Index", "Nazul", null, new { @class = "btn btn-theme" })
            </div>
        </div>

    </form>
</div>
    
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
