@model Libraries.Model.Entity.Awardplotdetails
@await Component.InvokeAsync("PageHeader", new { pageName = "Award Plot Details" })

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">
            Add Details
            <span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span>
        </h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="AwardMasterId"
                            asp-items="@(new SelectList(Model.AwardmasterList, "Id","AwardNumber"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="AwardMasterId" class="text-danger"></span>
                    <label class="floating-label" asp-for="AwardMasterId">Award No.<span style="color:red">*</span></label>

                </div>
            </div>
            <div class="col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="VillageId"
                            asp-items="@(new SelectList(Model.VillageList, "Id","Name"))"
                            onchange="return onChange(this.options[this.selectedIndex].value);">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="VillageId" class="text-danger"></span>
                    <label class="floating-label" asp-for="VillageId">Village Name<span style="color:red">*</span></label>

                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="KhasraId"
                            asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger"></span>
                    <label class="floating-label" asp-for="KhasraId">Khasra No<span style="color:red">*</span></label>

                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <label class="floating-label"> </label>

                </div>
            </div>
        </div>

        <div class="pt-3">
            <h3 class="my-3 sub-heading">Actual Area</h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input  type="text" id="Bigha1" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Bigha" readonly />

                    <label class="floating-label">Bigha</label>

                </div>
            </div>

            <div class="form-group col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input  type="text" id="Biswa1" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Biswa" readonly />

                    <label class="floating-label">Biswa</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input  type="text" id="Biswanshi1" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Biswanshi" readonly />

                    <label class="floating-label">Biswanshi</label>
                </div>
            </div>
        </div>

        <div id="Divclsification">

            <h2 class="my-3 sub-heading">Award Area</h2>
            <div class="row pt-3">
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input limit="4" asp-for="Bigha" placeholder="Bigha" class="floating-label-field floating-label-field--s3 onlynumbers" type="text" />
                        <span asp-validation-for="Bigha" class="text-danger"></span>

                        <label class="floating-label">Bigha<span style="color:red">*</span></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input limit="2" asp-for="Biswa" placeholder="Biswa" class="floating-label-field floating-label-field--s3 onlynumbers" type="text" />
                        <span asp-validation-for="Biswa" class="text-danger"></span>
                        <label class="floating-label">Biswa<span style="color:red">*</span></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input limit="2"  asp-for="Biswanshi" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Biswanshi" type="text" />
                        <span asp-validation-for="Biswanshi" class="text-danger"></span>
                        <label class="floating-label">Biswanshi<span style="color:red">*</span></label>
                    </div>
                </div>
            </div>
        </div>


        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="Remarks" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="1000">

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label asp-for="Remarks" class="floating-label">Remarks </label>
                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status <span style="color:red">*</span></label>
                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Submit</button>
                @Html.ActionLink("Back", "Index", "AwardPlotDetails", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>


<div class="table-section bg-white border shadow rounded">
    <div class="table-responsive ">
        <div id="divAwardTable"></div>
    </div>


</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">

    <script src="~/js/awardplotdetailscreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/awardplotdetailscreate.min.js" asp-append-version="true"></script>
</environment>




