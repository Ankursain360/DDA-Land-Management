@model Libraries.Model.Entity.Jointsurvey
@{ ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Component.InvokeAsync("PageHeader", new { pageName = "Joint Survey Details" })
<div class="pt-3">
    <form asp-action="Create" autocomplete="off" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="mb-3 d-flex">Add Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="VillageId" class="floating-label-field floating-label-field--s3"
                            asp-items="@(new SelectList(Model.VillageList,"Id","Name"))">
                        <option value="">---Select---</option>

                    </select>
                    <span asp-validation-for="VillageId" class="text-danger "></span>
                    <label class="floating-label">Village <span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="KhasraId" class="floating-label-field floating-label-field--s3"
                            asp-items="@(new SelectList(Model.KhasraList,"Id","Name"))">
                        <option value="">---Select---</option>

                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger "></span>
                    <label class="floating-label">Khasra <span style="color:red">*</span> </label>
                </div>
            </div>

        </div>



        <h3 class="my-3 d-flex sub-heading">Site Position</h3>
        <div class="row">
            <div class="col-md-3">
                <input type="hidden" asp-for="SitePosition" />              
                <div class="form-check theme">
                    <input class="form-check-input chkAction" type="checkbox" asp-for="IsBuiltup">
                    <label class="form-check-label" for="checkbox">
                        Built Up
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check theme">
                    <input class="form-check-input chkAction" type="checkbox" asp-for="IsPartialBuiltup">
                    <label class="form-check-label" for="checkbox">
                        Partial Built Up
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check theme">
                    <input class="form-check-input chkAction" type="checkbox" asp-for="IsVacant">
                    <label class="form-check-label" for="checkbox">
                        Vacant
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check theme">
                    <input class="form-check-input chkAction" type="checkbox" asp-for="IsBoundary">
                    <label class="form-check-label" for="checkbox">
                        Boundry Wall
                    </label>
                </div>
            </div>
        </div>

        <h3 class="my-3 d-flex sub-heading">Area</h3>
        <div class="row mt-md-3">


            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="AreaInBigha" type="text" class="floating-label-field floating-label-field--s3 onlynumbers" limit="4" placeholder="Name" />

                    <span asp-validation-for="AreaInBigha" class="text-danger "></span>
                    <label class="floating-label">Area in Bigha <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="AreaInBiswa" type="text" limit="2" class="floating-label-field floating-label-field--s3 onlynumbers" placeholder="Name" />

                    <span asp-validation-for="AreaInBiswa" class="text-danger "></span>
                    <label class="floating-label">Area in Biswa <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="NatureOfStructure" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name"
                           limit="200">
                    <span asp-validation-for="NatureOfStructure" class="text-danger "></span>
                    <label class="floating-label">Nature of Structure</label>
                </div>
            </div>

        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="JointSurveyDate" type="date" class="floating-label-field floating-label-field--s3">
                    <span asp-validation-for="JointSurveyDate" class="text-danger "></span>
                    <label class="floating-label">Joint Survey Date <span style="color:red">*</span></label>
                </div>
            </div>


            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-12">

                <div class="floating-label-wrap mb-3 mb-md-0">
                    <textarea asp-for="Remarks" placeholder="Description" class="floating-label-field floating-label-field--s3"></textarea>

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label class="floating-label">Remarks  </label>
                </div>


            </div>

        </div>

        <div class="row mt-md-3">
            <div class="col-md-12">
                <input type="submit" value="Submit" class="btn btn-theme" />

                @Html.ActionLink("Back", "Index", "JointSurvey", null, new { @class = "btn btn-theme" })
            </div>
        </div>





    </form>

</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/JointSurveyView.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/JointSurveyView.min.js" asp-append-version="true"></script>
</environment>
