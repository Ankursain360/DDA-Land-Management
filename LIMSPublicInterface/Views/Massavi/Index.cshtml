                        @Html.ActionLink("Back", "Index", "Villages", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>



            </form>

            <div>
                <br /> <br /> <br /> <br />
                <br />
                @{
                    @if (ViewBag.IsShowData == "Yes")
                    {
                        <div class="form-row" id="divDataLoad">
