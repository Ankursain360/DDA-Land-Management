        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">Village And Sheets Details </h6>
        </div>
        <div class="panel-body">
            <form method="post" asp-action="Index" id="1">
                @*asp-action="Create"*@
