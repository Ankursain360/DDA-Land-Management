                                    <table class="table table-striped table-bordered" border="0">
                                        <thead class="thead">
                                            <tr class="justify-content-center">
                                                <td >
                                                    <a style="color:white;" href="#">1</a>  <a style="color:white;" href="#">2</a>  <a style="color:white;" href="#">3</a>
                                                </td>

                                            </tr>
                                        </thead>
                                     
                                    </table>
                                </div>
