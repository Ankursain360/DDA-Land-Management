
@model Libraries.Model.Entity.Undersection17plotdetail
@await Component.InvokeAsync("PageHeader", new { pageName = "US17 NOTIFICATION" })


<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Details</h3>
        <div class="row mt-md-3">


            <div class=" col-md-12">
                <div class="floating-label-wrap">

                    <select class="floating-label-field floating-label-field--s3" asp-for="UnderSection17Id">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                        @foreach (var item in Model.Undersection17List)
                        {
                            <option value="@item.Id">@item.Number (  @(Convert.ToDateTime(item.NotificationDate).ToString("dd-MMM-yyyy"))) </option>
                        }

                    </select>
                    <span asp-validation-for="UnderSection17Id" class="text-danger"></span>
                    <label class="floating-label">Notification No(U/S-17)</label>
                </div>
            </div>




        </div>



        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button id="btnReset" class="btn btn-link btn-block d-flex align-items-center justify-content-center" type="reset">
                            <i class="ri-refresh-line mr-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">

                        <input type="submit" value="Generate" id="btnGenerate" class="btn btn-theme" />

                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end mr-auto">
                <div class="floating-label-wrap">
                    <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                        <option value="VILLAGE"> Village</option>


                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" id="btnAscending" title="Ascending order"><i class="ri-sort-asc"></i></span>
                    <span class="btn slow" id="btnDescending" title="Descending order"><i class="ri-sort-desc"></i></span>
                </div>
            </div>


            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">

                <a href="javascript:void(0)" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line mr-2 mr-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>
        <div class="table-responsive px-2">
            <div id="LoadReportView">

            </div>
        </div>
    </div>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/notification17details.js"></script>

</environment>
<environment exclude="Development">
    <script src="~/js/notification17details.min.js" asp-append-version="true"></script>
</environment>

