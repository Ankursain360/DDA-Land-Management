@model Libraries.Repository.Common.PagedResult<Libraries.Model.Entity.Landtransfer>
@{int rowNo = 0;}
    <table class="table table-responsive table-bordered table-card">
        <thead class="thead">
            <tr class="myapp-hed1">
                <th>Sr.No</th>
                <th>Department</th>
                <th>Zone</th>
                <th>Division</th>
                <th>Locality(Village)</th>
                <th>Khasra No.</th>
                <th>Address</th>
                <th>Handed Over By</th>
                <th>Date of Hand Over</th>
                <th>Taken Over By</th>
                <th>Date of Taken Over</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody class="tbody">
            @foreach (var item in Model.Results)
            {
            <tr>
                <td>@(rowNo += 1)</td>
                <td>@item.Department.Name</td>
                <td>@item.Zone.Name</td>
                <td>@item.Division.Name</td>
                <td>@item.Locality.Name</td>
                <td>@item.KhasraNo</td>
                <td>@item.Address</td>
                <td>
                    @item.HandedOverByNameDesingnation
                </td>
                <td>
                    @(item.HandedOverDate != null ? Convert.ToDateTime(item.HandedOverDate).ToString("dd MMM yyyy") : "Not Available")
                </td>
                <td>
                    @item.TakenOverByNameDesingnation
                </td>s
                <td>
                    @(item.DateofTakenOver != null ? Convert.ToDateTime(item.DateofTakenOver).ToString("dd MMM yyyy") : "Not Available")
                </td>
                <td>
                    <a asp-action="View" asp-route-id="@item.Id" title="View">  <i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> </a>

                    <a asp-action="Edit" asp-route-id="@item.Id" title="edit"> &nbsp; | &nbsp;  <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>

                    <a asp-action="Delete" asp-route-id="@item.Id" title="delete" onclick="return confirm('Are You Sure, You want to Delete this Record?')">   &nbsp;|&nbsp;<i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            }
            </tbody>

    </table>
    @await Component.InvokeAsync("Pager", new { totalCount = Model.RowCount, pageNumber = Model.CurrentPage, pageSize = Model.PazeSize })