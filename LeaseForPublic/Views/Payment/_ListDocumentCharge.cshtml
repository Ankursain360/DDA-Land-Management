@model IEnumerable<Dto.Search.PaymentPremiumListDataDto>

<table class="table table-sm table-bordered mb-0 table-striped">
    <thead class="text-nowrap">
        <tr>

            <th>Payment Type </th>
            <th>Due Date</th>
            <th>Due Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @item.LeasePaymentType
                    </td>
                    <td>
                        @(item.ToDate!= null ? Convert.ToDateTime(item.ToDate).ToString("dd-MMM-yyyy") : "Not Available")
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        <a asp-action="PayNowCreate" asp-route-id="@item.Id" title="Pay Now" class="btn btn-theme " style="font-size:.8rem;">Pay Now</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th colspan="14" style="text-align:center"> No Record Available! </th>
            </tr>
        }
    </tbody>
</table>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

