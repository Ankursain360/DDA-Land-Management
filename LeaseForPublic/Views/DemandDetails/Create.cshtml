@model Libraries.Model.Entity.Kycform

@await Component.InvokeAsync("PageHeader", new { pageName = "Demand Details" })

<div class="row">
    <div class="col-md-10">

    </div>

</div>

<br>

<form asp-action="Create"  class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
    <h3 class="mb-3 d-flex">Demand Details as per DDA records (System Generated by the Lease Ground rent/license application) </h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="FileNo" />
    <div class="row d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <div class="table-responsive px-2">
            <div id="divPayment"></div>
        </div>


    </div>

    <h3 class="mb-3 d-flex">Record From Bhoomi Regularly Updated </h3>
    <div class="table-responsive px-2">
        <div id="divPaymentFromBhoomi"></div>
    </div>


    <h3 class="my-3 d-flex sub-heading">If Allottee not agreed with the amount deposited shown in DDA record, He/she can enter the challan details in below table: </h3>
    <div id="Divclsification" class="mt-md-3">

        <div class="row">
            <div class="col-md-3">
                <input type="hidden" id="TypeOfDamageAssessee" value="Original" />

                <div class="form-check theme">
                    <input class="form-check-input" type="radio" name="grpDamageAssesseeType" id="rOriginal" value="Original" checked="checked">
                    <label class="form-check-label" for="radio">
                        Yes
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check theme">
                    <input class="form-check-input" type="radio" name="grpDamageAssesseeType" id="rSubsequent" value="Subsequent">
                    <label class="form-check-label" for="radio">
                        No
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div id="DivForSubsequentPurchaser" style="display:none">

        <h3 class="my-3 d-flex sub-heading">Details to be entered by Applicant in the Lease Ground rent/license application when chosen to update the payments at applicant’s level)</h3>



        <div class="table-section bg-white border shadow rounded">
            <div class="table-responsive">
                <table class="table table-sm table-bordered mb-0 table-striped" id="tbl_DamageAssessee">
                    <thead class="text-nowrap">
                        <tr>
                            <th>Sr.No</th>
                            <th>Payment Type (Ground Rent/License Fee/Interest etc.)</th>
                            <th>Period From –To (Optional)</th>
                            <th>Challan No./Transaction No./UTR No.</th>
                            <th>Amount</th>
                            <th>Date of Payment by the allottee</th>
                            <th>Proof of Payment in pdf</th>
                            <th>
                                DDA Bank in which credited
                                (Optional)
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbl_DamageAssessee_body">
                    </tbody>
                    <tbody class="tbody" id="addDamageAssessee">
                        <tr id="">
                        <tr>
                            <td>
                                <input required maxlength="45" type="text" class="floating-label-field floating-label-field--s3" id="txtDamageAssesseeName" />
                                @*<span asp-validation-for="Name" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input required maxlength="45" type="text" class="floating-label-field floating-label-field--s3" id="txtDamageAssesseeFather" />
                                @*<span asp-validation-for="FatherName" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input type="text" class="floating-label-field floating-label-field--s3" id="txtDateofWill" />
                                @*<span asp-validation-for="Date" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input type="text" class="floating-label-field floating-label-field--s3" id="txtDateofWill" />
                                @*<span asp-validation-for="Date" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input type="text" class="floating-label-field floating-label-field--s3" id="txtDateofWill" />
                                @*<span asp-validation-for="Date" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input type="text" class="floating-label-field floating-label-field--s3" id="txtDateofWill" />
                                @*<span asp-validation-for="Date" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input type="text" class="floating-label-field floating-label-field--s3" id="txtDateofWill" />
                                @*<span asp-validation-for="Date" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <input type="text" class="floating-label-field floating-label-field--s3" id="txtDateofWill" />
                                @*<span asp-validation-for="Date" class="d-block text-danger field-validation-valid"></span>*@

                            </td>
                            <td>
                                <div class="floating-label-wrap mb-3 mb-md-0">
                                    <a class="delete-record" data-id="0" style="display: none; font-size: 40px;"><i class="ri-indeterminate-circle-fill"></i></a>
                                    <a class="add-record" data-added="0" style="font-size:40px;"><i class="ri-add-circle-fill"></i></a>
                                </div>
                            </td>

                        </tr>



                    </tbody>
                </table>
            </div>
        </div>

    </div>
</form>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/DemandDetailsCreate.js"></script>
</environment>

