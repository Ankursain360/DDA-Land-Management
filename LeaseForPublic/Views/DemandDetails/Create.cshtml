<div class="pt-3">
    @model Dto.Master.LeasePublicDemandPaymentDetailsDto
    @await Component.InvokeAsync("PageHeader", new { pageName = "Demand Details" })

    <div class="row">
        <div class="col-md-10">

        </div>

    </div>

    <br>
   
    <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="KycId" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FileNo" />
        <h3 class="mb-3 d-flex">Demand Details </h3>
        <div class="row d-block rounded border p-3 bg-white search-filer shadow mb-3">
            <div id="KYCFormDetailsDiv">

            </div>
            <h3 class="mb-3 d-flex">Demand Details as per DDA records (System Generated by the Lease Ground rent/license application) </h3>
            <div class="table-responsive px-2">
                <div id="divPayment"></div>
            </div>
        </div>

        <h3 class="mb-3 d-flex">Record From Bhoomi Application </h3>
        <div class="table-responsive px-2">
            <div id="divPaymentFromBhoomi"></div>
        </div>
        <br />

        <div class="row">
            <div class=" col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="TotalPayable" placeholder="Total payable" type="text" disabled
                           class="floating-label-field floating-label-field--s3" />
                    <span class="text-danger"></span>
                    <label class="floating-label">Total payable (Provisional)Rs. <span style="color:red">*</span>  </label>
                </div>
            </div>

            <div class=" col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="TotalPayableInterest" placeholder="Total interest" type="text" disabled
                           class="floating-label-field floating-label-field--s3" />
                    <span class="text-danger"></span>
                    <label class="floating-label">Total Payable interest (Provisional)Rs.<span style="color:red">*</span>  </label>
                </div>
            </div>
            <div class=" col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="TotalDues" placeholder="Total dues" type="text" disabled
                           class="floating-label-field floating-label-field--s3" />
                    <span class="text-danger"></span>
                    <label class="floating-label">Total dues (Provisional)Rs. <span style="color:red">*</span>  </label>
                </div>
            </div>
        </div>
        <h3 class="my-3 d-flex sub-heading">If Allottee not agreed with the amount deposited shown in DDA record, He/she can enter the challan details in below table: </h3>
        <div id="Divclsification" class="mt-md-3">

            <div class="row">
                <div class="col-md-3">
                    <input type="hidden" id="TypeOfDamageAssessee" value="Original" />

                    <div class="form-check theme">
                        <input class="form-check-input" type="radio" name="IsPaymentAgreed" id="rOriginal" value="Y" checked="checked">
                        <label class="form-check-label" for="radio">
                            Yes
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-check theme">
                        <input class="form-check-input" type="radio" name="IsPaymentAgreed" id="rSubsequent" value="N">
                        <label class="form-check-label" for="radio">
                            No
                        </label>
                    </div>
                </div>
            </div>
        </div>


        <div id="DivForSubsequentPurchaser" style="display:none">

            <h3 class="my-3 d-flex sub-heading">Details to be entered by Applicant in the Lease Ground rent/license application when chosen to update the payments at applicant’s level)</h3>



            <div class="table-section bg-white border shadow rounded">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered mb-0 table-striped calculation" id="tbl_posts2">
                        <thead class="text-nowrap">
                            <tr>
                                <th>Sr.No</th>
                                <th>Payment Type (Ground Rent/License Fee/Interest etc.)</th>
                                <th>Period From –To Ex-(dd-mm-yyyy)-(dd-mm-yyyy)</th>
                                <th>Challan No./Transaction No./UTR No.</th>
                                <th>Amount</th>
                                <th>Date of Payment by the allottee</th>
                                <th>Proof of Payment in pdf</th>
                                <th>
                                    DDA Bank in which credited
                                </th>
                            </tr>
                        </thead>
                        @*<tbody id="tbl_posts2_body">
                        </tbody>*@
                        <tbody class="tbody" id="add2">
                            @*<tr id="">*@
                            <tr>
                                <td style="text-align:center;"><span class="sn2">1</span></td>
                                <td>
                                    <input asp-for="PaymentType" type="text" class="floating-label-field floating-label-field--s3" />

                                </td>
                                <td>
                                    <input asp-for="Period" type="text" class="floating-label-field floating-label-field--s3" />

                                </td>
                                <td>
                                    <input asp-for="ChallanNoForPayment" type="text" class="floating-label-field floating-label-field--s3" />


                                </td>
                                <td>
                                    <input asp-for="Amount" id="Amount" type="number" class="floating-label-field floating-label-field--s3" />


                                </td>
                                <td>
                                    <input asp-for="DateofPaymentByAllottee" type="Date" class="floating-label-field floating-label-field--s3" />


                                </td>
                                <td>
                                    <input type="hidden" asp-for="UploadFilePath" />

                                    <input asp-for="Proofinpdf" type="file" class="floating-label-field floating-label-field--s3 " />


                                </td>

                                <td>
                                    <input asp-for="Ddabankcredit" type="text" class="floating-label-field floating-label-field--s3" />

                                </td>

                                <td>
                                    <div class="action-btns">
                                        <a class="remove delete-record2 " title="delete" data-id="0" style="display:none;font-size:30px;"><i class="ri-delete-bin-fill"></i></a>
                                        <a class="view add-record2" data-added="0" title="Add" style="font-size:30px;"><i class="ri-add-circle-fill"></i></a>
                                    </div>
                                </td>

                            </tr>



                        </tbody>
                    </table>
                </div>
            </div>

        </div>



        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Submit</button>
                @Html.ActionLink("Back", "Index", "DemandDetails", null, new { @class = "btn btn-theme" })
            </div>
        </div>
    </form>
</div>
    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <environment include="Development">
        <script src="~/js/DemandDetailsCreate.js"></script>
    </environment>

