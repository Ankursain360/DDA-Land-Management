@model Libraries.Model.Entity.Payment
@await Component.InvokeAsync("PageHeader", new { pageName = "View Payment History" })

<div class="pt-3">
    <form asp-action="Create" enctype="multipart/form-data" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">

        <input type="hidden" id="LeaseTypeId" value="@ViewBag.PaymentTypeId" />
        <input type="hidden" id="AllotmentId" value="@ViewBag.AllotmentId" />
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" id="LeasePaymentType" asp-items="@(new SelectList(ViewBag.LeasePaymentList, "Id", "Name"))" onchange="return GetPayementDetails(this.options[this.selectedIndex].value);">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <label class="floating-label" for="LeasePaymentType">Lease Payment Type </label>
                </div>
            </div>
        </div>
        <br /> <br />
        <div class="table-section bg-white border shadow rounded">

            <div class="table-responsive px-2" id="divTable">

            </div>


        </div>

    </form>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/viewpaymenthistoryindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/viewpaymenthistoryindex.min.js" asp-append-version="true"></script>
</environment>

