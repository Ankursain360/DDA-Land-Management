@model IEnumerable<Dto.Search.ViewPaymentHistoryListDataDto>

<table class="table table-sm table-bordered mb-0 table-striped">
    <thead class="text-nowrap">
        <tr>

            <th>Transaction Type </th>
            <th>Payment Mode</th>
            <th>Transaction No</th>
            <th>Transaction Date</th>
            <th>Due Amount</th>
            <th>Interest Amount</th>
            <th>Total Payable Amount</th>
            <th>Status</th>
            <th>Payment Acknowledgement Reciept</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
        <tr>

            <td>
                @item.LeasePaymentType
            </td>
            <td>
                @item.PaymentMode
            </td>
            <td>
                @item.TransactionNo
            </td>
            <td>
                @(item.TransactionDate != null ? Convert.ToDateTime(item.TransactionDate).ToString("dd-MMM-yyyy") : "Not Available")
            </td>
            <td>
                @item.DueAmount
            </td>
            <td>
                @item.Interest
            </td>
            <td>
                @item.TotalPayableAmount
            </td>
            <td>
                @item.Status
            </td>
            <td>
                <a asp-action="PayNowCreate" asp-route-id="@item.Id" title="Pay Now" class="btn btn-theme " style="font-size:.8rem;">View</a>
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <th colspan="14" style="text-align:center"> No Record Available! </th>
            </tr>
        }
    </tbody>
</table>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

