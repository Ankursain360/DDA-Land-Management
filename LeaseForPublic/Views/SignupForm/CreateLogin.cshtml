<div id="loader-wrapper" class="hide">
    <div id="loader"></div>
    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>
</div>


<div class="container d-flex">
    <div class="fromBg m-auto shadow-lg">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-5">
                <div class="logo d-flex align-items-center mb-4">
                    <img src="~/images/logo.png" alt="DDA" class="d-block me-3">
                    <strong>
                        Delhi Development Authority<br>
                        Government of India
                    </strong>
                </div>
                <form asp-action="CreateLogin" method="post" class="d-block px-2" id="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label class="failedMsg">If you are not Registered ? <a class="" asp-action="Create" asp-controller="SignupForm">Click here to SignUp</a></label>
                    <label class="failedMsg hide" id="err-comm">This Mobile Number is not Registered. <a class="" asp-action="Create" asp-controller="SignupForm">Please Signup</a></label>
                    <label class="successMsg hide" id="shomsgsuccess">OTP Sent successfully, Please enter OTP</label>
                    <label class="successMsg hide" id="suc-comm">OTP Match</label>
                    <div id="login-div">
                        <div class="row">
                            <div class="mb-3 form-icons">
                                <i class="ri-smartphone-line"></i>
                                <input type="text" autocomplete="off" maxlength="10" class="form-control numbers" id="mobile" placeholder="Mobile Number *">                            </div>
                            <label class="failedMsg hide" id="err-mob">Please Enter 10 Digit Mobile No</label>
                        </div>
                        <div class="row  mt-md-3">
                            <div>
                                <div class="d-flex align-items-center">
                                    <button id="signup2" class="btn btn-theme text-white d-flex align-items-center" type="button">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row  mt-md-3 hide" id="sotp"> 
                        <div>
                            <div class="d-flex align-items-center">
                                <input type="password" autocomplete="off" name="otp" id="otp" class="form-control numbers" placeholder="OTP *">
                            </div>
                            <label class="failedMsg hide" id="err-otp">InValid OTP</label>
                        </div>
                        <div class="mt-md-3">
                            <div class="d-flex align-items-center">
                                <button class="btn btn-theme text-white d-flex align-items-center" id="otp-button" type="button"> Submit OTP</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6 col-lg-7">
                <img src="~/images/img.png" alt="DDA" class="d-none d-md-block image-right">
                <img src="~/images/formBg.png" alt="DDA" class="d-block formBg">
            </div>
        </div>
    </div>
</div>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/chart.js/dist/Chart.min.js"></script>
<script src="~/lib/toaster/toastr.min.js"></script>
<environment include="Development">
    <script src="~/js/loginregister.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/loginregister.min.js" asp-append-version="true"></script>
</environment>

<environment include="Development">
    <script src="~/js/site.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>


