@model Libraries.Model.Entity.Leasesignup
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <link href="~images/favicon.ico" rel="shortcut icon" type="image/x-icon" sizes="16x16" />
    <link rel="icon" href="~images/favicon.png" type="image/png" sizes="16x16" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--Site Title-->
    <title>Damage Payee Registration</title>

    <!--    icon css-->
    <link rel="stylesheet" href="/font/icon/remixicon.css" />
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/lib/toaster/toastr.min.css" rel="stylesheet" />
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link href="/css/styleregistration.css" rel="stylesheet" />

</head>
<body>



    <div class="container d-flex">
        <div class="fromBg m-auto shadow-lg">
            <div class="row align-items-center">
                <div class="col-md-6 col-lg-5">
                    <div class="logo d-flex align-items-center mb-4">
                        <img src="~/images/logo.png" alt="DDA" class="d-block me-3">
                        <strong>
                            Delhi Development Authority<br>
                            Government of India
                        </strong>
                    </div>
                    <form asp-action="Create" method="post" class="d-block px-2" id="form">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">

                            <div class="mb-3 form-icons">
                                <i class="ri-user-line"></i>

                                <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Name *">

                            </div>
                            <label style="color:red;display:none; font-size:13px" id="err-name">Please Enter Name</label>
                        </div>

                        <div class="row">
                            <div class="mb-3 form-icons">
                                <i class="ri-smartphone-line"></i>
                                <input type="text" asp-for="MobileNo" class="form-control numbers" id="mobile" placeholder="Mobile Number *">

                            </div>
                            <label style="color:red;display:none; font-size:13px" id="err-mob">Please Enter 10 Digit Mobile</label>
                        </div>

                        <div class="row">

                            <div class="mb-3 form-icons">
                                <i class="ri-mail-line"></i>
                                <input type="text" asp-for="EmailId" id="email" class="form-control" placeholder="Email  *">

                            </div>
                            <label style="color:red;display:none; font-size:13px" id="err-email">Please Enter Valid Email</label>
                        </div>







                        <div class="row  mt-md-3">
                            <div>
                                <div class="d-flex align-items-center">

                                    @*<button id="signup2" class="btn ms-auto me-3 mr-2" type="submit">Register</button>*@

                                    <input id="signup2" type="submit" value="Submit" class="btn btn-theme " />

                                </div>
                            </div>
                        </div>

                        <div class="row  mt-md-3" id="sotp" style="display:none;">


                            <div>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" placeholder="Otp *">
                                </div>
                            </div>
                            <div class="mt-md-3">
                                <div class="d-flex align-items-center">
                                    <button class="btn ms-auto me-3 mr-2" type="submit">Otp Submit</button>
                                </div>
                            </div>

                        </div>







                    </form>

                </div>
                <div class="col-md-6 col-lg-7">
                    <img src="~/images/img.png" alt="DDA" class="d-none d-md-block image-right" width="450">
                    <img src="~/images/formBg.png" alt="DDA" class="d-block formBg">

                </div>
            </div>
        </div>
    </div>



    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <environment include="Development">
        <script src="~/js/signupregister.js"></script>

    </environment>
    <environment exclude="Development">
        <script src="~/js/signupregister.min.js" asp-append-version="true"></script>
    </environment>




    <script src="/lib/chart.js/dist/Chart.min.js"></script>
    <script src="/lib/toaster/toastr.min.js"></script>
</body>
</html>
