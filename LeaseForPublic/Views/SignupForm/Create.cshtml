@*@{ Layout = null;}*@
@model Libraries.Model.Entity.Leasesignup


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}







<div class="container d-flex">
    <div class="fromBg m-auto shadow-lg">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-5">
                <div class="logo d-flex align-items-center mb-4">
                    <img src="~/images/logo.png" alt="DDA" class="d-block me-3">
                    <strong>
                        Delhi Development Authority<br>
                        Government of India
                    </strong>
                </div>
                <form asp-action="Create" method="post" class="d-block px-2" id="form">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label style="color:red; font-size:13px" id="err-otp">Already Registered User? <a class="" asp-action="CreateLogin" asp-controller="SignupForm">Click here to login</a></label>

                    <label style="color:green; display:none; font-size:13px" id="shomsgsuccess">OTP Sent successfully, Please enter OTP</label>
                    <label style="color:red; display:none; font-size:13px" id="err-otp">InValid Otp</label>
                    <label style="color:red;display:none; font-size:13px" id="err-comm">You are already registered with this emaild or mobile number.</label>
                    <label style="color:green;display:none; font-size:13px" id="suc-comm">Otp Match</label>
                    <div id="sinupshow">

                        <div class="row">
                            <div class="mb-3 form-icons">
                                <i class="ri-user-line"></i>

                                <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Name *">

                            </div>
                            <label style="color:red;display:none; font-size:13px" id="err-name">Please Enter Name</label>
                        </div>

                        <div class="row">
                            <div class="mb-3 form-icons">
                                <i class="ri-smartphone-line"></i>
                                <input type="text" asp-for="MobileNo" class="form-control numbers" id="mobile" placeholder="Mobile Number *">

                            </div>
                            <label style="color:red;display:none; font-size:13px" id="err-mob">Please Enter 10 Digit Mobile No</label>
                        </div>

                        <div class="row">

                            <div class="mb-3 form-icons">
                                <i class="ri-mail-line"></i>
                                <input type="text" asp-for="EmailId" id="email" class="form-control" placeholder="Email  *">

                            </div>
                            <label style="color:red;display:none; font-size:13px" id="err-email">Please Enter Valid Email</label>
                        </div>







                        <div class="row  mt-md-3">
                            <div>
                                <div class="d-flex align-items-center">

                                    <button id="signup2" class="btn btn-theme text-white d-flex align-items-center" type="button">Register</button>
                                    @*<a class="btn btn-theme text-white d-flex align-items-center" asp-action="CreateLogin" asp-controller="SignupForm">Go To Login <i class="ri-arrow-right-line ms-3"></i></a>*@


                                    @*<input id="signup2" type="submit" value="Submit" class="btn btn-theme " />*@

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row  mt-md-3" id="sotp" style="display:none;">


                        <div>
                            <div class="d-flex align-items-center">
                                <input type="password" name="otp" id="otp" class="form-control numbers" placeholder="OTP *">

                            </div>


                        </div>
                        <div class="mt-md-3">
                            <div class="d-flex align-items-center">
                                <button class="btn btn-theme text-white d-flex align-items-center" id="otp-button" type="button">OTP Submit</button>

                            </div>
                        </div>

                    </div>







                </form>

            </div>
            <div class="col-md-6 col-lg-7">
                <img src="~/images/img.png" alt="DDA" class="d-none d-md-block image-right" width="450">
                <img src="~/images/formBg.png" alt="DDA" class="d-block formBg">

            </div>
        </div>
    </div>
</div>



<environment include="Development">
    <script src="~/js/signupregister.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/signupregister.min.js" asp-append-version="true"></script>
</environment>
