
@model Libraries.Model.Entity.Leasesignup

<div class="dropdown user text-white order-md-4">
    <a href="#" role="button" id="profile"
       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
       class="p-2 d-block text-white no-dec">
        <div class="d-flex align-items-center profile">
            <figure class="m-0 d-none">
                <img src="~/images/favicon.png" alt="user-image" class="rounded-circle" width="34" height="34" />
            </figure>
            <strong class="text-img rounded-circle d-block">
                @ViewBag.Title.Substring(0, 1)
            </strong>
            <span class="ms-2 d-none d-md-block">Hi @ViewBag.Title</span>
        </div>
    </a>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profile">
        <div class="text-center drop-detail">
            <figure class="m-0">
                <img class="rounded-circle shadow-sm border" src="~/images/face.jpg">
            </figure>
            <h3>@ViewBag.Title</h3>
            @*<p class="text-muted px-3">@Model.User.UserName</p>*@
        <p class="text-muted px-3">@ViewBag.Title1</p>
            <ul class="list-unstyled m-0 p-0">
                <li>
                    <a href="javascript:void(0)" class="d-flex align-items-center">
                        <i class="ri-user-add-line me-3"></i>
                        Edit Profile
                    </a>
                </li>
                <li>
                    <a href="/home/logout" class="d-flex align-items-center">
                        <i class="ri-logout-circle-line me-3"></i>
                        Log Out
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>