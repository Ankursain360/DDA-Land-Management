@model Libraries.Model.Entity.Damagecalculation
@{int rowNo = 0; }
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@await Component.InvokeAsync("PageHeader", new { pageName = "Damage Calculation" })


<div class="pt-3">

    <form asp-action="Index" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="PropertyTypeId" id="PropertyTypeId" class="floating-label-field floating-label-field--s3"
                            asp-items="@(new SelectList(Model.PropertyType1,"Id","Name"))">
                        <option value="0">---Select---</option>

                    </select>
                    <span asp-validation-for="PropertyTypeId" class="d-block text-danger field-validation-valid"></span>

                    <label class="floating-label">Property Type</label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="date" id="txtEncroachmentDate"
                           class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Date of Encroachment <span style="color:red">*</span></label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="From Date" type="date" id="txtFromDate"
                           class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> From Date <span style="color:red">*</span></label>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="To Date" type="date" id="txtToDate"
                           class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> To Date <span style="color:red">*</span></label>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="LocalityId" id="LocalityId" class="floating-label-field floating-label-field--s3"
                            asp-items="@(new SelectList(Model.LocalityList,"Id","Name"))">
                        <option value="0">---Select---</option>

                    </select>
                    <span asp-validation-for="LocalityId" class="d-block text-danger field-validation-valid"></span>

                    <label class="floating-label">Locality</label>
                </div>
            </div>


            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Area in sq. yds." type="text" id="txtArea"
                           class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Area in sq. yds.<span style="color:red">*</span></label>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
             
                <input type="button" id="btnCalculate" value="Calculate" class="btn btn-theme"  />
            </div>
        </div>

        <br />
        <div id="DivMainContentForm">

        </div>

    </form>


</div>




<script>

    $(function () {
        var dtToday = new Date();

        var month = dtToday.getMonth() + 1;
        var day = dtToday.getDate();
        var year = dtToday.getFullYear();
        if (month < 10)
            month = '0' + month.toString();
        if (day < 10)
            day = '0' + day.toString();

        var maxDate = year + '-' + month + '-' + day;
        $('#txtEncroachmentDate').attr('max', maxDate);
        $('#txtEncroachmentFromDate').attr('max', maxDate);
        $('#txtEncroachmentToDate').attr('max', maxDate);

        //For Damage Calculation:-
        $("#btnCalculate").click(function () {
            var param = GetSearchParam();
            HttpPost(`/DamageCalculator/DamageCalculate`, 'html', param, function (response) {
                $('#DivMainContentForm').html("");
                $('#DivMainContentForm').html(response);
            });
        });
    });

    function GetSearchParam() {
        var model = {
            PropertyTypeId: $("#PropertyTypeId").children("option:selected").val(),
            EncroachmentDate: $("#txtEncroachmentDate").val(),
            FromDate: $("#txtFromDate").val(),
            ToDate: $("#txtToDate").val(),
            LocalityId: $("#LocalityId").children("option:selected").val(),
            Area: $("#txtArea").val(),
        }
        debugger
        return model;
    }


</script>



