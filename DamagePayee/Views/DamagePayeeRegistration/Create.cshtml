@model Libraries.Model.Entity.Payeeregistration
@await Component.InvokeAsync("PageHeader", new { pageName = "Damage Payee Registration" })

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-for="Name" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Name <span style="color:red">*</span></label>
                </div>
            </div>


            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="MobileNumber" placeholder="Mobile No." type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="MobileNumber" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Mobile No. <span style="color:red">*</span></label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="EmailId" placeholder="Email ID" type="email"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="EmailId" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Email ID<span style="color:red">*</span></label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" asp-for="CaptchaCode" placeholder="Captcha Code" class="floating-label-field floating-label-field--s3" maxlength="4">
                    <label class="floating-label">Captcha<span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-2 pull-right">
                <div class="codeImg">
                    <img id="img-captcha" src="~/get-captcha-image" />
                </div>
            </div>
            <div class="col-md-4 pull-left">
                <span class="ri-refresh-line" style="font-size:26px" id="refreshcaptcha"></span>
            </div>
        </div>

        <div class="row">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Create</button>
                @Html.ActionLink("Back", "Index", "DamagePayeeRegistration ", null, new { @class = "btn btn-theme " })

            </div>


        </div>
    </form>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/CaptchaCreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/CaptchaCreate.min.js" asp-append-version="true"></script>
</environment>