@model Libraries.Model.Entity.Payeeregistration
@await Component.InvokeAsync("PageHeader", new { pageName = "Damage Payee Registration" })



<br />

<br />
<div class="pt-3">

    <form asp-action="Edit" disabled="disabled" id="myForm" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-for="Name" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Name <span style="color:red">*</span></label>
                </div>
            </div>


            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="MobileNumber" placeholder="Mobile No." type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="MobileNumber" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Mobile No. <span style="color:red">*</span></label>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="EmailId" placeholder="Email ID" type="email"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="EmailId" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Email ID<span style="color:red">*</span></label>
                </div>
            </div>

            @*<div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <captcha id="ExampleCaptcha" user-input-id="CaptchaCode" />
                        <input placeholder="Captcha" type="email"
                               class="floating-label-field floating-label-field--s3" limit="100" />
                        <span class="d-block text-danger field-validation-valid"></span>
                        <label class="floating-label">Captcha<span style="color:red">*</span></label>
                    </div>
                </div>
            </div>*@
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-12" style="margin-bottom:40px;">
                @Html.ActionLink("Back", "Index", "Structure", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>


</div>
