                &nbsp;&nbsp;
                <input id="email" name="email" type="radio">
                &nbsp;Search by File Name &nbsp;
                <input style="height:18px; width:100px; background-color:#dddddd" id="email" name="email" type="text">

            </h6>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" action="" method="post">
                <fieldset>


                    <!-- Name input-->
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name"> Property/House/Municipal No.</label>
                            <input id="email" name="email" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name">Locality Name</label>
                            <input id="email" name="email" type="text" class="form-control">

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name">Floor No (if purchased floor wise)</label>
                            <input id="email" name="email" type="text" class="form-control">

                        </div>
                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name">Road/Street Name</label>
                            <input id="email" name="email" type="text" class="form-control">

                        </div>
                    </div>

                    <div class="form-group">


                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name">Pincode</label>
                            <input id="email" name="email" type="text" class="form-control">

                        </div>


                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name">District</label>
                            <input id="email" name="email" type="text" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label lb-sm" for="name">Plot Area in sq.yds</label>
                            <input id="email" name="email" type="text" class="form-control">

                        </div>

                    </div>
                                        <!-- Form actions -->

                </fieldset>
            </form>

            <div class="panel panel-container" style="border-bottom:double; border-color:rebeccapurple; overflow:hidden">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body ">
                                <div class="table-responsive">
                                    <table id="mytable" class="table table-striped table-bordered" border="0">
                                        <thead class="thead">
                                            <tr>
                                                <th></th>
                                                <th>Sr.No</th>
                                                <th>Demand Date</th>
                                                <th>Demand Amount</th>



                                            </tr>
                                        </thead>
                                        <tbody class="tbody">
                                            <tr>
                                                <th class="first_plus" style="cursor:pointer" onclick="showcollection(1);">
                                                    <i class="fa fa-plus" aria-hidden="true"></i>


                                                </th>
                                                <th class="first_minus" style="cursor:pointer;display:none" onclick="showcollection(2);">
                                                    <i class="fa fa-window-minimize" aria-hidden="true"></i>


                                                </th>
                                                <td>1.</td>

                                                <td>01/01/2020</td>
                                                <td>200000</td>

                                            </tr>



                                            <tr class="thead tr-hide" id="showcollection">
                                                <th></th>
                                                <th>Collection Date</th>
                                                <th>Collection Amount</th>
                                                <th>Pay type</th>

                                            </tr>


                                            <tr class="tr-hide">
                                                <td></td>
                                                <td>02-02-2020</td>
                                                <td>50000</td>
                                                <td>Damage Amount</td>

                                            </tr>
                                            <tr class="tr-hide">
                                                <td></td>
                                                <td>03-02-2020</td>
                                                <td>20000</td>
                                                <td>Interest Amount</td>

                                            </tr>





                                            <tr>
                                                <th class="second_plus" style="cursor:pointer" onclick="showcollection_2(1);">
                                                    <i class="fa fa-plus" aria-hidden="true"></i>

                                                </th>
                                                <th class="second_minus" style="cursor:pointer;display:none" onclick="showcollection_2(2);">
                                                    <i class="fa fa-window-minimize" aria-hidden="true"></i>

                                                </th>
                                                <td>2.</td>

                                                <td>01/01/2020</td>
                                                <td>200000</td>

                                            </tr>
                                            <tr class="thead tr-hide2" id="showcollection">
                                                <th></th>
                                                <th>Collection Date</th>
                                                <th>Collection Amount</th>
                                                <th>Pay type</th>

                                            </tr>


                                            <tr class="tr-hide2">
                                                <td></td>
                                                <td>02-02-2020</td>
                                                <td>50000</td>
                                                <td>Damage Amount</td>

                                            </tr>
                                            <tr class="tr-hide2">
                                                <td></td>
                                                <td>03-02-2020</td>
                                                <td>20000</td>
                                                <td>Interest Amount</td>

                                            </tr>


                                    </table>
                                </div>

                            </div>


                            <br />


                        </div>
                    </div>
                </div>
            </div>


        </div>
