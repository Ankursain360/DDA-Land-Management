</div>

<script>
    function showcollection(val) {

        if (val == 1) {
            $(".first_minus").show();
            $(".first_plus").hide();
        } else {
            $(".first_plus").show();
            $(".first_minus").hide();
        }
        $(".tr-hide").toggle();
        //$("#showtr").toggle();

    }
    function showcollection_2(val) {
        if (val == 1) {
            $(".second_minus").show();
            $(".second_plus").hide();
        } else {
            $(".second_plus").show();
            $(".second_minus").hide();
        }
        $(".tr-hide2").toggle();
        //$("#showtr").toggle();

    }
</script>

