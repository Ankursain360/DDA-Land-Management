@model IEnumerable<Dto.Search.DamagePayeeDashboardList>
@await Component.InvokeAsync("PageHeader", new { pageName = "Damage Pay Dashboard" })
<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Search</h3>
        <div class="row">
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="date" id="todate" class="floating-label-field floating-label-field--s3" />
                    <label for="todate" class="floating-label">To Date</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="date" id="fromDate" class="floating-label-field floating-label-field--s3" />
                    <label for="fromDate" class="floating-label">From Date</label>
                </div>
            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button class="btn btn-link btn-block d-flex align-items-center justify-content-center" id="btnReset" type="reset">
                            <i class="ri-refresh-line me-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">

                        <button class="btn btn-theme btn-block" id="btnGenerate" type="submit">Generate</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">

            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">

                <a href="/DashboardForDamageForm/DamagePayeeReport" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line me-2 me-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>

        <h3 class="my-3 d-flex sub-heading px-2">Damage Record</h3>
        <div class="table-responsive px-2">
            <div id="divDamageDashboard"></div>
        </div>

        <br /><br />

    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/dashboardForDamageForm.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/dashboardForDamageForm.min.js" asp-append-version="true"></script>
</environment>
