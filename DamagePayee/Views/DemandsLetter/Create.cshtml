@model Libraries.Model.Entity.Demandletters
@await Component.InvokeAsync("PageHeader", new { pageName = "Demand letter" })



<div class="pt-3">

    <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div id="DivForFileName">

            <div class="row mt-md-3">
                <div class="form-group col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" style="width:100%;" asp-for="LocalityId"
                                asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))">
                            <option value="0">---Select---</option>
                        </select>
                        <span asp-validation-for="LocalityId" class="text-danger"></span>
                        <label class="floating-label">Locality (Village) Name </label>
                    </div>
                </div>


                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="PropertyNo" />
                        <span asp-validation-for="PropertyNo" class="text-danger"></span>
                        <label class="floating-label"> Property No <span style="color:red">*</span></label>
                    </div>
                </div>
            </div>

            <div class="row mt-md-3">

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="InterestAmount" />
                        <span asp-validation-for="InterestAmount" class="text-danger"></span>
                        <label class="floating-label">Interest Amount <span style="color:red">*</span></label>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="ReliefAmount" />
                        <span asp-validation-for="ReliefAmount" class="text-danger"></span>

                        <label class="floating-label"> Relief Amount <span style="color:red">*</span></label>
                    </div>
                </div>


            </div>



            <div class="row mt-md-3">


                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="FileNo" />
                        <span asp-validation-for="FileNo" class="text-danger"></span>
                        <label class="floating-label"> File No <span style="color:red">*</span></label>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <label class="floating-label"> Name <span style="color:red">*</span></label>
                    </div>
                </div>

            </div>

            <div class="row mt-md-3">


                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="FatherName" />
                        <span asp-validation-for="FatherName" class="text-danger"></span>
                        <label class="floating-label"> Father Name <span style="color:red">*</span></label>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea placeholder="Date of Encroachment" type="text"
                                  class="floating-label-field floating-label-field--s3" asp-for="Address"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                        <label class="floating-label">Full Address <span style="color:red">*</span></label>
                    </div>
                </div>

            </div>



            <div class="row mt-md-3">

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="DamageCharges" />
                        <span asp-validation-for="DamageCharges" class="text-danger"></span>
                        <label class="floating-label">Damage Charges <span style="color:red">*</span></label>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="Penalty" />
                        <span asp-validation-for="Penalty" class="text-danger"></span>
                        <label class="floating-label">Penalty <span style="color:red">*</span></label>
                    </div>
                </div>

            </div>

            <div class="row mt-md-3">


                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input placeholder="Date of Encroachment" type="date" value=""
                               class="floating-label-field floating-label-field--s3" asp-for="UndersignedDate" id="txtundate" />
                        <span asp-validation-for="UndersignedDate" class="text-danger"></span>
                        <label class="floating-label"> UnderSigned Date <span style="color:red">*</span></label>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="UndersignedTime" />
                        <span asp-validation-for="UndersignedTime" class="text-danger"></span>
                        <label class="floating-label">UnderSigned Time<span style="color:red">*</span></label>
                    </div>
                </div>

            </div>

            <div class="row mt-md-3">

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="date" value=""
                               class="floating-label-field floating-label-field--s3" asp-for="DemandPeriodFromDate" />
                        <span asp-validation-for="DemandPeriodFromDate" class="text-danger"></span>
                        <label class="floating-label">Demand Period (From Date)<span style="color:red">*</span></label>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="date" value=""
                               class="floating-label-field floating-label-field--s3" asp-for="DemandPeriodToDate" />
                        <span asp-validation-for="DemandPeriodToDate" class="text-danger"></span>
                        <label class="floating-label">Demand Period (To Date)<span style="color:red">*</span></label>
                    </div>
                </div>

            </div>

            <div class="row mt-md-3">

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="text"
                               class="floating-label-field floating-label-field--s3" asp-for="DepositDue" />
                        <span asp-validation-for="DepositDue" class="text-danger"></span>
                        <label class="floating-label"> Total Amount Due <span style="color:red">*</span></label>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Date of Encroachment" type="date" value=""
                               class="floating-label-field floating-label-field--s3" asp-for="UptoDate" />
                        <span asp-validation-for="UptoDate" class="text-danger"></span>
                        <label class="floating-label">Due Date<span style="color:red">*</span></label>
                    </div>
                </div>

            </div>




            <div class="row mt-md-3">
                <div class="col-md-12">
                    <input type="submit" value="Generate" class="btn btn-theme " />

                    @Html.ActionLink("Back", "Index", "DemandsLetter", null, new { @class = "btn btn-theme " })
                </div>
            </div>


        </div>

        <div id="DivForPayeeName" style="display:none">
            <h3 class="my-3 d-flex sub-heading">By Payee Name</h3>
            <div class="row mt-md-3">
                <div class="form-group col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" style="width:100%;">
                            <option value="0">---Select---</option>
                            <option value="1">Inactive</option>
                        </select>
                        <span class="d-block text-danger field-validation-valid"></span>
                        <label class="floating-label">Zone<span style="color:red">*</span> </label>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" style="width:100%;">
                            <option value="0">---Select---</option>
                            <option value="1">Inactive</option>
                        </select>
                        <span class="d-block text-danger field-validation-valid"></span>
                        <label class="floating-label">Locality(Village)<span style="color:red">*</span> </label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="form-group col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" style="width:100%;">
                            <option value="0">---Select---</option>
                            <option value="1">Inactive</option>
                        </select>
                        <span class="d-block text-danger field-validation-valid"></span>
                        <label class="floating-label">Payee Name<span style="color:red">*</span> </label>
                    </div>
                </div>

            </div>

        </div>



        <div id="LoadView">
        </div>
    </form>

</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<script>

    $(function () {
        $("input[name='grpSearchby']").click(function () {
            if ($("#rdbFilename").is(":checked")) {
                $("#DivForFileName").show();
                $("#DivForPayeeName").hide();
                $("#DivForGenerate").show();
            }
           else if ($("#rdbPayeename").is(":checked")) {
                $("#DivForFileName").hide();
                $("#DivForPayeeName").show();
                $("#DivForGenerate").show();
            }
             
        });
    });




    $("#btnGenerate").click(function () {
        debugger
        var result = ValidateForm();
        if (result) {
            var Id = $("#file_id").val();
            alert(Id);
            $.get(`/NoticeToDamagePayee/GetDetails/?fileNo=${Id}`, function (response) {
               // alert(response);
                $.get(`/NoticeToDamagePayee/GetPersonalInfo/?Id=${response}`, function (res) {
                    alert(res);
                    $('#LoadView').html("");
                    $('#LoadView').html(res);
                });
            });
        }
    });

</script>

