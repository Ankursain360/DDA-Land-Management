@model Libraries.Model.Entity.Demandletters
@await Component.InvokeAsync("PageHeader", new { pageName = "Penalty Imposition Report" })


<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Details <span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span> </h3>
        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="LocalityId"
                            asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))">
                        <option value="0">All</option>
                    </select>
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="LocalityId"></span>
                    <label class="floating-label">Locality (Village) Name<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="Id"
                            asp-items="@(new SelectList(Model.FileNoList, "Id","FileNo"))">
                        <option value="0">All</option>
                    </select>
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="Id"></span>
                    <label class="floating-label"> File No<span style="color:red">*</span> </label>
                </div>
            </div>
        </div>



        <div class="row mt-md-3">
            <div class="col-md-12 ">
                <input type="submit" value="Generate" id="btnGenerate" class="btn btn-theme" />
                <input type="button" value="Reset" id="btnReset" class="btn btn-theme" />

            </div>
        </div>
    </div>


    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end me-auto">
                <div class="floating-label-wrap">
                    <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                        <option value="Locality">Locality</option>
                        <option value="FileNo">File No</option>
                        <option value="PropertyNo">Property No</option>
                        <option value="Name">Payee Name</option>
                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" id="btnAscending" title="Ascending order"><i class="ri-sort-asc"></i></span>
                    <span class="btn slow" id="btnDescending" title="Descending order"><i class="ri-sort-desc"></i></span>
                </div>
            </div>


            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">
              
                <a href="/PenaltyImpositionReport/PenaltyImpositionReportList" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line me-2 me-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>
        <div class="table-responsive px-2">
            <div id="LoadReportView">

            </div>
        </div>
    </div>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/penaltyimpositionreportindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/penaltyimpositionreportindex.min.js" asp-append-version="true"></script>
</environment>
