@model Libraries.Model.Entity.Doortodoorsurvey
@{int Identity = 0;}
@{int Property = 0;}

@await Component.InvokeAsync("PageHeader", new { pageName = "Door To Door Survey" })

<form asp-action="View" enctype="multipart/form-data" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
    <h3 class="mb-3 d-flex">View Details <span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span> </h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <textarea type="text" disabled asp-for="PropertyAddress" class="floating-label-field floating-label-field--s3" limit="500"></textarea>
                <span asp-validation-for="PropertyAddress" class="text-danger"></span>
                <label class="floating-label">Location/Address of Property<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="GeoReferencingLattitude" class="floating-label-field floating-label-field--s3" limit="50" />
                <span asp-validation-for="GeoReferencingLattitude" class="text-danger"></span>
                <label class="floating-label">Lattitude<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input type="text" disabled asp-for="Longitude" class="floating-label-field floating-label-field--s3" limit="50" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
                <label class="floating-label">Longitude<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" disabled asp-for="PresentUseId"
                        asp-items="@(new SelectList(Model.PresentuseList, "Id","Name"))"
                        onchange="return onChange(this.options[this.selectedIndex].value);">
                    <option selected="selected" disabled="disabled" value="">Select </option>
                </select>
                <span asp-validation-for="PresentUseId" class="text-danger"></span>
                <label class="floating-label">Present Use<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="ApproxPropertyArea" class="floating-label-field floating-label-field--s3 numbers" onpaste="return false;" />
                <span asp-validation-for="ApproxPropertyArea" class="text-danger"></span>
                <label class="floating-label">Approx Area of the Property<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input type="text" disabled asp-for="NumberOfFloorsNavigation.Name" class="floating-label-field floating-label-field--s3 onlynumbers" onpaste="return false;" />
                <span asp-validation-for="NumberOfFloors" class="text-danger"></span>
                <label class="floating-label">Number of Floors<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="CaelectricityNo" class="floating-label-field floating-label-field--s3" limit="30" />
                <span asp-validation-for="CaelectricityNo" class="text-danger"></span>
                <label class="floating-label">CA-Number of Electricity Connection(s)</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input type="text" disabled asp-for="KwaterNo" class="floating-label-field floating-label-field--s3" limit="30" />
                <span asp-validation-for="KwaterNo" class="text-danger"></span>
                <label class="floating-label">K-Number of Water Connection(s)</label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input type="text" disabled asp-for="PropertyHouseTaxNo" class="floating-label-field floating-label-field--s3" limit="30" />
                <span asp-validation-for="PropertyHouseTaxNo" class="text-danger"></span>
                <label class="floating-label">Property/House Tax Number issued by MCD/local body if any</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input type="text" disabled asp-for="OccupantName" class="floating-label-field floating-label-field--s3" limit="100" />
                <span asp-validation-for="OccupantName" class="text-danger"></span>
                <label class="floating-label">Name of Occupant<span style="color:red">*</span></label>
            </div>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="Email" class="floating-label-field floating-label-field--s3" limit="50" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <label class="floating-label">E-mail</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="MobileNo" class="floating-label-field floating-label-field--s3" limit="12" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
                <label class="floating-label">Mobile<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="OccupantAadharNo" class="floating-label-field floating-label-field--s3" limit="15" />
                <span asp-validation-for="OccupantAadharNo" class="text-danger"></span>
                <label class="floating-label">Aadhar Number of Occupant<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="text" disabled asp-for="VoterIdNo" class="floating-label-field floating-label-field--s3" limit="15" />
                <span asp-validation-for="VoterIdNo" class="text-danger"></span>
                <label class="floating-label">Voter ID Number<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="hidden" asp-for="OccupantIdentityPrrofFilePath" />
                @{
                    if (Model.Doortodoorsurveyidentityproof != null && Model.Doortodoorsurveyidentityproof.Count > 0)
                    {
                        <br />
                        <input type="file" disabled asp-for="DocumentPhoto" class="floating-label-field floating-label-field--s3" multiple accept="image/jpeg" />

                        foreach (var item in Model.Doortodoorsurveyidentityproof)
                        {
                            <a class="badge bg-primary px-2" asp-action="ViewIdentityProof" asp-route-id="@item.Id" target="_blank"> (View Photo @(Identity += 1 ))</a>
                            <br />
                        }
                    }
                    else
                    {
                        <input type="file" disabled asp-for="DocumentPhoto" class="floating-label-field floating-label-field--s3" multiple accept="image/jpeg" />
                    }
                }
                <span asp-validation-for="OccupantIdentityPrrofFilePath" class="text-danger"></span>
                <label class="floating-label">Identity Proof of the Occupants; Aadhar,Voter Card, DL, Passport</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input type="text" disabled asp-for="DamagePaidPast" class="floating-label-field floating-label-field--s3" limit="45" />
                <span asp-validation-for="DamagePaidPast" class="text-danger"></span>
                <label class="floating-label">Damage Paid in the Past, if any </label>
            </div>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input type="hidden" asp-for="PropertyFilePath" />
                @{
                    if (Model.Doortodoorsurveypropertyproof != null && Model.Doortodoorsurveypropertyproof.Count > 0)
                    {
                        <br />
                        <input type="file" disabled asp-for="PropertyPhoto" class="floating-label-field floating-label-field--s3" multiple accept="image/jpeg" />

                        foreach (var item in Model.Doortodoorsurveypropertyproof)
                        {
                            <a class="badge bg-primary px-2" asp-action="ViewPropertyFile" asp-route-id="@item.Id" target="_blank"> (View Photo @(Property += 1 ))</a>
                            <br />
                        }
                    }
                    else
                    {
                        <input type="file" disabled asp-for="PropertyPhoto" class="floating-label-field floating-label-field--s3" multiple accept="image/jpeg" />
                    }
                }
                <span asp-validation-for="PropertyPhoto" class="text-danger"></span>
                <label class="floating-label">Document of Property, if any</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <select asp-for="IsActive" class="floating-label-field floating-label-field--s3" disabled>
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <label for="field-1" class="floating-label">Status</label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-12">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <textarea type="text" disabled asp-for="Remarks" class="floating-label-field floating-label-field--s3" limit="500"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
                <label class="floating-label">Remarks</label>
            </div>
        </div>
    </div>
    <div class="row mt-md-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <a target="_blank" href="https://maps.google.com/?q=@Model.GeoReferencingLattitude,@Model.Longitude">View Location on Map<i class="ri-map-pin-fill"></i></a>
            </div>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-12">
            @Html.ActionLink("Back", "Index", "Door2DoorSurvey", null, new { @class = "btn btn-theme " })
        </div>
    </div>

</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />