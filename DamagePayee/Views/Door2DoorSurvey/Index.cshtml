@model IEnumerable<Libraries.Model.Entity.Doortodoorsurvey>
@await Component.InvokeAsync("PageHeader", new { pageName = "Door To Door Survey" })

<div class="pt-3">

    <form class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Search</h3>
        <div class="row">
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtLocation" class="floating-label-field floating-label-field--s3" />
                    <label for="txtName" class="floating-label">Location/Address of Property</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtOccupantName" class="floating-label-field floating-label-field--s3">
                    <label for="txtPhoneNumber" class="floating-label">Occupant Name</label>
                </div>
            </div>
            <div class="col-md-3    ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtmobile" class="floating-label-field floating-label-field--s3" />
                    <label for="txtmobile" class="floating-label">Mobile Number</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtpresentuse" class="floating-label-field floating-label-field--s3">
                    <label for="txtpresentuse" class="floating-label">Present Use</label>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtcreatedbynavigation" class="floating-label-field floating-label-field--s3">
                    <label for="txtcreatedbynavigation" class="floating-label">Submitted By</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="date" placeholder="Date" id="txtFromDate" class="floating-label-field floating-label-field--s3" value="" />
                    <label class="floating-label">From Date</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="date" placeholder="Date" id="txtToDate" class="floating-label-field floating-label-field--s3" value="" />
                    <label class="floating-label">To Date</label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button id="btnReset" class="btn btn-link btn-block d-flex align-items-center justify-content-center" type="reset">
                            <i class="ri-refresh-line me-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">
                        <button id="btnSearch" class="btn btn-theme btn-block" type="button">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end me-auto">
                <div class="floating-label-wrap">
                    <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                        <option value="CREATEDDATE">Created Date</option>
                        <option value="LOCATION">Location/Address of Property</option>
                        <option value="OCCUPANTNAME">Occupant Name</option>
                        <option value="STATUS">Status</option>
                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" id="btnAscending" title="Ascending order">    <i class="ri-sort-asc">    </i></span>
                    <span class="btn slow" id="btnDescending" title="Descending order">  <i class="ri-sort-desc"></i></span>
                </div>
            </div>

            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">
                <a href="/Door2DoorSurvey/create" class="d-flex align-items-center btn btn-primary me-2">
                    <i class="ri-add-fill me-2 me-lg-1"></i>
                    <small>Add More</small>
                </a>
                <a href="#" id="Download" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line me-2 me-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>
        <div class="table-responsive px-2" id="divDoortodoorsurveyTable">

        </div>
    </div>

</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/doortodoorsurvey.js"></script>

</environment>
<environment exclude="Development">
    <script src="~/js/doortodoorsurvey.min.js" asp-append-version="true"></script>
</environment>
