@model Libraries.Model.Entity.Noticetodamagepayee
@await Component.InvokeAsync("PageHeader", new { pageName = "Notice To Damage Payee" })

@{ ViewData["Title"] = "Edit"; }


<div class="pt-3">

    <form asp-action="Edit" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
     
        <h3 class="mb-3 d-flex">Edit Details <span style="margin-left:800px"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span> </h3>
        <h3 class="my-3 d-flex sub-heading">By File Name</h3>
        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="text"
                           class="floating-label-field floating-label-field--s3" asp-for="FileNo" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> File No <span style="color:red">*</span></label>
                </div>
            </div>



            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="text" asp-for="Name"
                           class="floating-label-field floating-label-field--s3" id="file_id" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Name <span style="color:red">*</span></label>
                </div>
            </div>


        </div>



        <div class="row">

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="text" asp-for="Address"
                           class="floating-label-field floating-label-field--s3" id="file_id" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Address <span style="color:red">*</span></label>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="text" asp-for="PropertyDetails"
                           class="floating-label-field floating-label-field--s3" id="file_id" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Property Details <span style="color:red">*</span></label>
                </div>
            </div>

        </div>



        <div class="row">

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="text"
                           class="floating-label-field floating-label-field--s3" asp-for="Area" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label"> Area <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" type="text"
                           class="floating-label-field floating-label-field--s3" asp-for="InterestPercentage" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Interest % <span style="color:red">*</span></label>
                </div>
            </div>

        </div>

        <div class="row pt-3">
            <div class="col-md-12">
                <input type="submit" value="Update" class="btn btn-theme " />

                @Html.ActionLink("Back", "Index", "NoticeToDamagePayee", null, new { @class = "btn btn-theme " })
            </div>
        </div>
    </form>

</div>
