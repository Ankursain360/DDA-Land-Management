@model Libraries.Model.Entity.MonthlyRoaster
@await Component.InvokeAsync("PageHeader", new { pageName = "Monthly Roster" })
<div class="pt-3">
    <div class="container-fluid" id="MainContentForm">
        <div class="panel">
            <div class="panel-body">
                <form method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
                    <h3 class="mb-3 d-flex">View Details</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Template" />
                                <select class="floating-label-field floating-label-field--s3" disabled asp-for="DepartmentId" asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))" onchange="onChangeDepartment(this.value);">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="DepartmentId" class="floating-label">Department</label>
                                <span asp-validation-for="DepartmentId" id="DepartmentMessage" class="text-danger lb-sm" style="display:none;">Department is Mandatory</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" disabled asp-for="ZoneId" asp-items="@(new SelectList(Model.ZoneList, "Id","Name"))" onchange="onChangeZone(this.value);">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="ZoneId" class="floating-label">Zone</label>
                                <span asp-validation-for="ZoneId" id="ZoneMessage" class="text-danger lb-sm" style="display:none;">Zone is Mandatory</span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-3">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" disabled asp-for="DivisionId" asp-items="@(new SelectList(Model.DivisionList, "Id","Name"))" onchange="onChangeDivision(this.value)">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="DivisionId" class="floating-label">Division</label>
                                <span asp-validation-for="DivisionId" id="DivisionMessage" class="text-danger lb-sm" style="display:none;">Division is Mandatory</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" disabled asp-for="LocalityId" asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="Locality" class="floating-label">Locality</label>
                                <span asp-validation-for="Locality" id="LocalityMessage" class="text-danger lb-sm" style="display:none;">Locality is Mandatory</span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-3">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" disabled id="UserProfileId" asp-for="UserprofileId" asp-items="@(new SelectList(Model.SecurityGuardList, "Id","User.NormalizedUserName"))">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="UserprofileId" class="floating-label">Security Guard</label>
                                <span asp-validation-for="UserprofileId" id="SecurityGuardMessage" class="text-danger lb-sm" style="display:none;">Security Guard is Mandatory</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" disabled asp-for="Year" asp-items="@(new SelectList(Model.YearList,"Value","Text"))">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="Year" class="floating-label">Year</label>
                                <span asp-validation-for="Year" id="YearMessage" class="text-danger lb-sm" style="display:none;">Year is Mandatory</span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-3">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" disabled asp-for="Month" asp-items="@(new SelectList(Model.MonthList,"Value","Text"))">
                                    <option value="">Select</option>
                                </select>
                                <label asp-for="Month" class="floating-label">Month</label>
                                <span asp-validation-for="Month" id="MonthMessage" class="text-danger lb-sm" style="display:none;">Month is Mandatory</span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-4 table-responsive" id="dialog">
                        <table class="table" id="RoasterTable">
                            <thead class="thead table-striped table-bordered table">
                                <tr>
                                    <th>Date</th>
                                    <th>Day</th>
                                    <th>Primary No</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var itemRepeater in Model.MonthlyRoasterPartial)
                                {
                    <tr>
                        <td>
                            <input type="text" disabled class="floating-label-field floating-label-field--s3" readonly="readonly" id="Date" value="@itemRepeater.Date" />
                        </td>
                        <td>
                            <input type="text" disabled class="floating-label-field floating-label-field--s3" readonly="readonly" id="Day" value="@itemRepeater.Day" />
                        </td>
                        <td>
                            <select multiple disabled asp-items="@(new SelectList(Model.PrimaryList,"Id","PrimaryListNo"))" id="PrimaryListNo">
                                <option>Select</option>
                            </select>
                            <span id="PrimaryNoMessage" class="text-danger lb-sm" style="display:none;">Primary List No is Mandatory</span>

                        </td>
                    </tr>}
                            </tbody>
                        </table>
                    </div>
                    <div class="row mt-md-4">
                        <div class=" col-md-12">
                            <a asp-action="Index" asp-controller="MonthlyRoster" class="btn btn-theme">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/monthlyRoasterEdit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/monthlyRoasterEdit.min.js" asp-append-version="true"></script>
</environment>
