@model Libraries.Model.Entity.MonthlyRoaster
@await Component.InvokeAsync("PageHeader", new { pageName = "Planning" })
<div class="pt-3">
    <div class="container-fluid" id="MainContentForm">
        <div class="panel">
            <div class="panel-body">
                <form action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
                    <h3 class="mb-3 d-flex">Add Details</h3>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId" asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))" onchange="onChangeDepartment(this.value);">
                                    <option>Select</option>
                                </select>
                                <label asp-for="DepartmentId" class="floating-label">Department</label>
                                <span asp-validation-for="DepartmentId" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">

                                <select class="floating-label-field floating-label-field--s3" asp-for="ZoneId" onchange="onChangeZone(this.value);">
                                </select>
                                <label asp-for="ZoneId" class="floating-label">Zone</label>

                                <span asp-validation-for="ZoneId" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-3">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" asp-for="DivisionId" onchange="onChangeDivision(this.value)">
                                </select>
                                <label asp-for="DivisionId" class="floating-label">Division</label>

                                <span asp-validation-for="DivisionId" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" asp-for="Locality">
                                </select>
                                <label asp-for="DivisionId" class="floating-label"></label>
                                <span asp-validation-for="DivisionId" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-3">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" asp-for="SecurityGuard">
                                </select>
                                <label asp-for="SecurityGuard" class="floating-label">Security Guard</label>

                                <span asp-validation-for="SecurityGuard" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" asp-for="Year" asp-items="@(new SelectList(Model.YearList,"Value","Text"))">
                                </select>
                                <label asp-for="Year" class="floating-label">Year</label>
                                <span asp-validation-for="Year" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-3">
                        <div class="col-md-6">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <select class="floating-label-field floating-label-field--s3" asp-for="Month" asp-items="@(new SelectList(Model.MonthList,"Value","Text"))">
                                </select>
                                <label asp-for="Month" class="floating-label">Month</label>

                                <span asp-validation-for="Month" class="text-danger lb-sm"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-md-4 table-responsive" id="dialog"></div>
                    <div class="row mt-md-4">
                        <div class=" col-md-12">
                            <input type="submit" value="Create" id="btnGenerate" class="btn btn-theme " />
                            @Html.ActionLink("Back", "Index", "Planning", null, new { @class = "btn btn-theme" })
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">
    <script src="~/js/monthlyroastercreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/monthlyroastercreate.js" asp-append-version="true"></script>
</environment>
