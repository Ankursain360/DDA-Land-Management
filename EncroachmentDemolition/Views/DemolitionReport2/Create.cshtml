<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Details</h3>
        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="DepartmentId" class="floating-label-field floating-label-field--s3" required="required" requiredMsg="Please Select Department" asp-items="@(new SelectList(Model.DepartmentList,"Id","Name"))" onchange="return onChangeDepartment(this.options[this.selectedIndex].value);">
                        <option value="0">All</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Department</label>
                </div>
            </div>


            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select asp-for="ZoneId" class="floating-label-field floating-label-field--s3" required="required" requiredMsg="Please Select Zone" asp-items="@(new SelectList(Model.ZoneList,"Id","Name"))" onchange="return onChangeZone(this.options[this.selectedIndex].value)">
                        <option value="0">All</option>
                    </select>
                    <span asp-validation-for="ZoneId" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Zone</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select asp-for="DivisionId" class="floating-label-field floating-label-field--s3" required="required" requiredMsg="Please Select Division" asp-items="@(new SelectList(Model.DivisionList,"Id","Name"))" onchange="return onChangeDivision(this.options[this.selectedIndex].value)">
                        <option value="0">All</option>
                    </select>
                    <span asp-validation-for="DivisionId" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Division</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select asp-for="LocalityId" class="floating-label-field floating-label-field--s3" required="required" requiredMsg="Please Select Locality" asp-items="@(new SelectList(Model.LocalityList,"Id","Name"))">
                        <option value="0">All</option>
                    </select>
                    <span asp-validation-for="LocalityId" class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Locality(Village) Name</label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class="col-md-12 ">
                <input type="button" value="Generate" id="btnGenerate" class="btn btn-theme" />
                <input type="button" value="Refresh" onclick="location.reload(true);" class="btn btn-theme" />

            </div>
        </div>
    </div>
    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end mr-auto">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option selected="selected" disabled="disabled">Select One</option>
                        <option>Zone</option>
                        <option>Division</option>
                        <option>Village Name </option>
                        <option>Khasra No.</option>
                        <option> Demolition Date</option>
                        <option>Area Reclaimed</option>

                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" title="Descending order"><i class="ri-sort-desc"></i></span>
                    <span class="btn slow" title="Ascending order"><i class="ri-sort-asc"></i></span>
                </div>
            </div>


