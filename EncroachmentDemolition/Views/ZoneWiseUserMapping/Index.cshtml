
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-sm-12">
        <div class="myapp-hed">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Zone Wise User Mapping</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Create" class="btn btn-primary pull-right myapp-hed1 " style="margin-top: -10px;">Add New</a>
  
</div>
<br />
<br />
<div class="container-fluid" id="MainContentForm">
    <div class="card  table-card table-responsive ">

        <div class="form-row">
            <div class="form-group col-md-4">
                <label class="radio-inline  ">
                    Filter By
                </label>
            </div>

            <div class="form-group col-md-4">
                <label class="radio-inline ">
                    <input type="radio" name="filter" id="zonevillage" value=""  />Zone/Village
                </label>
            </div>
            <div class="form-group col-md-4">
                <label class="radio-inline">
                    <input type="radio" name="filter" id="roleuser" value="" />Role/User

                </label>
            </div>


        </div>
        <div  id="divforzonevillage" style="display:none;">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label lb-sm">zone  </label>
                  
                    <select required style="height:30px;  background-color: #dddddd;" class="form-control">
                        <option value="value">zone 1</option>
                        <option value="value">zone 2</option>
                        <option value="value">zone 3</option>
                    </select>

                </div>
                <div class="form-group col-md-6">

                    <label class="control-label lb-sm">Village </label>
                    <select required style="height:30px;  background-color: #dddddd;" class="form-control">
                        <option value="value">Village 1</option>
                        <option value="value">Village 2</option>
                        <option value="value">Village 3</option>
                    </select>

                </div>
            </div>


        </div>
        <div id="divforroleuser"  style="display:none;">
            <div class="form-row">

                <div class="form-group col-md-6">

                    <label class="control-label lb-sm">role </label>
                    <select required style="height:30px;  background-color: #dddddd;" class="form-control">
                        <option value="value">role 1</option>
                        <option value="value">role 2</option>
                        <option value="value">role 3</option>
                    </select>

                </div>
                <div class="form-group col-md-6">
                    <label class="control-label lb-sm">user  </label>
                    <select required style="height:30px;  background-color: #dddddd;" class="form-control">
                        <option value="value">user 1</option>
                        <option value="value">user 2</option>
                        <option value="value">user 3</option>
                    </select>
                </div>



            </div>


        </div>

        <table class="table table-bordered table-card">

            <thead class="thead">
                <tr class="myapp-hed1">
                   
                    <th>Zone  </th>
                    <th>Role </th>
                    <th> User  </th>
                    <th> Village Name  </th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody class="tbody">

                <tr>
                   
                    <td>zone1</td>
                    <td>role1</td>
                    <td>ishu</td>
                    <td>Okhla</td>

                    <td>

                        <a asp-action="ViewDetails" title="ViewDetails">
                            <i class="glyphicon glyphicon-eye-open icon-white cl1" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Edit" title="edit"> &nbsp; | &nbsp;  <i class="fa fa-pencil" aria-hidden="true"></i> </a>

                        <a asp-action="Delete" title="delete">   &nbsp;|&nbsp;<i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>

                </tr>

                <tr>
                  
                    <td>zone2</td>
                    <td>role2</td>
                    <td>Nikita</td>
                    <td>kilokari</td>


                    <td>

                        <a asp-action="ViewDetails" title="ViewDetails">
                            <i class="glyphicon glyphicon-eye-open icon-white cl1" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Edit" title="edit"> &nbsp; | &nbsp;  <i class="fa fa-pencil" aria-hidden="true"></i> </a>

                        <a asp-action="Delete" title="delete">   &nbsp;|&nbsp;<i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>

                </tr>
                <tr>
                   
                    <td>zone3</td>
                    <td>role3</td>
                    <td>shalini</td>
                    <td>sarai kale khan</td>


                    <td>

                        <a asp-action="ViewDetails" title="ViewDetails">
                            <i class="glyphicon glyphicon-eye-open icon-white cl1" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Edit" title="edit"> &nbsp; | &nbsp;  <i class="fa fa-pencil" aria-hidden="true"></i> </a>

                        <a asp-action="Delete" title="delete">   &nbsp;|&nbsp;<i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>

                </tr>

            </tbody>

        </table>

    </div>
</div>
<br />
<br />


<script>
    $(function () {
        $("input[name='filter']").click(function () {
            if ($("#zonevillage").is(":checked")) {
                $("#divforzonevillage").show();
                $("#divforroleuser").hide();
            }
            if ($("#roleuser").is(":checked")) {
                   $("#divforroleuser").show();
                $("#divforzonevillage").hide();
              
            }
        });
    });
</script>