@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Component.InvokeAsync("PageHeader", new { pageName = "Online Complaint" })
<div>
    @Html.ActionLink("Download ", "CmplntCreate", "OlCmplnt", null, new { @class = "btn btn-theme ", style = "margin-top: -10px;" })

</div>
<br />
<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  myapp-hed1">
            <h5 style="color:white;">Delhi Development Authority</h5>
            <h6 style="color:white;">Online Complaint Report</h6>
           
        </div>
       
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="d-block rounded border p-3 bg-white search-filer shadow mb-3"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <input disabled type="text" class="floating-label-field floating-label-field--s3">
                                <label class="floating-label">Name of Complaint</label>
                            </div>
                        </div><br />
                        <div class="col-md-12">
                            <div class="floating-label-wrap mb-3 mb-md-0">
                                <input disabled type="text" class="floating-label-field floating-label-field--s3">
                                <label class="floating-label">Contact No.</label>
                            </div>
                        </div><br />
                        <div class="col-md-12">
                            <div class="floating-label-wrap mb-3 mb-md-0">

                                <input disabled type="text" class="floating-label-field floating-label-field--s3">
                                <label class="floating-label">Email Id</label>
                            </div>
                        </div><br />
                        <div class="col-md-12">
                            <div class="floating-label-wrap">

                                <select disabled required="" class="floating-label-field floating-label-field--s3">
                                    <option value="">-Select-</option>
                                </select>
                                <label class="floating-label">Type of Complaint</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-3">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <label class="floating-label">Photograph</label>
                        <img src="~/images/sign.png" height="150" width="150" class="floating-label-field floating-label-field--s3"> style=" border:1px solid black;" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea disabled type="text" class="floating-label-field floating-label-field--s3"></textarea>
                        <label class="floating-label">Area/Address of Complaint</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap">

                        <select disabled class="floating-label-field floating-label-field--s3">
                           
                            <option value="">Delhi</option>
                        </select>
                        <label class="floating-label">Location</label>
                    </div>
                </div>
            </div>
            <div class="row">


            </div> <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="floating-label-wrap">

                        <input disabled type="text" class="floating-label-field floating-label-field--s3">
                        <label class="floating-label">Lattitude</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap">

                        <input disabled type="text" class="floating-label-field floating-label-field--s3">
                        <label class="floating-label">Longitude</label>
                    </div>
                </div>
            </div>
            <br />

            <div class="row pt-3">
                <div class="col-md-12">
                    <input disabled type="submit" value="Create" class="btn btn-theme " />
                    @Html.ActionLink("Back", "Index", "OlCmplnt", null, new { @class = "btn btn-theme " })
                </div>
            </div>

        </form>
        </div>
    </div>



