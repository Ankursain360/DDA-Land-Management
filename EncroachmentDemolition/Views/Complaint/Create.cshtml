@model Libraries.Model.Entity.Onlinecomplaint

@await Component.InvokeAsync("PageHeader", new { pageName = "Online Complaint" })


<div class="pt-3">
    <div class="panel">

        <form asp-action="Create" enctype="multipart/form-data" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
            <h3 class="mb-3 d-flex">Add Details</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">


                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea type="text" asp-for="Name" placeholder="Name of Complaint" class="floating-label-field floating-label-field--s3" limit="400"></textarea>
                        <span asp-validation-for="Name" class="text-danger"></span>

                        <label class="floating-label">Name of Complaint</label>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input placeholder="Contact No." class="floating-label-field floating-label-field--s3" asp-for="Contact" limit="10" />
                        <span asp-validation-for="Contact" class="d-block text-danger field-validation-valid"></span>
                        <label class="floating-label">Contact No. </label>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input class="floating-label-field floating-label-field--s3" placeholder="Email Id" asp-for="Email" limit="30" />
                        <span asp-validation-for="Email" class="d-block text-danger field-validation-valid"></span>
                        <label class="floating-label">Email Id  </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" asp-for="ComplaintTypeId" asp-items="@(new SelectList(Model.ComplaintList, "Id","Name"))">
                            <option>Select</option>
                        </select>

                        <span asp-validation-for="ComplaintTypeId" class="text-danger"></span>
                        <label class="floating-label">Type of Complaint </label>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap">

                        <input asp-for="Photo" id="Photolatlong" type="file" class="floating-label-field floating-label-field--s3" multiple />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                        <label class="floating-label">Photograph</label>
                        <label class="err" style="color:red;display:none;">
                            system is unable to find the coordinates in uploaded image.
                            kindly upload the image which is having location information or 
                            enter latitude and longitude manually.
                        </label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="floating-label-wrap">
                        <input class="floating-label-field floating-label-field--s3" id="slat" placeholder="Lattitude" asp-for="Lattitude" />
                        <span asp-validation-for="Lattitude" class="text-danger"></span>
                        <label class="floating-label">Lattitude </label>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input placeholder="Longitude" id="slong" class="floating-label-field floating-label-field--s3" asp-for="Longitude" />
                        <span asp-validation-for="Longitude" class="text-danger"></span>
                        <label class="floating-label">Longitude </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" asp-for="LocationId" asp-items="@(new SelectList(Model.LocationList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="LocationId" class="text-danger"></span>
                        <label class="floating-label">Location </label>
                    </div>
                </div>

              
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea type="text" asp-for="AddressOfComplaint" placeholder="Area/Address of Complaint" class="floating-label-field floating-label-field--s3" limit="500"></textarea>
                        <span asp-validation-for="AddressOfComplaint" class="text-danger"></span>
                        <label class="floating-label">Area/Address of Complaint</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea type="text" asp-for="Remarks" placeholder="Remarks" class="floating-label-field floating-label-field--s3" limit="200"></textarea>
                        <label class="floating-label">Remarks</label>
                    </div>
                </div>

            </div>

            <div class="row mt-md-3">
                <div class="col-md-12 col-xl-3">
                    <div class="row">

                        <div class="col-6 ">
                            <input type="submit" value="Submit" class="btn btn-theme " />
                        </div>
                        <div class="col-6">

                            <a class="btn btn-link btn-block d-flex align-items-center justify-content-center" href="/Complaint/Create"> <i class="ri-refresh-line mr-2"></i>Reset</a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<script src="~/js/exif.min.js"></script>
<script src="~/js/onlinecomplaintcreate.js"></script>