@model Libraries.Repository.Common.PagedResult<Libraries.Model.Entity.Watchandward>
@{int rowNo = 0; }
<table class="table text-center table-responsive table-bordered table-card">
    <thead class="thead">
        <tr>
            <th>Sr.No</th>
            <th>Village</th>
            <th>Khasra No.</th>
            <th>Status on Ground</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="tbody">
        @foreach (var item in Model.Results)
        {
        <tr>
            <td>@(rowNo += 1)</td>
            <td>@item.Village.Name</td>
            <td>@item.Khasra.Name</td>
            <td>@item.StatusOnGround</td>
            <td> @(Convert.ToDateTime(item.Date).ToString("dd MMM yyyy"))</td>
            <td>
                @(item.IsActive == 1 ? "Active" : "Inactive")
            </td>
            <td>
                <a asp-action="Create" asp-route-id="@item.Id" title="edit"> &nbsp; <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> </a>
            </td>
        </tr>
        }

    </tbody>
</table>
@await Component.InvokeAsync("Pager", new { totalCount = Model.RowCount, pageNumber = Model.CurrentPage, pageSize = Model.PazeSize })