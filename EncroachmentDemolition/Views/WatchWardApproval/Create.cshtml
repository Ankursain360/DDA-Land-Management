@model Libraries.Model.Entity.Watchandward
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Watch & Ward Aprroval Processs</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create" id="myForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div id="WatchWardDetailsDiv">

                </div>
                <br />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label>
                        <select asp-for="ApprovalStatus" style="height:30px; background-color: #dddddd;" class="form-control">
                            @*<option value="1">Forward To CLM</option>
                                <option value="2">Approved</option>
                                <option value="3">Reject</option>*@
                            <option value="1">Forward</option>
                            <option value="2">Revert</option>
                            <option value="3">Approved</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Remarks</label>
                        <textarea type="text" class="form-control" asp-for="ApprovalRemarks"></textarea>
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Submit" class="btn btn-primary dda-pageheading" />
                        @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
                        @Html.ActionLink("Back", "Index", "WatchWardApproval", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
<environment include="Development">
    <script src="~/js/watchandwardapproval.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/watchandwardapproval.min.js" asp-append-version="true"></script>
</environment>