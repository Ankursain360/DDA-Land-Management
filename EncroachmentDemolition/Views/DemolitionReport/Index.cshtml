@model Dto.Master.EncroachmentReportListDto
@await Component.InvokeAsync("PageHeader", new { pageName = "Demolition Report" })

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Raw(TempData["msg"])
<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="VillageName"
                            asp-items="@(new SelectList(@ViewBag.LocalityList, "Id","Name"))">
                        <option value="0">All</option>
                    </select>
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="VillageName"></span>
                    <label asp-for="VillageName" class="floating-label">Locality Name(Village)<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="Date" asp-for="FromDate" value="" placeholder="Date" id="txtFromDate" class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="FromDate"></span>
                    <label class="floating-label">From Date<span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="Date" asp-for="ToDate" value="" placeholder="Date" id="txtToDate" class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="ToDate"></span>
                    <label class="floating-label">To Date<span style="color:red">*</span></label>
                </div>

            </div>

        </div>
       
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button id="btnReset" class="btn btn-link btn-block d-flex align-items-center justify-content-center" type="reset">
                            <i class="ri-refresh-line me-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">

                        <input type="submit" value="Generate" id="btnGenerate" class="btn btn-theme" />

                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end me-auto">
                <div class="floating-label-wrap">
                    <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                        <option value="Locality"> Locality(Village)</option>

                        <option value="EncrochmentDate">Date</option>
                        <option value="KhasraNo">Khasra No</option>

                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" id="btnAscending" title="Ascending order"><i class="ri-sort-asc"></i></span>
                    <span class="btn slow" id="btnDescending" title="Descending order"><i class="ri-sort-desc"></i></span>
                </div>
            </div>


            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">

                <a id="btnDownload" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line me-2 me-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>
        <div class="table-responsive px-2">
            <div id="LoadReportView">

            </div>
        </div>
    </div>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/demolitionreportindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/demolitionreportindex.min.js" asp-append-version="true"></script>
</environment>
