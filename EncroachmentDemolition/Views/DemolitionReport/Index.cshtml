@*@model Libraries.Model.Entity.EncroachmentRegisteration*@
@model Dto.Master.DemolitionReportDtoProfile

@await Component.InvokeAsync("PageHeader", new { pageName = "Demolition Report" })

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Details</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select class="floating-label-field floating-label-field--s3" asp-for="localityId" asp-items="@(new SelectList( @ViewBag.LocalityList, "Id","Name"))">
                        <option value="0">All</option>
                    </select>
                    <label asp-validation-for="LocalityId" class="error"></label>
                    <label class="floating-label" asp-for="localityId">Locality</label>
                </div>
            </div>
        </div>

        <div class="row pt-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="FromDate" type="date" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="FromDate" id="FromDateMsg" class="text-danger" style="display:none;">Mandatory</span>
                    <label class="floating-label">From Date  <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="ToDate" type="date" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="ToDate" id="ToDateMsg" class="text-danger" style="display:none;">Mandatory</span>
                    <label class="floating-label">To Date  <span style="color:red">*</span></label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class="col-md-12 ">
                <input type="button" value="Generate" id="btnGenerate" class="btn btn-theme" />
                <input type="button" value="Refresh" onclick="location.reload(true);" class="btn btn-theme" />

            </div>
        </div>
    </div>
    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end mr-auto">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option selected="selected" disabled="disabled">Select One</option>
                        <option>Zone</option>
                        <option>Division</option>
                        <option>Village Name </option>
                        <option>Khasra No.</option>
                        <option> Demolition Date</option>
                        <option>Area Reclaimed</option>

                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" title="Descending order"><i class="ri-sort-desc"></i></span>
                    <span class="btn slow" title="Ascending order"><i class="ri-sort-asc"></i></span>
                </div>
            </div>


            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">
                @*<a href="/Zone/create" class="d-flex align-items-center btn btn-primary mr-2">
                        <i class="ri-add-fill mr-2 mr-lg-1"></i>
                        <small>Add More</small>
                    </a>*@
                <a href="javascript:void(0)" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line mr-2 mr-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>
        <div class="table-responsive px-2">
            <div id="LoadReportView">

            </div>

        </div>
        <br />
    </div>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/demolitionreportindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/demolitionreportindex.min.js" asp-append-version="true"></script>
</environment>
