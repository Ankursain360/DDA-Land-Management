@model Libraries.Model.Entity.Demolitionpoliceassistenceletter
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Police Assistance Letter</title>
    <style>
        .p {
            color: black;
           
        }

        fieldset {
            border: 1px solid #ddd !important;
            margin: 0;
            xmin-width: 0;
            padding: 10px;
            position: relative;
            border-radius: 4px;
            background-color: #f5f5f5;
            padding-left: 10px !important;
        }

        label {
            font-weight: 500;
        }

        .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
            border-top: 0px none;
        }
    </style>
    <link rel="stylesheet" href="~/font/icon/remixicon.css" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/lib/toaster/toastr.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <link href="~/lib/select2/select2.css" rel="stylesheet" />
    <script src="~/lib/select2/select2.js"></script>
</head>
<body>



   


    <div class="content" style="max-width: 800px; margin: auto; background: white; padding: 10px;">




        <div class="panel-body">
            <table class="table" border="0" style="border:none; border-top: none;  ">
                <tr>
                    <td align="center">
                        <img src="~/images/DDAlogo.png" class="img-responsive" style="height:90px;width:90px;" />
                    </td>
                </tr>

                <tr align="center">
                    <td align="center">
                        <p style="color:black;font-size:medium;">
                            <b>
                                DELHI DEVELOPMENT AUTHORITY<br />
                                OFFICE OF THE @Model.OfficeName, @Model.OfficeDepartment, @Model.OfficeZone<br />
                                @Model.OfficeAddress<br />

                            </b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="color:black;"><b>No.: @Model.FileNo</b> <span style="padding-left:520px;">
                            <b>Date : @(Convert.ToDateTime(Model.LetterDate).ToString("dd-MMM-yyyy")) </b></span></p>
                    </td>

                    <!--<td style="padding-right:-200px;">
                    <p style="color:black;"><b>Date : {LetterDate}</b></p>
                </td>-->

                </tr>


                <tr>
                    <td>
                        <label> To,</label>
                        <p style="color:black;margin-bottom: 20px !important;">
                            <b>The Dy.Commissioner Of Police</b><br />
                            @Model.DyCommOffcAddress
                        </p>
                    </td>


                </tr>



                <tr>
                    <td>
                        <p style="color:black;margin-bottom:-5px; ">
                            <b>
                                Sub: Request for providing Police assistance to DDA Staff for carrying out demolition
                                programme for removal of unauthorized construction/encroachment on DDA/Government land.
                            </b>
                        </p>

                    </td>

                </tr>
                <tr>
                </tr>



                <tr>
                    <td>
                        <p style="color:black;margin-bottom:0.2% ;text-align-last:justify">

                            <b>Sir/Madam,</b>


                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="color:black;margin-top: -3%;text-align-last:justify;">
                            With the approval of competent authority,it has been decided to organize a demolition programme
                            for removal of unauthorized construction / encroachment from the DDA/Govt land bearing
                            Khasra No. <b>@Model.KhasraNo</b> Of Village <b> @Model.VillageName</b> address <b>@Model.KhasraAddress</b>.
                            The said area falls under
                            the jurisdiction of Police Station <b>@Model.PoliceStationName</b>. The operation would be held on<b> @(Convert.ToDateTime(Model.OperationDate).ToString("dd-MMM-yyyy")), @Model.OperationDay</b> .
                            The structures which are to be demolished will be identified by the Revenue Official(s)
                            of <b>@Model.RevenueOfficerZone</b> Zone, <b>@Model.RevenueOfficerWing</b> wing, <b>@Model.RevenueOfficerBranch</b> Branch,DDA.


                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="color:black; margin-top: -3%; ">
                            2. You are,therefore, requested to direct the concerned for providing necessary
                            Police Assistance for maintainingLaw and Order during the demolition programme.

                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="color: black;margin-top: -3%;text-align-last:justify;">
                            3. The meeting point will be Police Station <b>@Model.PoliceStationName</b> on date <b>@(Convert.ToDateTime(Model.MeetingDate).ToString("dd-MMM-yyyy"))</b> and time
                            <b>@Model.MeetingTime</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            4. General Conditions:<b>@Model.GeneralConditions</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <p style="color:black">
                            Dy.Director<br />
                            <b>@Model.OfficeZone</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            <b> Copy forwarded for kind information and necessary action to:-</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            <b> 1. Member (Admn. & LM), DDA</b>

                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">

                            <b> 2. Principal Commissioner(Hort.),DDA</b>

                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            <b>  3. Commissioner(LM),DDA</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            <b> 4. Chief Engineer <b>@Model.ChiefEngineerAddress</b>, DDA</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            <b> 5. Director(LM)</b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style=" color: black; margin-top: -3%;">
                            <b>
                                6. SHO <b>@Model.Shoaddress</b> Delhi/New Delhi with the request to arrange sufficient Police Force.
                            </b>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <p style="color:black">
                            Dy.Director<br />
                            <b>@Model.OfficeZone</b>
                        </p>
                    </td>
                </tr>


            </table>
        </div>
        <div>
            <button class="btn btn-success jhide" type="submit" id="btnPrint">Print</button>
            <a asp-action="Index" asp-controller="DemolitionPoliceAssistenceLetter" class="btn btn-primary jhide">Back</a>
        </div>
    </div>

    
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/dist/Chart.min.js"></script>
    <script src="~/lib/toaster/toastr.min.js"></script>
    <script>
        $(function () {
            $("#btnPrint").click(function () {
                $('.jhide').hide();
                window.print();
                $('.jhide').show();
            });
        });
    </script>
</body>


</html>
