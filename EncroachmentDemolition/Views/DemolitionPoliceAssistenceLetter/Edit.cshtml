                        <span asp-validation-for="MeetingDate" class="text-danger"></span>
                        <label class="floating-label">Proposed Demolition Date<span style="color:red">*</span></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="time" asp-for="MeetingTime" placeholder="MeetingTime" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="MeetingTime" class="text-danger"></span>
                        <label class="floating-label">Proposed Demolition Time<span style="color:red">*</span></label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea type="text" asp-for="ChiefEngineerAddress" placeholder="ChiefEngineerAddress" class="floating-label-field floating-label-field--s3"></textarea>
                        <span asp-validation-for="ChiefEngineerAddress" class="text-danger"></span>
                        <label class="floating-label">Chief Engineer Address </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea type="text" asp-for="Shoaddress" placeholder="Shoaddress" class="floating-label-field floating-label-field--s3"></textarea>
                        <span asp-validation-for="Shoaddress" class="text-danger"></span>
                        <label class="floating-label">SHO Address </label>
                    </div>
                </div>
            </div>
            <h3 class="my-3 d-flex sub-heading">General Conditions</h3>
            <div class="row mt-md-3">
                <div class="col-md-12">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea type="text" asp-for="GeneralConditions " placeholder="GeneralConditions" class="floating-label-field floating-label-field--s3"></textarea>
                        <span asp-validation-for="GeneralConditions " class="text-danger"></span>
                        <label class="floating-label">General Conditions </label>
                    </div>
                </div>

            </div>

        </div>
    <div id="divUpload" style="display:none;">
        <div class="row pt-3">
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
