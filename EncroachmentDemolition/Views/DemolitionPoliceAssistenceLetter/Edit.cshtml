<br />
<script src="~/lib/jQuery.print.min.js"></script>
<form asp-action="Edit" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
    <h3 class="mb-3 d-flex"> Details</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="FixingDemolitionId" />
    <input type="hidden" asp-for="Id" />
    <h3 class="mb-3 d-flex">Police Assistence letter By</h3>

    <div class="row mt-md-3">
        <input type="hidden" asp-for="GenerateUpload" value="0" id="GenerateUpload"/>
        <div class="col-md-3">
            <div class="form-check theme">
                <input class="form-check-input" type="radio" name="radioStatus" id="Generate" value="0" checked>
                <label class="form-check-label" for="radio">
                    Generate
                </label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-check theme">
                <input class="form-check-input" type="radio" name="radioStatus" id="Upload" value="1">
                <label class="form-check-label" for="radio">
                    Upload
                </label>
            </div>
        </div>

    </div>

    <div id="divGenerate" style="display:none;"class="pt-3">
       
            <h3 class="my-3 d-flex sub-heading">Office Details</h3>
