                        <span asp-validation-for="OfficeName" class="text-danger"></span>
                        <label class="floating-label">Office Name</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="OfficeDepartment" placeholder="OfficeDepartment" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="OfficeDepartment" class="text-danger"></span>
                        <label class="floating-label">Office Department </label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="OfficeZone" placeholder="OfficeZone" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="OfficeZone" class="text-danger"></span>
                        <label class="floating-label">Office Zone </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea type="text" asp-for="OfficeAddress" placeholder="OfficeName" class="floating-label-field floating-label-field--s3"></textarea>
                        <span asp-validation-for="OfficeAddress" class="text-danger"></span>
                        <label class="floating-label">Office Address with Pincode</label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="FileNo" placeholder="OfficeZone" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="FileNo" class="text-danger"></span>
                        <label class="floating-label">File No</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="date" asp-for="LetterDate" placeholder="OfficeName" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="LetterDate" class="text-danger"></span>
                        <label class="floating-label">Letter Date   </label>
                    </div>
                </div>
            </div>
            <h3 class="my-3 d-flex sub-heading">Deputy Commissioner Address with Pin Code</h3>
            <div class="row mt-md-3">
                <div class="col-md-12">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea type="text" asp-for="DyCommOffcAddress" placeholder="OfficeZone" class="floating-label-field floating-label-field--s3"></textarea>
                        <span asp-validation-for="DyCommOffcAddress" class="text-danger"></span>
                        <label class="floating-label">Deputy Commissioner Office Address </label>
                    </div>
                </div>
            </div>

            <h3 class="my-3 d-flex sub-heading">Khasra Details</h3>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="KhasraNo " placeholder="OfficeZone" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="KhasraNo " class="text-danger"></span>
                        <label class="floating-label">Khasra No  </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="VillageName" placeholder="VillageName" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="VillageName" class="text-danger"></span>
                        <label class="floating-label">Village Name</label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-12">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <textarea type="text" asp-for="KhasraAddress" placeholder="OfficeZone" class="floating-label-field floating-label-field--s3"></textarea>
                        <span asp-validation-for="KhasraAddress" class="text-danger"></span>
                        <label class="floating-label">Khasra Address </label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="PoliceStationName " placeholder="OfficeZone" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="PoliceStationName " class="text-danger"></span>
                        <label class="floating-label">Police Station Name   </label>
                    </div>
                </div>
