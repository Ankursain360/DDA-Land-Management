                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="date" asp-for="OperationDate " placeholder="VillageName" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="OperationDate " class="text-danger"></span>
                        <label class="floating-label">Operation Date </label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="OperationDay" placeholder="OfficeZone" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="OperationDay" class="text-danger"></span>
                        <label class="floating-label">Operation Day   </label>
                    </div>
                </div>

            </div>

            <h3 class="my-3 d-flex sub-heading">Revenue Officer Details:</h3>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="RevenueOfficerZone " placeholder="RevenueOfficerZone" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="RevenueOfficerZone " class="text-danger"></span>
                        <label class="floating-label"> Zone  </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="RevenueOfficerWing" placeholder="RevenueOfficerWing" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="RevenueOfficerWing" class="text-danger"></span>
                        <label class="floating-label"> Wing</label>
                    </div>
                </div>
            </div>
            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" asp-for="RevenueOfficerBranch" placeholder="RevenueOfficerBranch" class="floating-label-field floating-label-field--s3" />
                        <span asp-validation-for="RevenueOfficerBranch" class="text-danger"></span>
                        <label class="floating-label"> Branch<span style="color:red">*</span>  </label>
                    </div>
                </div>
            </div>
