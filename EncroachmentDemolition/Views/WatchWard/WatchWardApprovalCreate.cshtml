
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Watch & Ward Aprroval Processs</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>


<br />

<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div id="DivLandTransferDetails">
                    <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <div class="row" style="margin-bottom:35px;">
                            <div class="col-sm-12">
                                <div class="dda-innerheading">
                                    <div class="col-md-12">

                                        <h6 class="pull-left" style="color:white;margin-top:5px;">Watch & Ward Details</h6>
                                        <i class="fa-angle-right fa pull-right" aria-hidden="true" style="padding-top:4px;"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <div class="collapse" id="collapseExample">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Date</label><span style="color:red">*</span>
                                <input type="date" id="txtDate" class="form-control" />
                            </div>


                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Village Name</label><span style="color:red">*</span>
                                <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                    <option value="0">---Select---</option>
                                    <option value="1">Har</option>
                                    <option value="2">Someother</option>
                                </select>
                            </div>


                        </div>

                        <div class="form-row">

                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Khasra No.</label>
                                <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                    <option value="0">---Select---</option>
                                    <option value="1">Har</option>
                                    <option value="2">Someother</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Land Mark</label><span style="color:red">*</span>
                                <input type="text" class="form-control" />
                            </div>

                           
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="control-label lb-sm">Status on Ground</label><span style="color:red">*</span>
                                <textarea type="text" class="form-control"></textarea>
                            </div>


                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Photos</label>
                                <input type="file" class="form-control" multiple />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="control-label lb-sm">Remarks</label><span style="color:red"></span>
                                <textarea type="text" class="form-control"></textarea>
                            </div>

                        </div>


                    </div>
                </div>
                <br />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label>
                        <select style="height:30px; background-color: #dddddd;" id="drpReqType" required="" class="form-control">
                            <option value="1">Forward To CLM</option>
                            <option value="2">Approved</option>
                            <option value="3">Reject</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Remarks</label>
                        <textarea type="text" class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Submit" class="btn btn-primary dda-pageheading" />
                        
                        @Html.ActionLink("Back", "WatchWardApproval", "WatchWard", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>



<script>
    $(function () {
        $('#drp1').change(function () {
            var id = $("#drp1").val();
            if (id == 1) {
                $("#txt1").show();

            }
            else {
                $("#txt1").hide();
            }
        });
    });

    $(function () {
        $('#drp2').change(function () {
            var id = $("#drp2").val();
            if (id == 1) {
                $("#txt2").show();

            }
            else {
                $("#txt2").hide();
            }
        });
    });

    $(function () {
        $('#drp3').change(function () {
            var id = $("#drp3").val();
            if (id == 1) {
                $("#txt3").show();

            }
            else {
                $("#txt3").hide();
            }
        });
    });

    $(function () {
        $('#drp4').change(function () {
            var id = $("#drp4").val();
            if (id == 1) {
                $("#txt4").show();

            }
            else {
                $("#txt4").hide();
            }
        });
    });
    $(function () {
        $('#drpHasLand').change(function () {
            var id = $("#drpHasLand").val();
            if (id == 0) {
                $("#txtDateLand").hide();
                $("#txtLand").hide();
                $("#fileland").hide();
            }
            else {
                $("#txtDateLand").show();
                $("#txtLand").show();
                $("#fileland").show();
            }
        });
    });
</script>



