@model Libraries.Model.Entity.Watchandward
@{int Photo = 0;}
@{int ReportFile = 0;}

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Watch & Ward </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white" style="margin-top:-0.4%">Edit Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />



                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Date</label><span style="color:red">*</span>
                        <input asp-for="Date" type="date" id="txtDate" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>


                    @*<div class="form-group col-md-6">
                            <label class="control-label lb-sm">Locality Name (Village)</label><span style="color:red">*</span>
                            <select class="form-control dda-dropdown" asp-for="LocalityId" asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))">
                                <option>Select</option>
                            </select>
                            <span asp-validation-for="LocalityId" class="text-danger"></span>
                        </div>*@


                </div>

                @*<div class="row">

                        <div class="form-group col-md-6">
                            <label class="control-label lb-sm">Khasra No.</label>
                            <select class="form-control dda-dropdown" asp-for="KhasraId" asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">
                                <option>Select</option>
                            </select>
                            <span asp-validation-for="KhasraId" class="text-danger"></span>
                        </div>
                    </div>*@
                <div id="DivPrimaryList">
                    <div class="row" style="margin-bottom:35px;">
                        <div class="col-sm-12">
                            <div class="dda-innerheading">
                                <div class="col-md-12">
                                    <h6 class="pull-left color-white" style="margin-top:5px;">Primary List No. and other details</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label lb-sm">Primary List No.</label><span style="color:red">*</span>
                            <select class="form-control dda-dropdown" asp-for="PrimaryListNo" asp-items="@(new SelectList(Model.PrimaryListNoList, "Id","PrimaryListNo"))" onchange="return GetOtherDetails(this.options[this.selectedIndex].value);">
                                <option value="">--Select--</option>
                            </select>
                            <span asp-validation-for="PrimaryListNo" class="text-danger"></span>
                        </div>

                    </div>


                    <div id="InventoryOtherDiv">

                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Land Mark</label><span style="color:red">*</span>
                        <input asp-for="Landmark" type="text" class="form-control" />
                        <span asp-validation-for="Landmark" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Encroachment</label><span style="color:red">*</span>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label class="radio-inline  ">
                                    <input type="radio" asp-for="Encroachment" name="grpDamageAssesseeType" value="1" checked>Yes
                                </label>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="radio-inline ">
                                    <input type="radio" asp-for="Encroachment" name="grpDamageAssesseeType" value="0">No
                                </label>
                            </div>
                        </div>
                        @*<select class="form-control" asp-for="Encroachment">
            <option value="">---Select---</option>
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>*@
                        <span asp-validation-for="Encroachment" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Status on Ground</label><span style="color:red">*</span>
                        <textarea asp-for="StatusOnGround" type="text" class="form-control"></textarea>
                        <span asp-validation-for="StatusOnGround" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @*<label class="control-label lb-sm">Photos</label>
                            <input asp-for="Photo" type="file" class="form-control" multiple />*@

                        <label class="control-label lb-sm">Photo (<span style="color:red;"> max size: 5 mb</span>)</label>
                        @{
                            if (Model.Watchandwardphotofiledetails != null && Model.Watchandwardphotofiledetails.Count > 0)
                            {
                                <br />
                                foreach (var item in Model.Watchandwardphotofiledetails)
                                {
                                    <a asp-action="DownloadPhotoFile" asp-route-id="@item.Id"> (View Existing Document @(Photo += 1 ))</a>

                                    if (item.LattLongUrl != null)
                                    {
                                        <a target="_blank" href="@item.LattLongUrl">View Location on Map</a>
                                    }
                                    <br />
                                }
                                <input type="file" class="form-control" asp-for="Photo" id="PhotoFile" accept="image/png, image/jpeg, image/gif" multiple />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            }
                            else
                            {
                                <input type="file" class="form-control" asp-for="Photo" id="PhotoFile" accept="application/pdf, application/vnd.ms-excel, application/vnd.ms-word, image/png, image/jpeg, image/gif" multiple />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            }
                        }




                    </div>
                    <div class="form-group col-md-6" style="display:none;">
                        <label class="control-label lb-sm">Report</label>
                        @{
                            if (Model.Watchandwardreportfiledetails != null && Model.Watchandwardreportfiledetails.Count > 0)
                            {
                                <br />
                                foreach (var item in Model.Watchandwardreportfiledetails)
                                {
                                    <a asp-action="DownloadReportFile" asp-route-id="@item.Id"> (View Existing Document @(ReportFile += 1 ))</a>
                                    <br />
                                }
                                <input type="file" class="form-control" asp-for="ReportFile" accept="application/pdf, application/vnd.ms-excel, application/vnd.ms-word, image/png, image/jpeg, image/gif" multiple />
                                <span asp-validation-for="ReportFile" class="text-danger"></span>
                            }
                            else
                            {
                                <input type="file" class="form-control" asp-for="ReportFile" accept="application/pdf, application/vnd.ms-excel, application/vnd.ms-word, image/png, image/jpeg, image/gif" multiple />
                                <span asp-validation-for="ReportFile" class="text-danger"></span>
                            }
                        }

                    </div>
                </div>
                <div class="row">

                    <div class="form-group col-md-6" style="display:none;">
                        <label class="control-label lb-sm">Status</label>
                        <select asp-for="IsActive" class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12" style="display:none;">
                        <label class="control-label lb-sm">Remarks</label><span style="color:red"></span>
                        <textarea asp-for="Remarks" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input type="submit" value="Update" class="btn btn-primary dda-pageheading" />
                        @Html.ActionLink("Back", "Index", "WatchWard", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />


<environment include="Development">
    <script src="~/js/watchwardedit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/watchwardedit.min.js" asp-append-version="true"></script>
</environment>
