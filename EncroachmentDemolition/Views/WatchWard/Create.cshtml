@model Libraries.Model.Entity.Watchandward
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("PageHeader", new { pageName = "Watch & Ward" })
<br />

<br />
<form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
    <h3 class="mb-3 d-flex">Add Details</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input asp-for="Date" type="date" id="txtDate" class="floating-label-field floating-label-field--s3" placeholder="Date" />
                <span asp-validation-for="Date" class="text-danger"></span>
                <label class="floating-label">Date</label>
            </div>
        </div>
    </div>
    <div id="DivPrimaryList">
        <h2 class="my-3 sub-heading">Primary List No. and other details</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <select class="floating-label-field floating-label-field--s3" asp-for="PrimaryListNo" asp-items="@(new SelectList(Model.PrimaryListNoList, "Id","PrimaryListNo"))" onchange="return GetOtherDetails(this.options[this.selectedIndex].value);">
                        <option value="">--Select--</option>
                    </select>
                    <label asp-validation-for="PrimaryListNo" class="error"></label>
                    <label class="floating-label">Primary List No.</label><span style="color:red">*</span>
                </div>
            </div>

        </div>
    </div>
    <div id="InventoryOtherDiv">

    </div>
    <div id="PlannedUnplanedDiv" class="row" style="display:none;">
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" asp-for="PlannedUnplannedLand" disabled>
                    <option value="Planned Land">Planned Land</option>
                    <option value="Unplanned Land">Unplanned Land</option>
                </select>
                <span asp-validation-for="PrimaryListNo" class="text-danger"></span>
                <label class="floating-label" asp-for="PlannedUnplannedLand">Planned/Unplanned Land</label>
            </div>
        </div>

        <div id="divUnplannedSelection" style="display:none;">

            <div class="floating-label-wrap">
                <div class="col-md-6">

                    <select class="floating-label-field floating-label-field--s3" asp-for="LocalityId" disabled>

                        <option value="">--Select--</option>
                    </select>
                    <label asp-validation-for="LocalityId" class="error"></label>
                    <label class="floating-label" asp-for="LocalityId">Locality(Village)</label>
                </div>
            </div>
        </div>
    </div>
    <div id="divPlannedSelection" style="display:none;">
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="Colony" placeholder="Colony" type="text" class="floating-label-field floating-label-field--s3" maxlength="50" disabled />
                    <span asp-validation-for="Colony" class="text-danger"></span>
                    <label class="floating-label">Colony</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="Sector" placeholder="Sector" class="floating-label-field floating-label-field--s3" maxlength="50" disabled />
                    <span asp-validation-for="Sector" class="text-danger"></span>
                    <label class="floating-label">Sector</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input type="text" class="floating-label-field floating-label-field--s3" placeholder="Block" maxlength="50" asp-for="Block" disabled />
                        <span asp-validation-for="Block" class="text-danger"></span>
                        <label class="floating-label">Block</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input asp-for="Pocket" placeholder="Pocket" class="floating-label-field floating-label-field--s3" maxlength="50" disabled />
                        <span asp-validation-for="Pocket" class="text-danger"></span>
                        <label class="floating-label">Pocket</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="InventoryOtherDiv">

    </div>
    @*</div>*@
    <div class="row">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input asp-for="Landmark" type="text" placeholder="Land Mark" class="floating-label-field floating-label-field--s3" />
                <span asp-validation-for="Landmark" class="text-danger"></span>
                <label class="floating-label">Land Mark</label>
            </div>
        </div>
        <div class="col-md-6"> 
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check theme">
                        <input class="form-check-input" type="radio" asp-for="Encroachment" name="grpDamageAssesseeType" value="1" checked>
                        <label for="Encroachment" class="form-check-label">Yes </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check theme">
                        <input class="form-check-input" type="radio" asp-for="Encroachment" name="grpDamageAssesseeType" value="0">
                        <label for="Encroachment" class="form-check-label">No </label>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Encroachment" class="text-danger"></span>
            @*<label class="floating-label"> Encroachment</label>*@
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-12">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <textarea asp-for="StatusOnGround" type="text" placeholder="Status on Ground" class="floating-label-field floating-label-field--s3"></textarea>
                <span asp-validation-for="StatusOnGround" class="text-danger"></span>
                <label class="floating-label">Status on Ground</label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input placeholder="Photo" asp-for="Photo" type="file" class="floating-label-field floating-label-field--s3" multiple accept="image/png, image/jpeg, image/gif" />
                <span asp-validation-for="Photo" class="text-danger"></span>
                <label class="floating-label">Photos</label>
            </div>
        </div>
        <div class="col-md-6" style="display:none;">

            <input asp-for="ReportFile" placeholder="Report" type="file" class="floating-label-field floating-label-field--s3" multiple />
            <span asp-validation-for="ReportFile" class="text-danger"></span>
            <label class="floating-label">Report</label>
        </div>
    </div>
    <div class="row" style="display:none;">

        <div class="col-md-6">
            <div class="floating-label-wrap">

                <select asp-for="IsActive" class="floating-label-field floating-label-field--s3">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <label class="floating-label">Status</label>
            </div>
        </div>
    </div>

    <div class="row" style="display:none;">
        <div class="col-md-12">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <textarea asp-for="Remarks" type="text" class="floating-label-field floating-label-field--s3"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
                <label class="floating-label">Remarks</label>
            </div>
        </div>

    </div>


    <div class="row pt-3">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn btn-theme " />
            @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
            @Html.ActionLink("Back", "Index", "WatchWard", null, new { @class = "btn btn-theme " })
        </div>
    </div>
</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/watchward.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/watchward.min.js" asp-append-version="true"></script>
</environment>
