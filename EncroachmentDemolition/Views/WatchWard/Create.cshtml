@model Libraries.Model.Entity.Watchandward
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Watch & Ward </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>


<br />

<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>



        <div class="panel-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Date</label><span style="color:red">*</span>
                        <input asp-for="Date" type="date" id="txtDate" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Locality Name (Village)</label><span style="color:red">*</span>
                        <select class="form-control dda-dropdown" asp-for="LocalityId" asp-items="@(new SelectList(Model.LocalityList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="LocalityId" class="text-danger"></span>
                    </div>


                </div>

                <div class="row">

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Khasra No.</label>
                        <select class="form-control dda-dropdown" asp-for="KhasraId" asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="KhasraId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Primary List No.</label><span style="color:red">*</span>
                        <input asp-for="Landmark" type="text" class="form-control" />
                        <span asp-validation-for="Landmark" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Land Mark</label><span style="color:red">*</span>
                        <input asp-for="Landmark" type="text" class="form-control" />
                        <span asp-validation-for="Landmark" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Encroachment</label><span style="color:red">*</span>
                        <label class="radio-inline">
                            <input type="radio" asp-for="EncroachmentStatus" name="grpDamageAssesseeType" value="1" checked>Yes
                        </label>
                        <label class="radio-inline">
                            <input type="radio" asp-for="EncroachmentStatus" name="grpDamageAssesseeType" value="0">No
                        </label>
                        @*<select class="form-control" asp-for="Encroachment">
                <option value="">---Select---</option>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>*@
                        <span asp-validation-for="Encroachment" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Status on Ground</label><span style="color:red">*</span>
                        <textarea asp-for="StatusOnGround" type="text" class="form-control"></textarea>
                        <span asp-validation-for="StatusOnGround" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Photos</label>
                        <input asp-for="Photo" type="file" class="form-control" multiple accept="image/png, image/jpeg, image/gif" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6" style="display:none;">
                        <label class="control-label lb-sm">Report</label>
                        <input asp-for="ReportFile" type="file" class="form-control" multiple />
                        <span asp-validation-for="ReportFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="row" style="display:none;">

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label>
                        <select asp-for="IsActive" class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Remarks</label><span style="color:red"></span>
                        <textarea asp-for="Remarks" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group col-md-12" style="justify-content:center">
                        <input type="submit" value="Create" class="btn btn-primary  dda-pageheading" />
                        @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
                        @Html.ActionLink("Back", "Index", "WatchWard", null, new { @class = "btn btn-primary  dda-pageheading" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/watchward.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/watchward.min.js" asp-append-version="true"></script>
</environment>
