
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Watch & Ward </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>


<br />

<br />
<div class="container-fluid"id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
      

            
                    <div class="panel-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Date</label><span style="color:red">*</span>
                                    <input type="date" id="txtDate" class="form-control" />
                                </div>


                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Village Name</label><span style="color:red">*</span>
                                    <select class="form-control" >
                                        <option value="0">---Select---</option>
                                        <option value="1">Har</option>
                                        <option value="2">Someother</option>
                                    </select>
                                </div>


                            </div>

                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Khasra No.</label>
                                    <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                        <option value="0">---Select---</option>
                                        <option value="1">Har</option>
                                        <option value="2">Someother</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Land Mark</label><span style="color:red">*</span>
                                    <input type="text" class="form-control" />
                                </div>

                                @*<div class="form-group col-md-6">
                                        <label class="control-label lb-sm">Status</label>
                                        <select class="form-control">
                                            <option value="0">Active</option>
                                            <option value="1">Inactive</option>
                                        </select>
                                    </div>*@
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm"> Encroachment</label><span style="color:red">*</span>
                                    <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                        <option value="0">---Select---</option>
                                        <option value="1">Yes</option>
                                        <option value="0">No</option>
                                    </select>
                                </div>


                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label class="control-label lb-sm">Status on Ground</label><span style="color:red">*</span>
                                    <textarea type="text" class="form-control"></textarea>
                                </div>


                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Photos</label>
                                    <input type="file" class="form-control" multiple />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Report</label>
                                    <input type="file" class="form-control" multiple />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label class="control-label lb-sm">Remarks</label><span style="color:red"></span>
                                    <textarea type="text" class="form-control"></textarea>
                                </div>

                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-12" style="justify-content:center">
                                    <input type="submit" value="Create" class="btn btn-primary  dda-pageheading" />
                                    @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
                                    @Html.ActionLink("Back", "Index", "WatchWard", null, new { @class = "btn btn-primary  dda-pageheading" })
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
            <environment include="Development">
                <script src="~/js/watchward.js"></script>
            </environment>
            <environment exclude="Development">
                <script src="~/js/watchward.min.js" asp-append-version="true"></script>
            </environment>
