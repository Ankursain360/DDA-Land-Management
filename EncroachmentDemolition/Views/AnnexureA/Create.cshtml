                            <div class="row mt-md-3">

                                <div class="col-md-4">
                                    <div class="floating-label-wrap">
                                        <select class="floating-label-field floating-label-field--s3" asp-for="Encroachment.AreaUnit" disabled>
                                            <option value="1">Sq Yd.</option>
                                            <option value="2">Acre</option>
                                            <option value="3">Hectare</option>
                                            <option value="4">Sq. Mt.</option>
                                        </select>
                                        <label asp-for="Encroachment.AreaUnit" class="floating-label">Area Unit </label>
                                    </div>
                                </div>
                            </div>

                            <div id="AreainSqAcreHec">
                                <div class="row mt-md-3">
                                    <div class="col-md-4">
                                        <div class="floating-label-wrap mb-3 mb-md-0">
                                            <input asp-for="Encroachment.TotalAreaInSqAcreHt" type="text" disabled class="floating-label-field floating-label-field--s3 numbers TotalCalculation" placeholder="Total Area(Sq Yd./Acre/Hectare)" onkeypress="return numericDecimal(this);" onpaste="return false;" />
