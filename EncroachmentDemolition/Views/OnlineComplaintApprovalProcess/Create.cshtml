@model Libraries.Model.Entity.Onlinecomplaint
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("PageHeader", new { pageName = "Online Complaint Approval Proccess" })
<br />
<br />
<form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
    <h3 class="mb-3 d-flex"> Details</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div id="WatchWardDetailsDiv">

    </div>
    <div class="table-section bg-white border shadow rounded pb-3">
        <div class="table-responsive px-2" id="divHistoryDetails">

        </div>
    </div>
    <div class="row pt-4">
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" asp-for="ApprovalStatus">
                    @*<option value="1">Forward To CLM</option>
                        <option value="2">Approved</option>
                        <option value="3">Reject</option>*@
                    <option value="1">Forward</option>
                    <option value="2">Revert</option>
                    <option value="3">Approved</option>
                </select>
                <label asp-validation-for="ApprovalStatus" class="error"></label>
                <label class="floating-label">Status<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-12">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <textarea asp-for="ApprovalRemarks" type="text" placeholder="Remarks" class="floating-label-field floating-label-field--s3"></textarea>
                <span asp-validation-for="ApprovalRemarks" class="text-danger"></span>
                <label class="floating-label">Remarks<span style="color:red">*</span></label>
            </div>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-12">
            <input type="submit" value="Submit" class="btn btn-theme " />
            @Html.ActionLink("Back", "Index", "OnlineComplaintApprovalProcess", null, new { @class = "btn btn-theme " })
        </div>
    </div>
</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/watchandwardapproval.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/watchandwardapproval.min.js" asp-append-version="true"></script>
</environment>
