@model Libraries.Model.Entity.Restorationentry
@{
    ViewData["Title"] = "Restration";
    Layout = "~/Views/Shared/_LayoutApproval.cshtml";
}

<div class="row mt-md-3">
    <div class="col-md-12">
        <div class="col-md-12">
            <h6 class="pull-left" style="color:#007bff;margin-top:5px;">Restoration Entry</h6>
        </div>
    </div>
</div>
<br />
<br />
<form id="myForm" asp-action="Edit" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
    <h3 class="mb-3 d-flex">
        Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span>
    </h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Cancellationid" />
    <input type="hidden" asp-for="AllotmentId" />
    <div id="DivCancellationDetails"> 
    </div> 
    <div class="row pt-4">
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <input placeholder="Restoration Order No" asp-for="RestorationOrder" type="text"
                       class="floating-label-field floating-label-field--s3" />
                <span asp-validation-for="RestorationOrder" class="text-danger"></span>
                <label class="floating-label">Restoration Order No.<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input placeholder="Date of Restoration" asp-for="RestorationDate" type="date"
                       class="floating-label-field floating-label-field--s3" />
                <span asp-validation-for="RestorationDate" class="text-danger"></span>
                <label class="floating-label">Date of Restoration </label>
            </div>
        </div>
    </div>  
    <div class="row pt-3">
        <div class="col-md-12">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <textarea asp-for="RestorationRemarks" type="text" placeholder="Remarks" class="floating-label-field floating-label-field--s3"></textarea>
                <span asp-validation-for="RestorationRemarks" class="text-danger" style="display:none;" id="ApprovalRemarksMessage">Remarks Is Mandatory</span>
                <label class="floating-label">Remarks<span style="color:red">*</span></label>
            </div>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-12">
            <input type="submit" value="Submit" class="btn btn-theme " id="btnCreate" />
            @Html.ActionLink("Back", "Index", "RestorationEntry", null, new { @class = "btn btn-theme " })
        </div>
    </div>
</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development"> 
    <script src="~/js/restorationentryedit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/restorationentryedit.min.js" asp-append-version="true"></script>
</environment>