@model Libraries.Model.Entity.Allotmententry
@await Component.InvokeAsync("PageHeader", new { pageName = "Allotment Entry" })

<div class="pt-3">
    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Edit Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="ApplicationId" asp-items="@(new SelectList(Model.LeaseappList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="ApplicationId" class="text-danger"></span>
                    <label asp-for="ApplicationId" class="floating-label">Applicant Name </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input disabled asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label"> Name    </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input disabled asp-for="Address" placeholder="Address" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <label class="floating-label">Address    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input disabled asp-for="ContactNo" placeholder="Contact No" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                    <label class="floating-label">Contact No    </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input disabled asp-for="LandAreaSqMt" placeholder="Required Area"
                           type="text" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="LandAreaSqMt" class="text-danger"></span>
                    <label class="floating-label">Required Area   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="TotalArea" placeholder="Alloted Area" type="text"
                           class="floating-label-field floating-label-field--s3 numbers" id="parea" />
                    <span asp-validation-for="TotalArea" class="text-danger"></span>
                    <label class="floating-label">AllotedArea(in sq mt) </label>
                </div>
            </div>
        </div>
        <h3 class="my-3 d-flex sub-heading">Lease Details</h3>
        <div class="row mt-md-3">
            @*<div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="LeasesTypeId" asp-items="@(new SelectList(Model.LeaseTypeList, "Id","Type"))">
                        <option disabled="disabled" selected value="">Select</option>

                    </select>
                    <span asp-validation-for="LeasesTypeId" class="text-danger"></span>
                    <label class="floating-label">Lease Type </label>
                </div>
            </div>*@
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" id="ddlJudgement" asp-for="LeasesTypeId">

                        <option value="1">Perpectual</option>
                        <option value="2">Temprory</option>
                        <option value="3">Both</option>
                    </select>
                    <label class="floating-label" asp-for="LeasesTypeId">Lease Type</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3" id="aarea">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Name" asp-for="BuildingArea"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="BuildingArea" class="text-danger"></span>
                    <label class="floating-label"> Building Area   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Name" asp-for="PlayGroundArea"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="PlayGroundArea" class="text-danger"></span>
                    <label class="floating-label"> Open Area/Playfield Area   </label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="PhaseNo" placeholder="Phase No" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="PhaseNo" class="text-danger"></span>
                    <label class="floating-label">Phase No  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="SectorNo" placeholder="Sector No" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="SectorNo" class="text-danger"></span>
                    <label class="floating-label">Sector No  </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="PocketNo" placeholder="Pocket No" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="PocketNo" class="text-danger"></span>
                    <label class="floating-label">Pocket No  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="PlotNo" placeholder="Plot No" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="PlotNo" class="text-danger"></span>
                    <label class="floating-label">Plot No  </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-4">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="LeasePurposesTypeId" asp-items="@(new SelectList(Model.LeasePurposeList, "Id","PurposeUse"))"
                            onchange="return onChange(this.options[this.selectedIndex].value);">
                        <option disabled="disabled" selected value="">Select</option>



                    </select>
                    <span asp-validation-for="LeasePurposesTypeId" class="text-danger"></span>
                    <label class="floating-label">Purpose </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="LeaseSubPurposeId" asp-items="@(new SelectList(Model.LeaseSubPurposeList, "Id","SubPurposeUse"))">
                        <option value="">--Select-- </option>
                    </select>




                    <span asp-validation-for="LeaseSubPurposeId" class="text-danger"></span>
                    <label class="floating-label">SubPurpose </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input value="" asp-for="AllotmentDate" placeholder="Allotment Date" type="date"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="AllotmentDate" class="text-danger"></span>
                    <label class="floating-label">Allotment Date </label>
                </div>

            </div>

        </div>
        <h3 class="my-3 d-flex sub-heading">Lease Amount</h3>

        <div class="row mt-md-3" id="amount">
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Name" asp-for="PremiumRate"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="PremiumRate" class="text-danger"></span>
                    <label class="floating-label">Premium Rate   </label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" placeholder="Name" asp-for="PremiumAmount"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="PremiumAmount" class="text-danger msg"></span>
                    <label class="floating-label"> Premium Amount </label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Name" asp-for="GroundRate"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="GroundRate" class="text-danger"></span>
                    <label class="floating-label">Ground Rate  </label>
                </div>

            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="AmountGroundRate" placeholder="AmountGroundRate" type="text"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="AmountGroundRate" class="text-danger"></span>
                    <label class="floating-label">Ground Rent </label>
                </div>
            </div>

        </div>

        <div class="row mt-md-3" id="fee">
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input id="nyears" placeholder="Name" asp-for="NoOfYears" type="text"
                           class="floating-label-field floating-label-field--s3 numbers " />
                    <span asp-validation-for="NoOfYears" class="text-danger msg"></span>
                    <label class="floating-label"> Lease Years  </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Name" asp-for="LicenceFees"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="LicenceFees" class="text-danger msg"></span>
                    <label class="floating-label"> License Fee </label>
                </div>
            </div>

            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Name" asp-for="AmountLicFee" type="text"
                           class="floating-label-field floating-label-field--s3 numbers " />
                    <span asp-validation-for="AmountLicFee" class="text-danger msg"></span>
                    <label class="floating-label"> Amoun Of Licence Fee  </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input value="" placeholder="Name" asp-for="DocumentCharge"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="DocumentCharge" class="text-danger"></span>
                    <label class="floating-label">Document Charge  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="TotalAmount" placeholder="TotalAmount" type="text"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    <label class="floating-label">Total Amount </label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="Remarks" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Remarks">

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label asp-for="Remarks" class="floating-label">Remarks </label>
                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "AllotmentEntry", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/allotmententrycreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/allotmententrycreate.min.js" asp-append-version="true"></script>
</environment>
