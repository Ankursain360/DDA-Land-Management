@model IEnumerable<Libraries.Model.Entity.Hearingdetails>
    <div class="table-section bg-white border shadow rounded ">
        <div class="table-responsive">
            <table class="table table-sm table-bordered mb-0 table-striped">
                <thead class="text-nowrap">
                    <tr>
                        <th>Hearing Date </th>
                        <th>Hearing Time</th>
                        <th>Hearing Venue</th>
                        <th>Attendee</th>
                        <th>Hearing Remarks</th>

                        <th> Status</th>
                       

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>  @item.HearingDate</td>

                        <td>@item.HearingTime</td>
                        <td>@item.HearingVenue</td>
                        <td>@item.Attendee</td>
                        <td>@item.Remark</td>



                        @* <td>  @(Convert.ToDateTime(item.ToDate).ToString("dd-MMM-yyyy"))</td>*@

                        <td>
                            @if (item.IsActive == 1)
                            {
                                <span class="badge badge-primary px-2 py-1">Active</span> }
                            else
                            {
                                <span class="badge badge-danger px-2 py-1">Inactive</span>}
                        </td>

                        @*<td>
                            @if (item.DocumentPatth != null)
                            {
                                <a class="badge badge-primary px-2" asp-action="ViewEvidence" asp-route-id="@item.Id" target="_blank"> (View)</a>
                            }
                            else
                            {
                                <a>No Document</a>
                            }
                        </td>*@

                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <th colspan="14" style="text-align:center"> No Record Available! </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
  