@model IEnumerable<Libraries.Model.Entity.Allotteeevidenceupload>
    <div class="table-section bg-white border shadow rounded ">
        <div class="table-responsive">
            <table class="table table-sm table-bordered mb-0 table-striped">
                <thead class="text-nowrap">
                    <tr>
                        <th>Document Name</th>
                        <th>Document</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>

                               
                                <td>
                                    @item.DocumentName
                                </td>
                              
                                <td>
                                    @if (item.DocumentPatth != null)
                                    {
                                        <a class="badge bg-primary px-2" asp-action="ViewEvidence" asp-route-id="@item.Id" target="_blank"> (View)</a>
                                    }
                                    else
                                    {
                                        <a>No Document</a>
                                    }
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <th colspan="14" style="text-align:center"> No Record Available! </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
  