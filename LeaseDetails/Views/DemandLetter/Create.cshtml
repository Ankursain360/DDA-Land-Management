@model Libraries.Model.Entity.Leaseapplication
@await Component.InvokeAsync("PageHeader", new { pageName = "Demand Letter" })
<div class="pt-3">
    <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Create</h3>


        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">


                    <select asp-for="RefNo" class="floating-label-field floating-label-field--s3" id="ddlRefNo">
                        <option value="">--Select--</option>
                        @foreach (var item in Model.RefNoList)
                        {
                            <option value="@item.Id"> @item.Application.RefNo ( @item.Application.Name )</option>
                        }
                    </select>



                    @*<select class="floating-label-field floating-label-field--s3"
                                asp-for="ApplicationId" asp-items="@(new SelectList(Model.ApplicationList, "Id","Application.RefNo"))">
                            <option disabled="disabled" selected value="">Select</option>
                        </select>*@
                    <span asp-validation-for="RefNo" class="text-danger"></span>
                    <label asp-for="RefNo" class="floating-label">Application Reference No<span style="color:red">*</span>  </label>
                </div>
            </div>

            <div class=" col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input placeholder="Address" type="text"
                           class="floating-label-field floating-label-field--s3" id="refNo" />
                    <span class="text-danger"></span>
                    <label class="floating-label">Reference No/Letter No <span style="color:red">*</span>  </label>
                </div>
            </div>



        </div>
        <div class="row mt-md-3">

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input value="" placeholder="Contact No" type="text"
                           class="floating-label-field floating-label-field--s3" id="prevamt" />
                    <span class="text-danger"></span>
                    <label class="floating-label">Previous Amount<span style="color:red">*</span>  </label>
                </div>
            </div>


        </div>


        <div class="row mt-md-3">
            <div class=" col-md-2">


                <input type="button" value="Generate" id="btnGenerate" class="btn btn-theme" />

               </div>
                <div class=" col-md-2">
                    <button class="btn btn-theme " type="submit">Reset</button>
                    @*@Html.ActionLink("Back", "Index", "DemandLetter", null, new { @class = "btn btn-theme " })*@
                </div>
            </div>
        <div id="Vieww"> </div>

    </form>


</div>

<environment include="Development">
    <script src="~/js/DemandletterReport.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/DemandletterReport.min.js" asp-append-version="true"></script>
</environment>
