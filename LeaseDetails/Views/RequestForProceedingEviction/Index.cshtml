
@model IEnumerable<Libraries.Model.Entity.Requestforproceeding>
@await Component.InvokeAsync("PageHeader", new { pageName = "Request for proceeding" })

<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Search</h3>
        <div class="row">
            <div class="col-md-3 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtReferenceNo" class="floating-label-field floating-label-field--s3" placeholder="Name" />
                    <label for="txtReferenceNo" class="floating-label"> Reference No.</label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtFileNo" class="floating-label-field floating-label-field--s3" placeholder="Code" />
                    <label for="txtFileNo" class="floating-label">Society Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="txtSubject" class="floating-label-field floating-label-field--s3" placeholder="Code" />
                    <label for="txtSubject" class="floating-label">Subject</label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="Date" id="txtFromDate" class="floating-label-field floating-label-field--s3" placeholder="From Date" />
                    <label for="txtFromDate" class="floating-label">Allotment Date(From Date)</label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="Date" id="txtToDate" class="floating-label-field floating-label-field--s3" placeholder="To Date">
                    <span class="text-danger msg"></span>
                    <label for="txtToDate" class="floating-label">Allotment Date(To Date)</label>
                </div>
            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button class="btn btn-link btn-block d-flex align-items-center justify-content-center" id="btnReset" type="reset">
                            <i class="ri-refresh-line mr-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">
                        <button class="btn btn-theme btn-block" id="btnSearch" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end mr-auto">
                <div class="floating-label-wrap">
                    <select id="ddlSort" class="floating-label-field floating-label-field--s3">

                        <option value="ALLOTMENTNO">Reference No.</option>
                        <option value="LETTERREFNO">Society Name</option>
                        @*<option value="FileNo">File No</option>*@
                        <option value="SUBJECT">Subject</option>
                        <option value="Status">Status</option>
                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" id="btnAscending" title="Ascending order"><i class="ri-sort-asc"></i></span>
                    <span class="btn slow" id="btnDescending" title="Descending order"><i class="ri-sort-desc"></i></span>
                </div>
            </div>




            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">
                <a href="/RequestForProceedingEviction/create" class="d-flex align-items-center btn btn-primary mr-2">
                    <i class="ri-add-fill mr-2 mr-lg-1"></i>
                    <small>Add More</small>
                </a>
                <a href="/RequestForProceedingEviction/RequestforproceedingList" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line mr-2 mr-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>

        </div>

        <div class="table-responsive px-2" id="divTable">

        </div>


    </div>



</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/requestforproceedingindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/requestforproceedingindex.min.js" asp-append-version="true"></script>
</environment>

