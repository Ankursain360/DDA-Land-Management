@model Libraries.Model.Entity.Allotmententry


<form method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <h3 class="my-3 d-flex sub-heading ">Application Details  </h3>
    <div class="row mt-md-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input disabled asp-for="Application.Name" type="text"
                       class="floating-label-field floating-label-field--s3" />
                <span asp-validation-for="Application.Name" class="text-danger"></span>
                <label class="floating-label"> Socity/Allottee Name    </label>
            </div>
        </div>
        <div class=" col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input disabled asp-for="Application.Address" placeholder="Address" type="text"
                       class="floating-label-field floating-label-field--s3" />
                <span asp-validation-for="Application.Address" class="text-danger"></span>
                <label class="floating-label">Address    </label>
            </div>
        </div>
    </div>
    <div class="row mt-md-3">

        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">

                <input disabled asp-for="Application.ContactNo" placeholder="Contact No" type="text"
                       class="floating-label-field floating-label-field--s3" />
                <span asp-validation-for="Application.ContactNo" class="text-danger"></span>
                <label class="floating-label">Contact No    </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select disabled class="floating-label-field floating-label-field--s3" asp-for="LeasesTypeId"
                        asp-items="@(new SelectList(Model.LeaseTypeList, "Id","Type"))">
                    <option disabled="disabled" selected value="">Select</option>
                </select>
                <label class="floating-label">Lease Type </label>
            </div>
        </div>
    </div>
    <div class="row mt-md-3">
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input disabled asp-for="TotalArea" type="text"
                       class="floating-label-field floating-label-field--s3" />
                <label class="floating-label"> Area   </label>
            </div>
        </div>
        <div class=" col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input disabled asp-for="AllotmentDate" placeholder="Address" type="date"
                       class="floating-label-field floating-label-field--s3" />
                <label class="floating-label">Allotement Date  </label>
            </div>
        </div>
    </div>
    <div class="row mt-md-3">
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select disabled class="floating-label-field floating-label-field--s3"
                        asp-for="LeasePurposesTypeId" asp-items="@(new SelectList(Model.LeasePurposeList, "Id","PurposeUse"))">
                    <option disabled="disabled" selected value="">Select</option>
                </select>
                <label class="floating-label">Purpose </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select disabled class="floating-label-field floating-label-field--s3" asp-for="LeaseSubPurposeId"
                        asp-items="@(new SelectList(Model.LeaseSubPurposeList, "Id","SubPurposeUse"))">
                    <option disabled="disabled" selected value="">Select</option>
                </select>
                <label class="floating-label">Sub Purpose </label>
            </div>
        </div>
    </div>
</form>




<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
