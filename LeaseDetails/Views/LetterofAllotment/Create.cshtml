@model Libraries.Model.Entity.Leaseapplication
@await Component.InvokeAsync("PageHeader", new { pageName = "Allotment Letter" })
<link href="~/css/PrintLabel.css" rel="stylesheet" />

<div class="pt-3">
    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" target="_blank">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="RefNo" asp-items="@(new SelectList(Model.RefNoList, "Id","Application.RefNo"))" id="ddlRefNo">
                        <option disabled="disabled" selected value="">Select</option>
                    </select>
                    <span asp-validation-for="RefNo" class="text-danger"></span>
                    <label asp-for="RefNo" class="floating-label">Application Reference No  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3 " id="txtRefernceNumber" required />
                    <span class="text-danger"></span>
                    <label class="floating-label">Refernce / Allotment Number   </label>
                </div>
            </div>
           
        </div>

        <div class="row mt-md-3">
        <div class=" col-md-12">
          
        <button class="btn btn-theme " id="btnGenerate" action="Receipt">Generate</button>
        <button class="btn btn-theme " id="btnReset">Reset</button>
      
        </div>
        </div>
        <div id="View"> </div>


    </form>
</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/allotmentletter.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/allotmentletter.min.js" asp-append-version="true"></script>
</environment>
