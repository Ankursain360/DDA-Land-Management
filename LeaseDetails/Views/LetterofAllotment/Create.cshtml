@model Libraries.Model.Entity.Allotmentletter
@await Component.InvokeAsync("PageHeader", new { pageName = "Allotment Letter" })
<link href="~/css/PrintLabel.css" rel="stylesheet" />

<div class="pt-3">
    <div asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" >
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="AllotmentId" class="floating-label-field floating-label-field--s3" id="ddlRefNo" >
                        <option value="">--Select--</option>
                        @foreach (var item in Model.RefNoList)
                        {
                <option value="@item.Id"> @item.Application.RefNo ( @item.Application.Name )</option>}
                    </select>
                    <span asp-validation-for="AllotmentId" class="text-danger"></span>
                    <label asp-for="AllotmentId" class="floating-label">Application Reference No  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3 " id="txtRefernceNumber" limit="50" required asp-for="ReferenceNumber" />
                    <span class="text-danger"></span>
                    <label class="floating-label">Refernce / Allotment Number   </label>
                </div>
            </div>
           
        </div>

        <div class="row mt-md-3">
            <div class=" col-md-12">
                   @*<button class="btn btn-theme " id="btnGenerate" action="Receipt">Generate</button>*@
                <button class="btn btn-theme" type="submit" id="btnGenerate">Generate</button>
                <button class="btn btn-theme" id="btnReset">Reset</button>

            </div>
        </div>
        <div id="View"> </div>


    </div>
</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/allotmentletter.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/allotmentletter.min.js" asp-append-version="true"></script>
</environment>
