@model Libraries.Repository.Common.PagedResult<Libraries.Model.Entity.Hearingdetails>


<table class="table table-sm table-bordered mb-0 table-striped">
    <thead class="text-nowrap">
        <tr>

            <th>Hearing Date </th>
            <th>Hearing Time</th>
            <th>Hearing Venue</th>
            <th>Attendee</th>
            <th>Hearing Remarks</th>

            <th> Status</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                @*<td> @(item.Allotment.LRefNo == null?"": item.Allotment.Name)</td>*@
                <td>@(Convert.ToDateTime(item.HearingDate).ToString("dd-MMM-yyyy"))  </td>

                <td>@item.HearingTime</td>
                <td>@item.HearingVenue</td>
                <td>@item.Attendee</td>
                <td>@item.Remark</td>



                @* <td>  @(Convert.ToDateTime(item.ToDate).ToString("dd-MMM-yyyy"))</td>*@

                <td>
                    @if (item.IsActive == 1)
                    {
                        <span class="badge badge-primary px-2 py-1">Active</span> }
                    else
                    {
                        <span class="badge badge-danger px-2 py-1">Inactive</span>}
                </td>
                <td>
                    <div class="action-btns">
                        <a asp-action="Edit" asp-route-id="@item.Id" title="edit" class="edit"> <i class="ri-edit-line"></i> </a>
                    </div>

                </td>

            </tr>
        }
    </tbody>

</table>

@await Component.InvokeAsync("Pager", new { totalCount = Model.RowCount, pageNumber = Model.CurrentPage, pageSize = Model.PazeSize })
