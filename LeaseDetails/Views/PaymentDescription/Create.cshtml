@model Libraries.Model.Entity.Leaseapplication
@await Component.InvokeAsync("PageHeader", new { pageName = "Payment Description" })


<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">
            Details<span style="margin-left:800px"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span>
        </h3>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">


                    <select asp-for="RefNo" class="floating-label-field floating-label-field--s3" id="ddlRefNo">
                        <option value="">--Select--</option>
                        @foreach (var item in Model.RefNoList)
                        {
                            <option value="@item.Id"> @item.Application.RefNo ( @item.Application.Name )</option>
                        }
                    </select>

                    <span asp-validation-for="RefNo" class="text-danger"></span>
                    <label asp-for="RefNo" class="floating-label">Application Reference No  </label>
                </div>
            </div>





        </div>


        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button id="btnReset" class="btn btn-link btn-block d-flex align-items-center justify-content-center" type="reset">
                            <i class="ri-refresh-line me-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">

                        <input type="submit" value="Generate" id="btnGenerate" class="btn btn-theme" />

                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="table-section bg-white border shadow rounded">

        <div class="table-responsive px-2">
            <div id="View">

            </div>
        </div>
    </div>

</div>










<environment include="Development">
    <script src="~/js/PaymentDescriptiondetailsreport.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/PaymentDescriptiondetailsreport.min.js" asp-append-version="true"></script>
</environment>
