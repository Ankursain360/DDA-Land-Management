@model Libraries.Model.Entity.Extension
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutApproval.cshtml";
}

<div class="row mt-md-3">
    <div class="col-md-12">
        <div class="col-md-12">
            <h6 class="pull-left" style="color:#007bff;margin-top:5px;">Extension Service Approval</h6>
        </div>
    </div>
</div>
<br />
<br />
<form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
    <h3 class="mb-3 d-flex"> Details</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div id="ExtensionDetailsDiv">

    </div>
    <div class="table-section bg-white border shadow rounded pb-3">
        <div class="table-responsive px-2" id="divHistoryDetails">

        </div>
    </div>
    <div class="row pt-4">
        <div class="col-md-6">
            <div class="floating-label-wrap">

                <select class="floating-label-field floating-label-field--s3" asp-for="ApprovalStatus">
                    @*asp-items="@(new SelectList(Model.ApprovalStatusList, "Id","Name"))"*@
                    <option value="1">Forward</option>
                    <option value="2">Revert</option>
                    <option value="3">Approved</option>
                </select>
                <label asp-validation-for="ApprovalStatus" class="error"></label>
                <label class="floating-label">Status<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input asp-for="ApprovalDocument" type="file" class="floating-label-field floating-label-field--s3"
                       accept="application/pdf" />
                <span asp-validation-for="ApprovalDocument" class="text-danger"></span>
                <label class="floating-label">Document</label>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-12">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <textarea asp-for="ApprovalRemarks" type="text" placeholder="Remarks" class="floating-label-field floating-label-field--s3"></textarea>
                <span asp-validation-for="ApprovalRemarks" class="text-danger"></span>
                <label class="floating-label">Remarks<span style="color:red">*</span></label>
            </div>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-md-12">
            <input type="submit" value="Submit" class="btn btn-theme " />
            @Html.ActionLink("Back", "Index", "ExtensionApproval", null, new { @class = "btn btn-theme " })
        </div>
    </div>
</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/extensionapprovalcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/extensionapprovalcreate.min.js" asp-append-version="true"></script>
</environment>
