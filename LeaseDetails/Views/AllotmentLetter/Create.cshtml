@model Libraries.Model.Entity.Leaseapplication 
@await Component.InvokeAsync("PageHeader", new { pageName = "Allotment Letter" })

<div class="pt-3">
    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input  placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3 " value="" />
                    <span  class="text-danger"></span>
                    <label class="floating-label">Refernce Number   </label>
                      </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input  placeholder="Name" type="date"
                           class="floating-label-field floating-label-field--s3 " value="" />
                    <span  class="text-danger"></span>
                    <label class="floating-label">Date   </label>
                </div>
            </div>
        </div>
        
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Generate</button>
                <button class="btn btn-theme " type="submit">Reset</button>
                @Html.ActionLink("Back", "Index", "AllotmentLetter", null, new { @class = "btn btn-theme " })
            </div>
        </div>
    </form>
</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/premiumrate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/premiumrate.min.js" asp-append-version="true"></script>
</environment>
