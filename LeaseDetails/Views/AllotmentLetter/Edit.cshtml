@model Libraries.Model.Entity.Allotmentletter
@await Component.InvokeAsync("PageHeader", new { pageName = "Allotment Letter" })

<div class="pt-3">
    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
        <h3 class="mb-3 d-flex">Edit Details / Upload Letter</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="AllotmentId" class="floating-label-field floating-label-field--s3" id="ddlRefNo">
                        <option value="">--Select--</option>
                        @foreach (var item in Model.RefNoList)
                        {
                            <option value="@item.Id"> @item.Application.RefNo ( @item.Application.Name )</option>
                        }
                    </select>

                    <span asp-validation-for="AllotmentId" class="text-danger"></span>
                    <label asp-for="AllotmentId" class="floating-label">Application Reference No  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3 " id="txtRefernceNumber" required asp-for="ReferenceNumber" />
                    <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                    <label class="floating-label">Refernce / Allotment Number   </label>
                </div>
            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <input type="hidden" asp-for="FilePath" />
                <input class="floating-label-field floating-label-field--s3" asp-for="DocFile" placeholder="AllotmentLetter Upload" type="file" id="file" />


                <span class="text-danger" asp-validation-for="FilePath"></span>
                <label class="floating-label">Upload Allotment Letter  </label>

            </div>
        </div>
       
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                     
                        <button class="btn btn-theme " id="btnGenerate" type="submit">Update </button>
                        <button class="btn btn-theme " id="btnGenerate" action="UploadAllotmentLetter">Upload </button>
                    
                </div>
            </div>
        </div>
        <div id="View"> </div>


    </form>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/allotmentletter.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/allotmentletter.min.js" asp-append-version="true"></script>
</environment>