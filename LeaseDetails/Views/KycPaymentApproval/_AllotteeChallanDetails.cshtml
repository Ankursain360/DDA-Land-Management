@model Libraries.Model.Entity.Kycdemandpaymentdetails

<div class="permission mt-2 accordion list-unstyled m-0 ">
    <div class="card">
        <a class="p-2 no-dec d-flex align-items-center" data-toggle="collapse" href="#collapsePaymentRpt" role="button" aria-expanded="true"
           aria-controls="collapsePaymentRpt">
            <i class="ri-arrow-right-s-fill"></i>
            <span class="text ml-1 mr-auto">If Allottee not agreed with the amount deposited shown in DDA record, He/she can enter the challan</span>
            <i class="arrow ri-arrow-drop-down-line slow"></i>
        </a>
        <div class="list-unstyled m-0 pl-2 pr-1 pl-md-4 pr-md-3 collapse" id="collapsePaymentRpt">



            <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
                @*<h3 class="mb-3 d-flex">Demand Details as per DDA records (System Generated by the Lease Ground rent/license application) </h3>*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="KycId" />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FileNo" />
                <input type="hidden" asp-for="IsPaymentAgreed" />


                <h3 class="my-3 d-flex sub-heading">If Allottee not agreed with the amount deposited shown in DDA record, He/she can enter the challan details in below table: </h3>
                <div id="Divclsification" class="mt-md-3">

                    <div class="row">
                        <div class="col-md-3">
                            <input type="hidden" asp-for="IsPaymentAgreed" />

                            <div class="form-check theme">
                                <input asp-for="IsPaymentAgreed" disabled class="form-check-input" type="radio" name="IsPaymentAgreed" id="rOriginal" value="Y">
                                <label class="form-check-label" for="radio">
                                    Yes
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check theme">
                                <input asp-for="IsPaymentAgreed" disabled class="form-check-input" type="radio" name="IsPaymentAgreed" id="rSubsequent" value="N">
                                <label class="form-check-label" for="radio">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="DivForSubsequentPurchaser" style="display:none">

                    <h3 class="my-3 d-flex sub-heading">Details to be entered by Applicant in the Lease Ground rent/license application when chosen to update the payments at applicant’s level)</h3>



                    <div class="table-section bg-white border shadow rounded">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered mb-0 table-striped" id="tbl_posts2">
                                <thead class="text-nowrap">
                                    <tr>
                                        <th>Sr.No</th>
                                        <th>Verify</th>
                                        <th>Payment Type (Ground Rent/License Fee/Interest etc.)</th>
                                        <th>Period From –To (Optional)</th>
                                        <th>Challan No./Transaction No./UTR No.</th>
                                        <th>Amount</th>
                                        <th>Date of Payment by the allottee</th>
                                        <th>Proof of Payment in pdf</th>
                                        <th>
                                            DDA Bank in which credited
                                            (Optional)
                                        </th>
                                        @*<th>Action</th>*@
                                    </tr>
                                </thead>
                                <tbody id="tbl_posts2_body">
                                </tbody>
                                <tbody class="tbody" id="add2">
                                    <tr id="">
                                    <tr>
                                        <td style="text-align:center;"><span class="sn2">1</span></td>
                                        <td>
                                            <div class="form-check">
                                                @*<input type="hidden" asp-for="SitePosition" />*@
                                                <div class="form-check theme">
                                                    <input class="form-check-input chkAction" type="checkbox" asp-for="IsVerified">
                                                    <label class="form-check-label" for="checkbox">
                                                        Verify
                                                    </label>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <input asp-for="PaymentType" type="text" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="PaymentType" class="d-block text-danger field-validation-valid"></span>

                                        </td>
                                        <td>
                                            <input asp-for="Period" type="text" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="Period" class="d-block text-danger field-validation-valid"></span>

                                        </td>
                                        <td>
                                            <input asp-for="ChallanNoR" type="text" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="ChallanNoR" class="d-block text-danger field-validation-valid"></span>

                                        </td>
                                        <td>
                                            <input asp-for="Amount" type="text" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="Amount" class="d-block text-danger field-validation-valid"></span>

                                        </td>
                                        <td>
                                            <input asp-for="DateofPaymentByAllottee" type="Date" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="DateofPaymentByAllottee" class="d-block text-danger field-validation-valid"></span>

                                        </td>
                                        <td>
                                            <input asp-for="Proofinpdf" type="text" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="Proofinpdf" class="d-block text-danger field-validation-valid"></span>

                                        </td>

                                        <td>
                                            <input asp-for="Ddabankcredit" type="text" class="floating-label-field floating-label-field--s3" />
                                            <span asp-validation-for="Ddabankcredit" class="d-block text-danger field-validation-valid"></span>
                                        </td>

                                        @*<td>
                                                <div class="action-btns">
                                                    <a class="remove delete-record2 " title="delete" data-id="0" style="display:none;font-size:30px;"><i class="ri-delete-bin-fill"></i></a>
                                                    <a class="view add-record2" data-added="0" title="Add" style="font-size:30px;"><i class="ri-add-circle-fill"></i></a>
                                                </div>
                                            </td>*@

                                    </tr>



                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>




            </form>



            <br />

        </div>
    </div>
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">
    <script src="~/js/DemandDetailsCreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/DemandDetailsCreate.min.js" asp-append-version="true"></script>
</environment>


