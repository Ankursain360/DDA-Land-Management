@*@model Dto.Search.DemandPaymentDetailsDto*@
@model  IEnumerable<Libraries.Model.Entity.Kycdemandpaymentdetailstablea>

<div class="permission mt-2 accordion list-unstyled m-0 ">
    <div class="card">
        <a class="p-2 no-dec d-flex align-items-center" data-toggle="collapse" href="#collapsePayment" role="button" aria-expanded="true"
           aria-controls="collapsePayment">
            <i class="ri-arrow-right-s-fill"></i>
            <span class="text ml-1 mr-auto">Demand Details as per DDA records (System Generated)</span>
            <i class="arrow ri-arrow-drop-down-line slow"></i>
        </a>
        <div class="list-unstyled m-0 pl-2 pr-1 pl-md-4 pr-md-3 collapse" id="collapsePayment">
            @*<form asp-action="UpdatePayment" method="post">*@
            <form>
                @*<input type="hidden" asp-for="DemandPaymentId" />
                <input type="hidden" asp-for="Id" />*@
                <div id="details">
                    <div class="table-section bg-white border shadow rounded">

                        <table class="table table-sm table-bordered mb-0 table-striped">
                            <thead class="text-nowrap">

                                <tr>

                                    <th>Demand Period</th>
                                    <th>Ground Rent </th>
                                    <th>Interest Rate </th>
                                    <th>Total Dues </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <td>
                                                <input asp-for="@item.DemandPeriod" id="DemandPeriod" type="text" class="floating-label-field floating-label-field--s3" />
                                            </td>
                                            <td>
                                                <input asp-for="@item.GroundRent" id="GroundRent" type="text" class="floating-label-field floating-label-field--s3" />
                                            </td>
                                            <td>
                                                <input asp-for="@item.InterestRate" id="InterestRate" type="text" class="floating-label-field floating-label-field--s3" />
                                            </td>
                                            <td>
                                                <input asp-for="@item.TotdalDues" id="TotdalDues" type="text" class="floating-label-field floating-label-field--s3" />
                                            </td>


                                        </tr>
                                     }
                                 }
                                else
                                {
                                    <tr>
                                        <th colspan="13" style="text-align:center"> Data Not Available </th>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
                <br />

                <div class="row pt-3">
                    <div class="col-md-12">
                        <input class="btn btn-theme" type="button" id="btnUpdatePaymentDetails" value="Update Payment Details" onclick="UpdatePaymentDetails();"/>

                        @*<a asp-action="UpdatePayment" asp-route-id="@Model.DemandPaymentId">
                            <input class="btn btn-theme " value="Update Payment Details" />
                        </a>*@
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
