<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Off"
      internalLogFile="C:\App\Log\InnerLog.txt">
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>
	<targets>
		<target name="database"
			xsi:type="Database"
			connectionString="server=49.50.87.108;port=3306;user=root;password=Google@123;database=lms"
			dbProvider="MySql.Data.MySqlClient.MySqlConnection, MySql.Data">

			<commandText>
				INSERT INTO lms.log
				(TraceId,
				Application,
				Logged,
				Level,
				Message,
				Logger,
				Callsite,
				Exception,
				CreatedBy,
				CreatedDate)
				VALUES
				(@traceId,
				@application,
				@logged,
				@level,
				@message,
				@logger,
				@callSite,
				@exception,
				@createdby,
				@createddate);
			</commandText>

			<parameter name="@traceId"  layout="${var:traceId}" />
			<parameter name="@application" layout="LeaseDetails" />
			<parameter name="@logged" layout="${date}" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@message" layout="${message}" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@callSite" layout="${callsite:filename=true}" />
			<parameter name="@exception" layout="${exception:tostring}" />
			<parameter name="@createdby" layout="1" />
			<parameter name="@createddate" layout="${date}" />
		</target>
	</targets>
	<rules>
		<logger name="*" minlevel="Error" writeTo="database" />
	</rules>
</nlog>

