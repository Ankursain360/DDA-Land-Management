@model Dto.Master.UserProfileDto

<div class="dropdown user text-white order-md-4">
    <a href="#" role="button" id="profile"
       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
       class="p-2 d-block text-white no-dec">
        <div class="d-flex align-items-center profile">
            <figure class="m-0 d-none">
                <img src="~/images/favicon.png" alt="user-image" class="rounded-circle" width="34" height="34" />
            </figure>
            <strong class="text-img rounded-circle d-block">
                @Model.User.UserName.Substring(0, 1)
            </strong>
            <span class="ms-2 d-none d-md-block">Hi @Model.User.Name</span>
        </div>
    </a>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profile">
        <div class="text-center drop-detail">
            <figure class="m-0">
                <img class="rounded-circle shadow-sm border" src="~/images/face.jpg">
            </figure>
            <h3>@Model.User.Name</h3>
            <p class="text-muted px-3">@Model.User.UserName</p>
            <p class="text-muted px-3">@Model.User.Email</p>
            <ul class="list-unstyled m-0 p-0">
                <li>
                    @*<a href="https://localhost:5001/ChangePassword/Create?username=@Model.User.UserName " class="d-flex align-items-center" style="color:Highlight">
                    <i class="ri-share-circle-line me-3"></i>
                    Change password
                    </a>*@
                    @*<a href="https://auth.ddalmis.org.in/ChangePassword/Create?username=@Model.User.UserName " class="d-flex align-items-center" style="color:Highlight">
                    <i class="ri-share-circle-line me-3"></i>
                    Change password
                    </a>*@
                    <a href="https://auth.managemybusinessess.com/ChangePassword/Create?username=@Model.User.UserName " class="d-flex align-items-center" style="color:Highlight">
                        <i class="ri-share-circle-line me-3"></i>
                        Change password
                    </a>
                </li>
                <li>
                    <a href="/home/logout" class="d-flex align-items-center">
                        <i class="ri-logout-circle-line me-3"></i>
                        Log Out
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>