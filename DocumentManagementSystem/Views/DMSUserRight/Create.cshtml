<div class="row">
    <div class="col-sm-12">
        <div class="myapp-hed">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">User Right</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />

<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div id="DivDetails">
            <div class="row" style="margin-bottom:35px;">
                <div class="col-sm-12">
                    <div class=" myapp-hed2">
                        <div class="col-md-12">
                            <h6 class="pull-left" style="color:white;margin-top:5px;">User Right</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div id="DivForFileName">
                       
                        <div class="form-row">

                           
                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Department</label><span style="color:red">*</span>
                                <select id="department" class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1; width:10px;width:100%;max-width:100%;min-width:unset !important;">
                                    <option value="0">--Select---</option>
                                    <option value="1">Land Management</option>
                                    <option value="2">Horticulture</option>
                                    <option value="3">Finance</option>
                                </select>
                            </div>

                        </div>
                        </div>
                       


                    <div id="DivUserRight" style="display:none;">
                        <div class="row" style="margin-bottom:35px;">
                            <div class="col-sm-12">
                                <div class=" myapp-hed2">
                                    <div class="col-md-12">
                                        <h6 class="pull-left" style="color:white;margin-top:5px;">User Right</h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-responsive table-bordered table-card">

                                        <thead class="thead">
                                            <tr>
                                                <th>Sr.No</th>
                                                <th>User Name</th>
                                                <th>View</th>

                                                <th>DownloadFile</th>
                                                @*<th>Operation</th>*@
                                            </tr>
                                        </thead>
                                        <tbody class="tbody">

                                            <tr>
                                                <td>1</td>
                                                <td>Jitender</td>
                                                <td>@*<label class="control-label lb-sm">View</label>*@<input type="checkbox" name="View"></td>
                                                <td>@*<label class="control-label lb-sm">Download File</label>*@<input type="checkbox" name="download"></td>
                                                @*<td> <i class="glyphicon glyphicon-eye-open icon-white cl1"></i> &nbsp; | &nbsp;<i class="fa fa-pencil" aria-hidden="true"></i> &nbsp;|&nbsp;<i class="fa fa-trash" aria-hidden="true"></i></td>*@

                                            </tr>

                                            <tr>
                                                <td>2</td>
                                                <td>Shyam</td>
                                                <td>@*<label class="control-label lb-sm">View</label>*@<input type="checkbox" name="View"></td>
                                                <td>@*<label class="control-label lb-sm">Download File</label>*@<input type="checkbox" name="download"></td>
                                                @*<td> <i class="glyphicon glyphicon-eye-open icon-white cl1"></i> &nbsp; | &nbsp;<i class="fa fa-pencil" aria-hidden="true"></i> &nbsp;|&nbsp;<i class="fa fa-trash" aria-hidden="true"></i></td>*@

                                            </tr>
                                        </tbody>

                                    </table>

                                </div>
                            </div>
                        </div>









                        <div class="form-row">
                            <div class="form-group  col-md-12" style="justify-content:center">
                                <input type="submit" value="Create" class="btn btn-primary myapp-hed1" />
                                @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
                                @Html.ActionLink("Back", "Create", "DMSUserRight", null, new { @class = "btn btn-primary myapp-hed1" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#department").change(function () {
            var id = $("#department").val();
            if (id == 0)
           {
                $("#DivUserRight").hide();
            } else {
                $("#DivUserRight").show();
            }
        });
    });
</script>