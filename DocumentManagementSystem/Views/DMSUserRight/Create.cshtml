@model Dto.Master.AddUserDto

@await Component.InvokeAsync("PageHeader", new { pageName = "DMS User Rights" })


<div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
    <h3 class="mb-3 d-flex">Details</h3>

   

    <div class="row mt-md-3">

        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId"
                        asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))">
                    <option value="0">All</option>

                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>

                <label class="floating-label">Department </label>
            </div>
        </div>



        <div class="col-md-12 col-xl-3">
            <div class="row">
                <div class="col-6 col-md-5 col-xl-6">
                    <input type="submit" value="View" id="btnGenerate" class="btn btn-theme " />
                            </div>
                <div class="col-6 col-md-7 col-xl-6">
                    <a class="btn btn-link btn-block d-flex align-items-center justify-content-center" href="/DMSUserRight/Create"> <i class="ri-refresh-line mr-2"></i>Reset</a>

                </div>
            </div>
        </div>

    </div>

</div>
<div class="table-section bg-white border shadow rounded">

    
    <div class="table-responsive px-2" id="LoadReportView">

    </div>
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <button id="btnSaveBottom" class="tn btn-theme btn-block">Save</button>
        </div>
    </div>
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/userrightindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/userrightindex.min.js" asp-append-version="true"></script>
</environment>
