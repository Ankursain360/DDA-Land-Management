@model IEnumerable<Dto.Search.UserrightsListDataDto>
<table class="table table-sm table-bordered mb-0 table-striped">
    <thead class="text-nowrap">

        <tr>

            <th>User Name</th>
            <th>Department</th>
            <th>View</th>

            <th>DownloadFile</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName

                    </td>
                    <td>@item.DepartmentName</td>

               
                            <td>
                                @if (item.Viewright == 0)
                                {
                                    <input type="checkbox" class="chkView" id="view-@item.UserId" value="@item.UserId" name="View">
                                }
                                else
                                {
                                    <input type="checkbox" class="chkView" id="view-@item.UserId" name="View" value="@item.UserId" checked="checked">
                                }
                            </td>
                            <td>
                                @if (item.Downloadright == 0)
                                {
                                    <input type="checkbox" class="chkView" id="download-@item.UserId" value="@item.UserId" name="Download">
                                }
                                else
                                {
                                    <input type="checkbox" class="chkView" id="download-@item.UserId" value="@item.UserId" name="Download" checked="checked">
                                }

                            </td>
                        
                 


                


                </tr>
            }
        }
        else
        {
            <tr>
                <th colspan="12" style="text-align:center"> No Record Available! </th>
            </tr>
        }





    </tbody>

</table>





