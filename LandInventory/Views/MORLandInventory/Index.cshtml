@model IEnumerable<Libraries.Model.Entity.Propertyregistration>
@{int rowNo = 0; }


<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Ministry of rehabilitation(MOR) Land Inventory</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />


<div>
    @Html.ActionLink("Add New", "Create", "MORLandInventory", null, new { @class = "btn btn-primary pull-right dda-pageheading", style = "margin-top: -10px;" })
</div>
<br />
<br />
<div class="container-fluid" id="MainContentForm">
    <div class="row">
        <div class="col-md-3">
            <label class="control-label lb-sm" for="ddlInventoried">Inventoried In</label>
            <select class="form-control dda-dropdown" id="InventoriedInId">
                <option value="0">All</option>
                <option value="1">VLMS</option>
                <option value="2">Used</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="control-label lb-sm" for="PlannedUnplannedLand">Planned/Unplanned Land</label>
            <select class="form-control dda-dropdown" id="PlannedUnplannedLand">
                <option value="0">All</option>
                <option value="Planned Land">Planned Land</option>
                <option value="Unplanned Land">Unplanned Land</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="control-label lb-sm" for="ClassificationOfLandId">Classification of Land</label>
            <select class="form-control dda-dropdown" id="ClassificationOfLandId" asp-items="@(new SelectList(ViewBag.Items, "Id","Name"))">
                <option value="0">All</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="control-label lb-sm" for="DepartmentId">Department</label>
            <select class="form-control dda-dropdown" id="DepartmentId" asp-items="@(new SelectList(ViewBag.DepartmentList, "Id","Name"))" onchange="return GetZoneList(this.options[this.selectedIndex].value);">
                <option value="0">All</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label class="control-label lb-sm" for="ZoneId">Zone</label>
            <select class="form-control dda-dropdown" id="ZoneId" onchange="return GetDivisionList(this.options[this.selectedIndex].value);">
                <option value="0">All</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="control-label lb-sm" for="DivisionId">Division</label>
            <select class="form-control dda-dropdown" id="DivisionId">
                <option value="0">All</option>
            </select>
        </div>
    </div>
    <div class="row ">
        <div class="form-group col-md-12" style="margin-top:20px;">
            <button id="btnSearch" class="btn btn-primary dda-pageheading">Search</button>
            <button id="btnReset" class="btn btn-primary dda-pageheading">Reset</button>
        </div>
    </div>

    <div class="card  table-card " style="overflow:scroll;">
        <div id="divTable"></div>
    </div>
</div>
<br />
<br />


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/morlandinventoryindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/morlandinventoryindex.min.js" asp-append-version="true"></script>
</environment>

