@model Libraries.Model.Entity.Currentstatusoflandhistory

@await Component.InvokeAsync("PageHeader", new { pageName = "Update Plot Details" })
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row mt-md-3">
    <a asp-action="Index" class="btn btn-theme pull-right dda-pageheading" style="margin-top: -10px;">Back</a>
</div>

<div class="container-fluid">
    <div class="panel">

        <div class="panel-body">
            <form asp-action="History">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="mb-3 d-flex">Details</h3>

                <input type="hidden" asp-for="Id" id="txtid" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="floating-label-wrap mb-3 mb-md-0">

                            <input asp-for="CreatedDate" type="date" id="txtFromDate" class="floating-label-field floating-label-field--s3" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            <label class="floating-label">From Date</label>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="floating-label-wrap mb-3 mb-md-0">
                            <input asp-for="CreatedDate" type="date" id="txtToDate" class="floating-label-field floating-label-field--s3" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>

                            <label class="floating-label">To Date</label>

                        </div>
                    </div>

                </div>
                <div class="row mt-md-3">
                    <div class="col-md-12" style="margin-bottom:40px;">
                        <input type="button" value="Filter" id="btnFilter" class="btn btn-theme" />
                        <input type="button" value="Refresh" onclick="location.reload(true);" class="btn btn-theme" />
                    </div>
                </div>

                <div id="LoadView">

                </div>


                @*<br />
                    <div class="form-row">
                        <div class=" form-group  col-md-12">
                            <input type="submit" value="Export to Excel" class="btn btn-primary  dda-pageheading" style="width:150px !important;" />
                        </div>
                    </div>*@

            </form>
        </div>
    </div>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/currentStatusOfLandHistory.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/currentStatusOfLandHistory..min.js" asp-append-version="true"></script>
</environment>
