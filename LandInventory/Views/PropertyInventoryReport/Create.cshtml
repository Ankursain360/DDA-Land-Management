            <div class="row">
                <div class="form-group col-md-4">
                    <label class="control-label lb-sm">Main Land Use</label>
                    <select class="form-control dda-dropdown" asp-for="MainLandUseId" asp-items="@(new SelectList(Model.LandUseList, "Id","Name"))">
                        <option value="0">All</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label lb-sm">Litigation Status</label>
                    <select asp-for="LitigationStatus" class="form-control dda-dropdown">
                        <option value="2">All</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label lb-sm">Encroachment</label>
                    <select asp-for="Encroached" class="form-control dda-dropdown">
                        <option value="2">All</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>

            </div>
            <div class="row ">
                <div class="form-group col-md-12" style="margin-bottom:40px;">
                    <input type="submit" value="Generate" id="btnGenerate" class="btn btn-primary dda-pageheading" />
                    @Html.ActionLink("Back", "Create", "PropertyInventoryReport", null, new { @class = "btn btn-primary dda-pageheading" })
                </div>
            </div>

            <div id="LoadReportView">

            </div>
