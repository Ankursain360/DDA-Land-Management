
@model Libraries.Model.Entity.Landtransfer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Hand Over/Take Over Report(Department Wise)</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white" style="margin-top:-0.4%">Details</h6>
        </div>
        <div class="panel-body">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Report Type<span style="color:red">*</span></label>
                        <select asp-for="ReportType" id="ReportType" class="form-control dda-dropdown">
                            <option value="0">Handed Over</option>
                            <option value="1">Taken Over</option>
                        </select>
                        <span asp-validation-for="ReportType" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Department <span style="color:red">*</span></label>
                        <select id="DepartmentId" required="required" requiredMsg="Please Select Department" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.DepartmentList,"Id","Name"))">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>

                <div class="row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="button" value="Generate" id="btnGenerate" class="btn btn-primary dda-pageheading" />
                        <input type="button" value="Refresh" onclick="location.reload(true);" class="btn btn-primary dda-pageheading" />
                    </div>
                </div>

                <div id="LoadReportView">

                </div>


                @*<br />
                    <div class="form-row">
                        <div class=" form-group  col-md-12">
                            <input type="submit" value="Export to Excel" class="btn btn-primary  dda-pageheading" style="width:150px !important;" />
                        </div>
                    </div>*@

            </form>
        </div>
    </div>
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">

    <script src="~/js/reportoflandtransferdepartmentwiseindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/reportoflandtransferdepartmentwiseindex.min.js" asp-append-version="true"></script>
</environment>


