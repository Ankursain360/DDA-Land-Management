
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-sm-12">
        <div class="myapp-hed">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Land Transfer Approval Process</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  myapp-hed1">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">
                Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span>

            </h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div id="DivLandTransferDetails">
                    <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <div class="row" style="margin-bottom:35px;">
                            <div class="col-sm-12">
                                <div class=" myapp-hed2">
                                    <div class="col-md-12">

                                        <h6 class="pull-left" style="color:white;margin-top:5px;">Land Transfer Details</h6>
                                        <i class="fa-angle-right fa pull-right" aria-hidden="true" style="padding-top:4px;"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <div class="collapse" id="collapseExample">
                        <div class="form-row">

                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Zone/Division</label><span style="color:red">*</span>
                                <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                    <option value="0">---Select---</option>
                                    <option value="1">Har</option>
                                    <option value="2">Someother</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Locality</label><span style="color:red">*</span>
                                <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                    <option value="0">---Select---</option>
                                    <option value="1">Har</option>
                                    <option value="2">Someother</option>
                                </select>
                            </div>


                        </div>

                        <div class="form-row">


                            <div class="form-group col-md-6">
                                <label class="control-label lb-sm">Property No.</label>
                                <input type="text" class="form-control" />
                            </div>


                        </div>

                        <div id="DivLandTransfer">
                            <div class="row" style="margin-bottom:35px;">
                                <div class="col-sm-12">
                                    <div class=" myapp-hed2">
                                        <div class="col-md-12">
                                            <h6 class="pull-left" style="color:white;margin-top:5px;">Land Transfer History</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered" border="0">
                                            <thead class="thead">
                                                <tr>
                                                    <th>Sr.No</th>
                                                    <th>Handed Over By</th>
                                                    <th>Handed Over Date</th>
                                                    <th>Taken Over By</th>
                                                    <th>Taken Over Date</th>
                                                </tr>
                                            </thead>
                                            <tbody class="tbody">
                                                <tr>
                                                    <td>1</td>
                                                    <td>
                                                        Mahesh
                                                    </td>
                                                    <td>
                                                        20-July-2020
                                                    </td>
                                                    <td>
                                                        Suresh
                                                    </td>
                                                    <td>
                                                        20-July-2020
                                                    </td>

                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="DivHandedOver">
                            <div class="row" style="margin-bottom:35px;">
                                <div class="col-sm-12">
                                    <div class=" myapp-hed2">
                                        <div class="col-md-12">
                                            <h6 class="pull-left" style="color:white;margin-top:5px;">Handed Over By</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Handed Over By</label>
                                    <input type="text" class="form-control" />
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Date of Hand Over</label>
                                    <input type="date" class="form-control" id="txtHandOverDate" required pattern="\d{4}/\d{2}/\d{2}" min="15/Aug/1947" />
                                </div>


                            </div>
                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Order No.</label>
                                    <input type="text" class="form-control" />
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Copy of Order</label>
                                    <input type="file" class="form-control" multiple />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Transfer order Issue Authority</label>
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div id="DivTakenOver">
                            <div class="row" style="margin-bottom:35px;">
                                <div class="col-sm-12">
                                    <div class=" myapp-hed2">
                                        <div class="col-md-12">
                                            <h6 class="pull-left" style="color:white;margin-top:5px;">Taken Over By</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Taken Over By</label>
                                    <input type="text" class="form-control" />
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="control-label lb-sm">Date of Taken Over</label>
                                    <input type="date" class="form-control" id="txtTakenOverDate" />
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="control-label lb-sm">Remarks</label>
                                <textarea type="text" class="form-control" style=" background-color: #dddddd;"></textarea>
                            </div>
                        </div>


                    </div>
                </div>
                <br />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label>
                        <select style="height:30px; background-color: #dddddd;" id="drpReqType" required="" class="form-control">
                            <option value="1">Forward To CLM</option>
                            <option value="2">Approved</option>
                            <option value="3">Reject</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="control-label lb-sm">Remarks</label>
                        <textarea type="text" class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Submit" class="btn btn-primary myapp-hed1" />
                        @*<input type="submit" value="Back" class="btn btn-primary myapp-hed1" />*@
                        @Html.ActionLink("Back", "Index", "LandTransferApproval", null, new { @class = "btn btn-primary myapp-hed1" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>



<script>
    $(function () {
        $('#drp1').change(function () {
            var id = $("#drp1").val();
            if (id == 1) {
                $("#txt1").show();

            }
            else {
                $("#txt1").hide();
            }
        });
    });

    $(function () {
        $('#drp2').change(function () {
            var id = $("#drp2").val();
            if (id == 1) {
                $("#txt2").show();

            }
            else {
                $("#txt2").hide();
            }
        });
    });

    $(function () {
        $('#drp3').change(function () {
            var id = $("#drp3").val();
            if (id == 1) {
                $("#txt3").show();

            }
            else {
                $("#txt3").hide();
            }
        });
    });

    $(function () {
        $('#drp4').change(function () {
            var id = $("#drp4").val();
            if (id == 1) {
                $("#txt4").show();

            }
            else {
                $("#txt4").hide();
            }
        });
    });
    $(function () {
        $('#drpHasLand').change(function () {
            var id = $("#drpHasLand").val();
            if (id == 0) {
                $("#txtDateLand").hide();
                $("#txtLand").hide();
                $("#fileland").hide();
            }
            else {
                $("#txtDateLand").show();
                $("#txtLand").show();
                $("#fileland").show();
            }
        });
    });
</script>



