@model Libraries.Model.Entity.Propertyregistration

@await Component.InvokeAsync("PageHeader", new { pageName = "Restore Record" })
<br />

<br />
<div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
    <h3 class="mb-3 d-flex">
        Restore <span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span>

    </h3>

    <br />
    <form asp-action="Restore" method="post">


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">

                    <textarea asp-for="RestoreReason" type="text" class="floating-label-field floating-label-field--s3" placeholder="Restore Reason"></textarea>
                    <label class="floating-label">Restore Reason</label>
                </div>
            </div>

                <div class="form-group col-md-6">
                    <br />
                    <h6 class="p-4">Are you sure you want to restore this?</h6>
                    <input type="hidden" asp-for="Id" />
                </div>
            </div>
        <div class="row">
            <div class="col-md-12">

                <input type="submit" value="Restore" class="search-filer btn btn-theme "  />
                <a asp-action="create" class="btn btn-theme " style="margin-top:3px;">Back</a>


            </div>
        </div>
      
    </form>
</div>
 
