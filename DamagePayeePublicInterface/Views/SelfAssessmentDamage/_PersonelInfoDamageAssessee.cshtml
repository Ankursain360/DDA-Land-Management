@model IEnumerable<Libraries.Model.Entity.Damagepayeepersonelinfo>

<table class="table table-sm table-bordered mb-0 table-striped">
    <thead class="text-nowrap">
        <tr>
            <th>Name</th>
            <th>Father's/Husband's Name</th>
            <th style="min-width:100px;">Gender</th>
            <th>Address</th>
            <th>Mobile No.</th>
            <th>Email-Id</th>
            <th style="min-width:20px;">Aadhar No.</th>
            <th style="min-width:20px;">Pan No.</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.FatherName
                    </td>
                    <td>@(item.Gender.ToString() == "1" ? "Male" : item.Gender.ToString() == "2" ?  "Female" : "Other" )</td>
                    <td>@item.Address</td>
                    <td> @item.MobileNo</td>
                    <td>@item.EmailId</td>
                    <td> @item.AadharNo</td>
                    <td> @item.PanNo</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th colspan="14" style="text-align:center"> No Record Available! </th>
            </tr>
        }
    </tbody>
</table>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

