@model Libraries.Model.Entity.Damagecalculation
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@await Component.InvokeAsync("PageHeader", new { pageName = "Damage Calculator" })


<div class="pt-3">

    <div id="frmInfo" asp-action="Index" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details <span style="margin-left:800px"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span> </h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" id="hdnIsLocality" />
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="PropertyTypeId" required class="floating-label-field floating-label-field--s3"
                            asp-items="@(new SelectList(Model.PropertyType1,"Id","Name"))">
                        <option value="">---Select---</option>

                    </select>
                    <span asp-validation-for="PropertyTypeId" class="text-danger" id="PropertyTypeIdMsg" style="display:none;">Mandatory</span>

                    <label class="floating-label">Property Type<span style="color:red">*</span></label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="Date of Encroachment" required asp-for="EncroachmentDate" type="date"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="EncroachmentDate" class="text-danger" id="EncroachmentDateMsg" style="display:none;">Mandatory</span>
                    <label class="floating-label"> Date of Encroachment <span style="color:red">*</span></label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="From Date" type="date" asp-for="StartDate"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="StartDate" class="text-danger" id="StartDateMsg" style="display:none;">Mandatory</span>
                    <label class="floating-label"> From Date <span style="color:red">*</span></label>
                </div>
            </div>

            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="To Date" type="date" asp-for="EndDate"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="EndDate" class="text-danger" id="EndDateMsg" style="display:none;">Mandatory</span>
                    <label class="floating-label"> To Date <span style="color:red">*</span></label>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="LocalityId" class="floating-label-field floating-label-field--s3"
                            asp-items="@(new SelectList(Model.LocalityList,"Id","Name"))">
                        <option value="">---Select---</option>

                    </select>
                    <span asp-validation-for="LocalityId" class="text-danger" id="LocalityIdMsg" style="display:none;">Mandatory</span>

                    <label class="floating-label">Locality<span style="color:red">*</span></label>
                </div>
            </div>


            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Area" placeholder="Area in sq. yds." type="text"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="Area" class="text-danger" id="AreaMsg" style="display:none;">Mandatory</span>
                    <label class="floating-label">Area in sq. yds.<span style="color:red">*</span></label>
                </div>
            </div>
        </div>


        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-4">
                <div class="row">
                    <div class="col-4 col-md-4 col-xl-4">
                        <button class="btn btn-link btn-block d-flex align-items-center justify-content-center" id="btnReset" type="reset">
                            <i class="ri-refresh-line me-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-4 col-md-4 col-xl-4">
                        <input type="submit" id="btnCalculate" value="Calculate" class="btn btn-theme" />
                    </div>
                    <div class="col-4 col-md-4 col-xl-4">
                        @{
                            @if (@ViewBag.BackButton == 1)
                            {
                                <a class="btn btn-theme" asp-action="Create" asp-controller="SelfAssessmentDamage">Back on Self Assessment Page</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div id="DivMainContentForm">

        </div>

    </div>


</div>




<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/damagecalculatorindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/damagecalculatorindex.min.js" asp-append-version="true"></script>
</environment>


