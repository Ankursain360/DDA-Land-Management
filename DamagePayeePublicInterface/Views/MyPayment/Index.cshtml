@model Dto.Master.ApiResponseVerifyPaymentApiStatus
@{int rowNo = 0; }

@await Component.InvokeAsync("PageHeader", new { pageName = "My Payment" })

<div class="pt-2">

    <div class="table-section bg-white border shadow rounded">
        <div class="table-responsive">
            <table class="table table-sm table-bordered mb-0 table-striped">
                <thead class="text-nowrap">
                    <tr>

                        <th>Sr.No</th>
                        <th>File No</th>
                        <th>Challan No</th>
                        <th>Applicant Name Payment</th>
                        <th>Payment Mode</th>
                        <th>Amount Received</th>
                        <th>Payment Date</th>
                        <th>Bank Transaction ID</th>
                        <th>PG Transaction ID</th>
                        <th>Bank Code</th>
                        <th>Account No</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model.cargo)
                        {

                            <tr>

                                <td>@(rowNo += 1)</td>
                                <td>@item.FILENO</td>
                                <td>@item.CHALLAN_NO</td>
                                <td>@item.APPLICANT_NAME_PAYMENT.ToUpper()</td>
                                <td>@item.PAYMENT_MODE</td>
                                <td>@item.AMOUNT_RECIEVED</td>
                                <td>@item.PAYMENT_DATE</td>
                                <td>@item.BANK_TRANSACTIONID</td>
                                <td>@item.PG_TRANSACTIONID</td>
                                <td>@item.BANK</td>
                                <td>@item.ACCNT_NO</td>
                               

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>

                            <th colspan="11" style="text-align:center"> No Record Available! </th>

                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>
</div>