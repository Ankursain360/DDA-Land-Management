@model Libraries.Model.Entity.Legalmanagementsystem
@await Component.InvokeAsync("PageHeader", new { pageName = "Legalmanagementsystem" })

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="pt-3">


                <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
                    <h3 class="mb-3 d-flex">Add Details</h3>
                    <div class="row">
                        <div class="col-md-6    ">
                            <div class="floating-label-wrap mb-3 mb-md-0">

                                <input asp-for="FileNo" placeholder="Name" type="text"
                                       class="floating-label-field floating-label-field--s3" limit="30" />

                                <span asp-validation-for="FileNo" class="text-danger"></span>

                                <label class="floating-label">File No   </label>
                            </div>
                        </div>

                        <div class="col-md-6    ">
                            <div class="floating-label-wrap mb-3 mb-md-0">





                                <select asp-for="IsActive" class="floating-label-field floating-label-field--s3">
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>

                                <label for="field-1" class="floating-label">Status</label>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class=" col-md-12">
                            <button class="btn btn-theme " type="submit">Create</button>
                            @Html.ActionLink("Back", "Index", "Legalmanagementsystem", null, new { @class = "btn btn-theme " })

                        </div>
                    </div>
                </form>


    </div>


    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <environment include="Development">
        <script src="~/js/legalmanagementsystemindex.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/legalmanagementsystemindex.js" asp-append-version="true"></script>
    </environment>
