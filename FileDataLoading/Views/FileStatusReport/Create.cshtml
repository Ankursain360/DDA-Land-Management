@model Dto.Master.FileStatusReportDtoProfile
@await Component.InvokeAsync("PageHeader", new { pageName = "File Status Report" })


<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Details</h3>

        <div class="row pt-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="FromDate" value="" type="date" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="FromDate" id="FromDateMsg" class="text-danger" style="display:none;"></span>
                    <label class="floating-label">From Date  <span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="ToDate" value="" type="date" class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="ToDate" id="ToDateMsg" class="text-danger" style="display:none;"></span>
                    <label class="floating-label">To Date  <span style="color:red">*</span></label>
                </div>
            </div>

        </div>
        <div class="row pt-3">
           
                <div class="form-group col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId"
                                asp-items="@(new SelectList(@ViewBag.DepartmentList, "Id", "Name"))">
                            @if (ViewBag.RId == 1)
                            {
                                <option value="0">All</option>
                            }
                            else
                            {
                                <option>Select</option>
                            }
                        </select>
                            <span class="d-block text-danger field-validation-valid" asp-validation-for="DepartmentId"></span>
                            <label asp-for="DepartmentId" class="floating-label">Department </label>
                        
                        </div>
                </div>
           
            </div>
                   

        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button id="btnReset" class="btn btn-link btn-block d-flex align-items-center justify-content-center" type="reset">
                            <i class="ri-refresh-line mr-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">

                        <input type="submit" value="Generate" id="btnGenerate" class="btn btn-theme" />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</br>

<div class="table-section bg-white border shadow rounded">
    <div class="short-section d-md-flex align-items-center">
        <div class="p-3 d-flex align-items-end mr-auto">
            <div class="floating-label-wrap">
                <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                    <option selected="selected" value="Department">Department</option>
                    <option value="Branch">Branch</option>

                </select>
                <label for="field-1" class="floating-label">Sort by</label>
            </div>
            <div class="short-btn d-flex align-items-center">
                <span id="btnDescending" class="btn slow active" onclick="Descending();" title="Descending order"><i class="ri-sort-desc"></i></span>
                <span id="btnAscending" class="btn slow" onclick="Ascending();" title="Ascending order"><i class="ri-sort-asc"></i></span>
            </div>
        </div>


        <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">

            <a href="javascript:void(0)" class="d-flex align-items-center btn btn-success">
                <i class="ri-download-2-line mr-2 mr-lg-1"></i>
                <small>Download</small>
            </a>
        </div>
    </div>
    <div class="table-responsive px-2">
        <div id="LoadReportView">

        </div>
    </div>
</div>




<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/filestatusreportindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/filestatusreportindex.min.js" asp-append-version="true"></script>
</environment>
