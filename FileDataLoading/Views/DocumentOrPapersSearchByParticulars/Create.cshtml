
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/jquery.min.js"></script>

<script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>


<style>
    .p {
        color: black;
    }
</style>

<style>

    .bg {
        background: linear-gradient(to left,#9e1c32, #991141, #900f50,#83155d, #721e68, #68226f,#5d2675,#4f2a7a, #492b80,#422c85, #392e8b,#2c3091);
        Color: #ffffff;
        Font-size: 0.95rem;
        Font-Family: Open SansRegular;
        height: 28px;
    }
</style>


<script src="js/bootstrap.min.js"></script>
<link href="Styles/bootstrap.css" rel="stylesheet" />

<link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-sm-12">
        <div class="myapp-hed">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Document/Papers Search By Parameters</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />

<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  myapp-hed1">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">Search By Parameters</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="container-fluid" id="MainContentForm">
                    <div class="panel">
                        <div id="DivDetails">
                            <div class="row" style="margin-bottom:35px;">
                                <div class="col-sm-12">
                                    <div class=" myapp-hed2">
                                        <div class="col-md-12">
                                            <h6 class="pull-left" style="color:white;margin-top:5px;">File No</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">

                                <div class="form-group col-md-2">
                                    <label class="control-label lb-sm">Category</label><span style="color:red">*</span>
                                    <input type="text" style="width:100%;max-width:100%;min-width:unset !important;" required class="form-control" />
                                </div>
                                <div class="form-group col-md-2">
                                    <label class="control-label lb-sm">Header</label><span style="color:red">*</span>
                                    <input type="text" style="width:100%;max-width:100%;min-width:unset !important;" required class="form-control" />
                                </div>



                                <div class="form-group col-md-2">
                                    <label class="control-label lb-sm">Sequence No</label><span style="color:red">*</span>
                                    <input type="Number" style="width:100%;max-width:100%;min-width:unset !important;" required class="form-control" />
                                </div>


                                <div class="form-group col-md-2">
                                    <label class="control-label lb-sm">Year</label><span style="color:red;width:15px">*</span>
                                    <input type="text" style="width:100%;max-width:100%;min-width:unset !important;" required class="form-control" />
                                </div>

                                <div class="form-group col-md-2">
                                    <label class="control-label lb-sm">PR </label><span style="color:red;width:15px"></span>
                                    <input type="text" style="width:100%;max-width:100%;min-width:unset !important;" required class="form-control" />
                                </div>
                                <div class="form-group col-md-2">
                                    <label class="control-label lb-sm">Department</label><span style="color:red">*</span>
                                    <input type="Date" style="width:100%;max-width:100%;min-width:unset !important;" required class="form-control" />
                                </div>


                            </div>
                            <br />

                            <div id="DivLocation">
                                <div class="row" style="margin-bottom:35px;">
                                    <div class="col-sm-12">
                                        <div class=" myapp-hed2">
                                            <div class="col-md-12">
                                                <h6 class="pull-left" style="color:white;margin-top:5px;">Location Details</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="control-label lb-sm">Record Room No</label><span style="color:red">*</span>
                                        <input type="Number" required class="form-control" />
                                    </div>


                                    <div class="form-group col-md-6">
                                        <label class="control-label lb-sm">Almirah No/Compactor No</label><span style="color:red">*</span>
                                        <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                            <option value="0">--Select Almirah--</option>
                                            <option value="1">Almirah</option>
                                            <option value="2">Almirah</option>
                                            <option value="3">Almirah</option>
                                            <option value="4">Almirah</option>
                                            <option value="5">Almirah</option>
                                        </select>
                                    </div>


                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="control-label lb-sm">Row No</label><span style="color:red">*</span>
                                        <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                            <option value="0">--Select Row No--</option>
                                            <option value="1">col1</option>
                                            <option value="2">col2</option>
                                            <option value="3">col3</option>
                                            <option value="4">col4</option>
                                            <option value="5">col5</option>
                                        </select>
                                    </div>


                                    <div class="form-group col-md-6">
                                        <label class="control-label lb-sm">Column No</label><span style="color:red">*</span>
                                        <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                            <option value="0">--Select Column No--</option>
                                            <option value="1">col1</option>
                                            <option value="2">col2</option>
                                            <option value="3">col3</option>
                                            <option value="4">col4</option>
                                            <option value="5">col5</option>
                                        </select>
                                    </div>


                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="control-label lb-sm">Bundle No</label><span style="color:red">*</span>
                                        <select class="form-control" style="background-color:#dddddd; height:30px; border-color:#b1b1b1;">
                                            <option value="0">--Select Bundle No--</option>
                                            <option value="1">col1</option>
                                            <option value="2">col2</option>
                                            <option value="3">col3</option>
                                            <option value="4">col4</option>
                                            <option value="5">col5</option>
                                        </select>
                                    </div>

                                </div>

                            </div>
                    </div>
                </div>




                <div class="form-row">
                    <div class="form-group  col-md-12" style="justify-content:center">
                        <input type="submit" value="Search" class="btn btn-primary myapp-hed1" />

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
