@model Libraries.Model.Entity.Issuereturnfile
@await Component.InvokeAsync("PageHeader", new { pageName = "Return File" })

<div class="pt-3">
    <form asp-action="ReturnFileData" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" target="_blank">
        <h3 class="mb-3 d-flex">File Details</h3>
        <input type="hidden" asp-for="Id"/>
        @*<input type="hidden" asp-for="DataStorageDetailsId" value="@(Model.DataStorageDetails.Id)" />*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled asp-for="DataStorageDetails.FileNo" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="DataStorageDetails.FileNo" class="text-danger"></span>
                    <label class="floating-label">File No   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled asp-for="DataStorageDetails.Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="DataStorageDetails.Name" class="text-danger"></span>
                    <label class="floating-label">File Name   </label>
                </div>
            </div>
        </div>
        <h3 class="mb-3 d-flex sub-heading pt-3 ">Location Details</h3>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled asp-for="DataStorageDetails.RecordRoomNo" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="DataStorageDetails.RecordRoomNo" class="text-danger"></span>
                    <label class="floating-label">Room No   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="DataStorageDetails.AlmirahId"
                            asp-items="@(new SelectList(Model.DataStorageDetails.AlmirahList,"Id","AlmirahNo"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    @*<span asp-validation-for="DataStorageDetails.AlmirahId" class="text-danger"></span>*@
                    <label class="floating-label">Almirah No    </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="DataStorageDetails.RowId"
                            asp-items="@(new SelectList(Model.DataStorageDetails.RowList, "Id","RowNo"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    @*<span asp-validation-for="DataStorageDetails.RowId" class="text-danger"></span>*@
                    <label class="floating-label">Row No  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="DataStorageDetails.ColumnId"
                            asp-items="@(new SelectList(Model.DataStorageDetails.ColumnList,"Id","ColumnNo"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    @*<span asp-validation-for="DataStorageDetails.ColumnId" class="text-danger"></span>*@
                    <label class="floating-label">Column No  </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="DataStorageDetails.BundleId"
                            asp-items="@(new SelectList(Model.DataStorageDetails.BundleList,"Id","BundleNo"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    @*<span asp-validation-for="DataStorageDetails.BundleId" class="text-danger"></span>*@
                    <label class="floating-label">Bundle No  </label>
                </div>
            </div>
        </div>
        <h3 class="mb-3 d-flex sub-heading pt-3 ">Returning Details</h3>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled placeholder="Name" type="text" asp-for="IssuedToEmployee"
                           class="floating-label-field floating-label-field--s3" />
                    <span asp-validation-for="IssuedToEmployee" class="text-danger"></span>
                    <label class="floating-label">Returned from (Employee Name)  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="DepartmentId"
                            asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    <label class="floating-label">Department </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="BranchId"
                            asp-items="@(new SelectList(Model.BranchList, "Id","Name"))">
                        <option selected="selected" disabled value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                    <label class="floating-label">Branch </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="DesignationId"
                            asp-items="@(new SelectList(Model.DesignationList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                    <label class="floating-label">Designation </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled placeholder="date" type="date"
                           class="floating-label-field floating-label-field--s3" asp-for="IssuedDate" />
                    <span asp-validation-for="IssuedDate" class="text-danger"></span>
                    <label class="floating-label">Issued Date  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="date" type="date" required
                           class="floating-label-field floating-label-field--s3" asp-for="ReturnedDate" />
                    <span asp-validation-for="ReturnedDate" class="text-danger"></span>
                    <label class="floating-label">Return Date  </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit" id="Issue" onclick="$(this).hide();">Return</button>
                @*@if (Model.Id != 0)
                {
                    <button class="btn btn-theme " type="submit" id="ReturnReceipt" asp-route-id="@Model.Id" asp-action="ReturnReceipt">Return Receipt</button>

                }*@

                @Html.ActionLink("Back", "Index", "IssueReturnFile", null, new { @class = "btn btn-theme " })
            </div>
        </div>
    </form>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />


<environment include="Development">
    <script src="~/js/issuefiledata.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/issuefiledata.min.js" asp-append-version="true"></script>
</environment>