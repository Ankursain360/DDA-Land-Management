@model Libraries.Model.Entity.Datastoragedetails
@await Component.InvokeAsync("PageHeader", new { pageName = "Issue File" })

@{
    ViewData["Title"] = "IssueFileData";
    Layout = null;
}

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">File Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="FileNo" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="FileNo" class="text-danger"></span>
                    <label class="floating-label">File No   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">File Name   </label>
                </div>
            </div>
            @*<div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>*@
        </div>

        <h3 class="mb-3 d-flex sub-heading pt-3 ">Location Details</h3>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="FileNo" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="FileNo" class="text-danger"></span>
                    <label class="floating-label">Room No   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Almirah No    </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="FileNo" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="FileNo" class="text-danger"></span>
                    <label class="floating-label">Row No   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Column No    </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="FileNo" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="FileNo" class="text-danger"></span>
                    <label class="floating-label">Bundle No   </label>
                </div>
            </div>
        </div>

        <h3 class="mb-3 d-flex sub-heading pt-3 ">Issuing Details</h3>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input  placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3"/>
                    <span  class="text-danger"></span>
                    <label class="floating-label">Issue to(Employee Name)  </label>
                </div>
            </div>
            <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" >
                    <option value=""></option>
                   
                </select>
                <span  class="text-danger"></span>
                <label  class="floating-label">Department </label>
            </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option value=""></option>
                    </select>
                    <span  class="text-danger"></span>
                    <label  class="floating-label">Branch </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option value=""></option>
                    </select>
                    <span class="text-danger"></span>
                    <label class="floating-label">Designation </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input placeholder="date" type="date"
                           class="floating-label-field floating-label-field--s3" />
                    @*<span asp-validation-for="" class="text-danger"></span>*@
                    <label class="floating-label">Issuing Date  </label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Issue</button>
                <button class="btn btn-theme " type="submit">Issue Receipt</button>
                <button class="btn btn-theme " type="submit">Return Receipt</button>
                @Html.ActionLink("Back", "Index", "Structure", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>


