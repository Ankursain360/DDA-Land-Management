@*@model Libraries.Model.Entity.Datastoragedetails*@

@await Component.InvokeAsync("PageHeader", new { pageName = "LIST OF TOTAL FILES REPORT USER WISE" })
<div class="=pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Search</h3>

        <div class="row">
            <div class="col-md-3">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" id="ddlColName">

                        <option value="0">Select from here</option>
                        <option value="FileNo">File No</option>
                        <option value="RecordRoomNo">Record Room No</option>
                        <option value="AlmirahNo">Almirah No</option>
                        <option value="RowNo">Row No</option>
                        <option value="BundleNo">Bundle No</option>
                        <option value="ColumnNo">Column No</option>
                        <option value="UserId">User Name</option>
                    </select>
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Search List </label>

                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap">


                    <input type="text" id="txtsearchtxt" class="floating-label-field floating-label-field--s3" />
                    <span class="d-block text-danger field-validation-valid"></span>
                    <label class="floating-label">Search Value </label>
                </div>
            </div>


        </div>
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button class="btn btn-link btn-block d-flex align-items-center justify-content-center" type="reset" id="btnReset">
                            <i class="ri-refresh-line mr-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">
                        <button class="btn btn-theme btn-block" type="submit" id="btnSearch">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3" >
        <h3 class="mb-3 d-flex">
            <div class="col-md-3">
                <div class="floating-label-wrap">
                    <label>
                        Is Freehold ?

                    </label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="floating-label-wrap">
                    <input type="radio"  id="ryes" onchange="FreeHoldYes();" name="freeholdcheck">Yes
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap">
                    <input type="radio"  id="rno" checked="checked"  onchange="FreeHoldNo();"  name="freeholdcheck" >No
                </div>
            </div>
        </h3>
            
                    
            

       
           </div>
        <div class="table-section bg-white border shadow rounded">
            <div class="short-section d-md-flex align-items-center">
                <div class="p-3 d-flex align-items-end mr-auto">

                    <div class="floating-label-wrap">
                        <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                            <option value="FileNo">File No</option>
                            <option value="RecordRoomNo">Record Room No</option>
                            <option value="AlmirahNo">Almirah No</option>
                            <option value="RowNo">Row No</option>
                            <option value="BundleNo">Bundle No</option>
                            <option value="ColumnNo">Column No</option>
                            <option value="UserId">User Name</option>

                        </select>
                        <label for="field-1" class="floating-label">Sort by</label>
                    </div>
                    <div class="short-btn d-flex align-items-center">
                        <button id="btnAscending" class="btn slow active" onclick="Ascending();" title="Ascending order"><i class="ri-sort-asc"></i></button>
                        <button id="btndescending" class="btn slow active" title="Descending order" onclick="Descending();"><i class="ri-sort-desc"></i></button>

                    </div>

                </div>

            </div>

            <div class="table-responsive px-2 ">
                <div id="LoadView"></div>

            </div>


        </div>
    </div>

    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <environment include="Development">
        <script src="~/js/listoftotalreportuserwise.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/listoftotalreportuserwise.min.js" asp-append-version="true"></script>
    </environment>




