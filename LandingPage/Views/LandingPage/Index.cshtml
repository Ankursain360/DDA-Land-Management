@model IEnumerable<Libraries.Model.Entity.Module>
@{
    ViewData["Title"] = "Index";
    Layout = "";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Landing Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>


        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 100%;
            max-width: 100%;
            height: 250px;
            max-height: 100%;
            padding: 2px 2px 2px 2px;
            border-radius: 4px;
            background-color: #ffffff;
            margin-top: 10px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .grad {
            background-image: linear-gradient( 33deg, #4b50a2, #7d3865);
            background-size: cover;
            height: 100%;
            width: 100%;
        }

        .logo {
            height: 152px;
            /*width: 83px;*/
        }

        card, h5 {
            font-family: open-sans-bold !important;
        }

        card, i {
            /* background: radial-gradient(circle, #9e1c32, #991141, #900f50, #83155d, #721e68, #68226f, #5d2675, #392e8b, #2c3091);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;*/
            color: red;
            font-size: 70px !important;
        }

        .cardimg {
            width: 70px;
            height: 70px;
            max-height: 100%;
            max-width: 100%;
        }
    </style>
    <style>
        a:link, a:visited {
            background-color: #f44336;
            color: white;
            padding: 7px 12px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        a:hover, a:active {
            background-color: red;
        }
    </style>
</head>
<body>

    <div class="grad">
        <div class="container">
            <div class="row left">
                <img src="~/images/DDALG.png" alt="logo" class="logo" style="padding-left:3%" />
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card px-4 py-4" style="height:100%;max-height:100%;background:#F0F0F0!important;">
                        <br />
                       
                        <div class="row">
                            @foreach (var item in Model)
                            {

                                <div class="col-md-4">
                                    <div class="card ">
                                        <div class="card-body text-center mt-5">
                                            <i class="@item.Icon" aria-hidden="true"></i>


                                            <h5> @item.Name</h5>
                                            <a href=@item.Url target="_blank">Click here</a>
                                        </div>

                                    </div>
                                </div>

                            }
                            </div>
                            <br />

                        </div>
                </div>
            </div>
            <br /> <br />
            <div class="row justify-content-center">
                <p style="color:white;font-family:open-sans-regular;">
                    Copyright &copy 2019-All Rights Reserved-DDA
                </p>
            </div>
        </div>
    </div>

</body>
</html>
<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.10.2.js" integrity="sha256-it5nQKHTz+34HijZJQkpNBIHsjpV8b6QzMJs9tmOBSo=" crossorigin="anonymous"></script>

