@await Component.InvokeAsync("PageHeader", new {pageName="Decision Support System"})
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-3">
    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option>Sitewise_LUSE_2006</option>
                        <option>Sitewise_LUSE_2006</option>
                        <option>Sitewise_LUSE_2006</option>
                    </select>
                    <label class="floating-label"> Select Base Layer(T0)</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option>Sitewise_LUSE_2017</option>
                        <option>Sitewise_LUSE_2017</option>
                        <option>Sitewise_LUSE_2017</option>
                    </select>
                    <label class="floating-label">Select Recent Layer(T1)</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option>veg_2006</option>
                        <option>veg_2006</option>
                        <option>veg_2006</option>
                    </select>
                    <label class="floating-label">Attributes of Recent Layer</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input type="text" class="floating-label-field floating-label-field--s3" />
                    <lable class="floating-label">DataType <span>(<span style="color:red">Real</span>)</span></lable>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option>></option>
                        <option><</option>
                        <option>=</option>
                        <option>+</option>
                    </select>
                    <label class="floating-label">Operator</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3">
                        <option>veg_2017</option>
                        <option>veg_2017</option>
                        <option>veg_2017</option>
                    </select>
                    <label class="floating-label">Attributes of Recent Layer</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input type="text" class="floating-label-field floating-label-field--s3" />
                    <label class="floating-label">DataType <span>(<span style="color:red">Real</span>)</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-12">
                <div class="floating-label-wrap">                    
                    <input type="text" class="floating-label-field floating-label-field--s3" />
                    <label class="floating-label">Query <span>(<span style="color:red">veg_2006 < veg_2017</span>)</span></label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <input type="checkbox" checked="checked" name="group1" />
                <label>Add Results to Project</label>
            </div>
            <div class="col-md-6">
                <input type="checkbox" name="group1" />
                <label>Save Results to Shape File</label>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input type="file" class="floating-label-field floating-label-field--s3" />
                    <label class="floating-label">Select Output File</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme" type="submit">Submit</button>
                @Html.ActionLink("Back", "Index", "DDADecisionSupportSystem", null, new { @class = "btn btn-theme " })
            </div>
        </div>
    </form>
</div>