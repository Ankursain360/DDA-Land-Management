@model Libraries.Model.Entity.Newlandpaymentdetail
@await Component.InvokeAsync("PageHeader", new { pageName = "Payment Details" })

<div class="pt-3">
    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" enctype="multipart/form-data">
        <h3 class="mb-3 d-flex">Edit Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="DemandListNo" placeholder="Demand List No" type="text"
                           class="floating-label-field floating-label-field--s3" limit="30" />

                    <span asp-validation-for="DemandListNo" class="text-danger"></span>

                    <label class="floating-label">Demand List No<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="EnmSno" placeholder="Enm Sno" type="text"
                           class="floating-label-field floating-label-field--s3" limit="30" />

                    <span asp-validation-for="EnmSno" class="text-danger"></span>

                    <label class="floating-label">Enm Sno<span style="color:red">*</span> </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="AmountPaid" placeholder="Amount Paid(Rs.)" type="text"
                           class="floating-label-field floating-label-field--s3" />

                    <span asp-validation-for="AmountPaid" class="text-danger"></span>

                    <label class="floating-label">Amount Paid(Rs.)<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="ChequeDate" placeholder="Date Of Appeal" type="Date"
                           class="floating-label-field floating-label-field--s3" />

                    <span asp-validation-for="ChequeDate" class="text-danger"></span>

                    <label class="floating-label">Cheque Date<span style="color:red">*</span> </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="ChequeNo"  type="text" placeholder="Chaque/RTGS/NEFT/IMPS No"
                           class="floating-label-field floating-label-field--s3" limit="30" />

                    <span asp-validation-for="ChequeNo" class="text-danger"></span>

                    <label class="floating-label">Cheque/RTGS/NEFT/IMPS No</label>
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="BankName" placeholder="Bank Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />

                    <span asp-validation-for="BankName" class="text-danger"></span>

                    <label class="floating-label">Bank Name </label>
                </div>
            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="VoucherNo" placeholder="Cheque No" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />

                    <span asp-validation-for="VoucherNo" class="text-danger"></span>

                    <label class="floating-label">Voucher No </label>
                </div>
            </div>

            <div class="col-md-6 ">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="PercentPaid" placeholder="Panel Lawyer" type="text"
                           class="floating-label-field floating-label-field--s3" />

                    <span asp-validation-for="PercentPaid" class="text-danger"></span>

                    <label class="floating-label">Percent Paid<span style="color:red">*</span> </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="hidden" asp-for="PaymentProofDocumentName" />
                    @{
                        @if (Model.PaymentProofDocumentName != null)
                        {
                            <input type="file" asp-for="PaymentProofDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                            <a class="badge badge-primary px-2" asp-action="ViewPaymentProofDocument" asp-route-id="@Model.Id" target="_blank"> (View File)</a>
                        }
                        else
                        {
                            <input type="file" asp-for="PaymentProofDocumentIFormFile" class="floating-label-field floating-label-field--s3" accept="application/pdf,  image/png, image/jpeg">
                        }
                    }
                    <span class="d-block text-danger field-validation-valid" asp-validation-for="PaymentProofDocumentName"></span>
                    <label class="floating-label">Upload Copy of Payment Proof</label>
                </div>
            </div>
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "NewLandPaymentdetail", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>

</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/paymentdetailcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/paymentdetailcreate.min.js" asp-append-version="true"></script>
</environment>


