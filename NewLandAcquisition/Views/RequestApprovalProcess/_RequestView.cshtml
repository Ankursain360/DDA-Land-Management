@model Libraries.Model.Entity.Request
@*@{int Photo = 0;}
    @{int ReportFile = 0;}*@

<style>

    [aria-expanded="false"] > .expanded, [aria-expanded="true"] > .collapsed {
        display: block;
    }
</style>

<div disabled class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <a data-toggle="collapse" href="#collapseWatchWardApprroval" id="collapseapp" role="button" aria-expanded="false" aria-controls="collapseWatchWardApprroval">
        <h3 class="my-3 d-flex sub-heading" id="reid">View Request Details</h3>
    </a>
    <div class="collapse1" id="" style="display:block">
  
        <div id="divShowData">
            <div class="row">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Name" asp-for="PproposalName" disabled/>
                        <span asp-validation-for="PproposalName" class="text-danger"></span>
                        <label class="floating-label">Proposal Name  </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">


                        <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Code" asp-for="PfileNo" disabled/>
                        <span asp-validation-for="PfileNo" class="text-danger"></span>
                        <label class="floating-label">File No </label>
                    </div>
                </div>
            </div>

            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Name" asp-for="RequiringBody" disabled/>
                        <span asp-validation-for="RequiringBody" class="text-danger"></span>
                        <label class="floating-label">Requiring Body  </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">


                        <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Code" asp-for="AreaLocality" disabled/>
                        <span asp-validation-for="AreaLocality" class="text-danger"></span>
                        <label class="floating-label">Area/Locality </label>
                    </div>
                </div>
            </div>


            <div class="pt-3">
                <h3 class="mb-3 d-flex">Total Area Under Request</h3>

                <div class="row">



                    <div class="col-md-3">
                        <div class="form-check theme">


                            <input class="form-check-input" type="radio" asp-for="TaunderRequest" value="HA"  disabled/>    <label class="radio-inline">
                                HA
                            </label>
                        </div>
                    </div>   <div class="col-md-3">
                        <div class="form-check theme">


                            <input class="form-check-input" type="radio" asp-for="TaunderRequest" value="Acre" disabled/>
                            <label class="radio-inline">
                                Acre
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check theme">


                            <input class="form-check-input" type="radio" asp-for="TaunderRequest" value="SqMeter" disabled/>
                            <label class="radio-inline">
                                Sq. Meter
                            </label>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row mt-md-3">
                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input class="floating-label-field floating-label-field--s3" placeholder="Scheme Date" asp-for="UnitArea" disabled/>
                        <span asp-validation-for="UnitArea" class="text-danger"></span>

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea type="text" asp-for="PurposeOfAcquistion" class="floating-label-field floating-label-field--s3" placeholder="Description" disabled></textarea>

                        <label class="floating-label">Purpose Of Acquistion</label>
                    </div>
                </div>
            </div>



            <div class="row mt-md-3">

              

                    <div class="col-md-6">
                        <div class="floating-label-wrap mb-3 mb-md-0">

                            <input asp-for="RequestPhotos" id="Photo" type="file" class="floating-label-field floating-label-field--s3" disabled multiple />

                            <a class="badge badge-primary px-2" asp-action="ViewLetter" asp-route-id="@Model.Id
                           "> (View Existing Photo )</a>


                            <label class="floating-label">Layout Plan/Zonal Plan/Master Plan</label>

                        </div>
                    </div>


               



                <div class="col-md-6">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <textarea type="text" asp-for="Remarks" class="floating-label-field floating-label-field--s3" placeholder="Description" disabled></textarea>

                        <label class="floating-label">Remarks</label>
                    </div>
                </div>

            </div>
            <div class="row mt-md-3">

                <div class=" col-md-6">
                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" asp-for="IsActive" disabled>
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                        <label asp-for="IsActive" class="floating-label">Status </label>
                    </div>
                </div>
            </div>
        </div>
       

    </div>
</div>


<script>
    $("#reid").click(function () {
        $(".collapse1").toggle();

    });
    </script>