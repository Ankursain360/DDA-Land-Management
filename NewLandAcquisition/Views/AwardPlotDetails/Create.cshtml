@model Libraries.Model.Entity.Newlandawardplotdetails
@await Component.InvokeAsync("PageHeader", new { pageName = "Award Plot Details" })

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" id="formcreate">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="AwardMasterId" asp-items="@(new SelectList(Model.NewlandAwardmasterList, "Id","AwardNumber"))">
                        <option selected disabled="disabled" value="">Select</option>
                    </select>
                    <span asp-validation-for="AwardMasterId" class="text-danger"></span>
                    <label class="floating-label" asp-for="AwardMasterId">Award No.</label>

                </div>
            </div>
            <div class="col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="VillageId" asp-items="@(new SelectList(Model.NewlandVillageList, "Id","Name"))">
                        <option disabled="disabled" selected="selected">Select</option>
                    </select>
                    <span asp-validation-for="VillageId" class="text-danger"></span>
                    <label class="floating-label" asp-for="VillageId">Village Name</label>

                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="KhasraId" asp-items="@(new SelectList(Model.NewlandKhasraList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value=""> Select</option>
                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger"></span>
                    <label class="floating-label" asp-for="KhasraId">Khasra No</label>

                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <label class="floating-label"> </label>

                </div>
            </div>
        </div>
        <div id="Divclsification">

            <h2 class="my-3 sub-heading">Area</h2>
            <div class="row pt-3">
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input class="floating-label-field floating-label-field--s3" id="txtBigha" required />
                        <span asp-validation-for="Bigha" class="text-danger"></span>

                        <label class="floating-label">Bigha</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input placeholder="Biswa" class="floating-label-field floating-label-field--s3" required />
                        <span asp-validation-for="Biswa" class="text-danger"></span>
                        <label class="floating-label">Biswa</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="floating-label-wrap mb-3 mb-md-0">

                        <input class="floating-label-field floating-label-field--s3" placeholder="Biswanshi" required />
                        <span asp-validation-for="Biswanshi" class="text-danger"></span>
                        <label class="floating-label">Biswanshi</label>
                    </div>
                </div>
            </div>
        </div>


        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="Remarks" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="200">

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label asp-for="Remarks" class="floating-label">Remarks </label>
                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit" id="btnSubmit" >Create</button>
                @Html.ActionLink("Back", "Index", "AwardPlotDetails", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>


