@model Libraries.Model.Entity.Newlandawardplotdetails
@await Component.InvokeAsync("PageHeader", new { pageName = "Award Plot Details" })

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3" id="formcreate">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="AwardMasterId" asp-items="@(new SelectList(Model.NewlandAwardmasterList, "Id","AwardNumber"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="AwardMasterId" class="text-danger"></span>
                    <label class="floating-label" asp-for="AwardMasterId">Award No.</label>

                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="VillageId" asp-items="@(new SelectList(Model.NewlandVillageList, "Id","Name"))"
                            onchange="return onChange(this.options[this.selectedIndex].value);">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="VillageId" class="text-danger"></span>
                    <label asp-for="VillageId" class="floating-label">Village Name </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="KhasraId" asp-items="@(new SelectList(Model.NewlandKhasraList, "Id","Name"))">

                        <option value="">---Select---</option>
                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger"></span>
                    <label asp-for="KhasraId" class="floating-label">Khasra No </label>
                </div>

            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <label class="floating-label"> </label>

                </div>
            </div>
        </div>
       
        <h3 class="my-3 d-flex sub-heading pt-4"> Actual Area </h3>
        <div class="row mt-md-3">


            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input readonly asp-for="ABigha" placeholder="Notification"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="ABigha" class="text-danger"></span>
                    <label class="floating-label">Bigha    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input readonly asp-for="ABiswa" placeholder="Name"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="ABiswa" class="text-danger"></span>
                    <label class="floating-label">Biswa </label>
                </div>
            </div>

            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input readonly asp-for="ABiswanshi" placeholder="NoOfKhatauni"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="ABiswanshi" class="text-danger"></span>
                    <label class="floating-label">Biswanshi </label>
                </div>
            </div>


        </div>
        <h3 class="my-3 d-flex sub-heading pt-4"> Notify Area </h3>
        <div class="row mt-md-3">


            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input limit="4" asp-for="Bigha" placeholder="Notification"
                           class="floating-label-field floating-label-field--s3 onlynumbers" />
                    <span asp-validation-for="Bigha" class="text-danger"></span>
                    <label class="floating-label">Bigha    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input limit="2" asp-for="Biswa" placeholder="Name"
                           class="floating-label-field floating-label-field--s3 onlynumbers" />
                    <span asp-validation-for="Biswa" class="text-danger"></span>
                    <label class="floating-label">Biswa </label>
                </div>
            </div>

            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input limit="2"  asp-for="Biswanshi" placeholder="NoOfKhatauni"
                           class="floating-label-field floating-label-field--s3 onlynumbers" />
                    <span asp-validation-for="Biswanshi" class="text-danger"></span>
                    <label class="floating-label">Biswanshi </label>
                </div>
            </div>


        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <input asp-for="Remarks" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name" limit="5000">

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label asp-for="Remarks" class="floating-label">Remarks </label>
                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>

        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit" id="btnSubmit">Submit</button>
                @Html.ActionLink("Back", "Index", "AwardPlotDetails", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>
<div class="table-section bg-white border shadow rounded">
    <div class="short-section d-md-flex align-items-center">
        <div class="p-3 d-flex align-items-end mr-auto">


        </div>



    </div>

    <div class="table-responsive px-2">
        <div id="divnotificationTable"></div>
    </div>


</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />


<environment include="Development">
  

    <script src="~/js/newlandawardplotdetailscreate.js"></script>

</environment>
<environment exclude="Development">
    <script src="~/js/newlandawardplotdetailscreate.min.js" asp-append-version="true"></script>
</environment>


