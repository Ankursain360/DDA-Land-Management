@model Libraries.Model.Entity.tblfeedback

@await Component.InvokeAsync("PageHeader", new { pageName = "Feedback" })

<div class="pt-3">
    <form class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3"/>
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label class="floating-label">Name <span style="color:red">*</span>  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <textarea disabled asp-for="Address" placeholder="Address" class="floating-label-field floating-label-field--s3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <label class="floating-label">Address</label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input disabled asp-for="Email" placeholder="Email" type="text"
                           class="floating-label-field floating-label-field--s3"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label class="floating-label">Email<span style="color:red">*</span>   </label>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <textarea disabled asp-for="Feedback" placeholder="Feedback" class="floating-label-field floating-label-field--s3"></textarea>

                    <span asp-validation-for="Feedback" class="text-danger"></span>
                    <label class="floating-label">Feedback </label>
                </div>

            </div>
        </div>
        <div class="row">

            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>

        <div class="row mt-md-3">
            <div class="form-group col-md-12" style="margin-bottom:40px;">
                @Html.ActionLink("Back", "Index", "Feedback", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>


</div>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

