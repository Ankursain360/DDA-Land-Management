@model Dto.Master.ForgetPasswordMailDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutForgetPass.cshtml";
}
<form asp-action="Create" method="post" class="d-block px-2" id="form">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group icon">
            <i class="ri-user-line"></i>
            <input type="text" class="form-control" placeholder="Enter Username" asp-for="Username" autofocus>
        </div>
    </div>

    <div class="row">
        <div class="form-group icon">
            <i class="ri-code-s-slash-line"></i>
            <input asp-for="CaptchaCode" type="text" class="form-control" placeholder="Enter Captcha *" autocomplete="off">
        </div>
    </div>

    <div class="row">
        <div>
            <div class="codeImg">
                <img src="~/get-captcha-image" id="img-captcha">
                <i class="ri-refresh-line" id="refreshcaptcha" style="font-size:26px;"></i>
                @* <span class="ri-refresh-line" style="font-size:26px;" id="refreshcaptcha"></span>*@
            </div>
        </div>
    </div>
    <div class="row  mt-md-3">
        <div>
            <div class="d-flex align-items-center">
                <button type="submit" class="btn btn-theme px-4  mr-1">Submit</button>
                <a href="https://www.managemybusinessess.com/" class="btn btn-theme px-4">Back To Login</a>.
            </div>
        </div>
    </div>
</form>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/forgetpasswordcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/forgetpasswordcreate.min.js" asp-append-version="true"></script>
</environment>
