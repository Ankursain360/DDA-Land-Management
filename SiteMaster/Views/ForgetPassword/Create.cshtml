@model Dto.Master.ForgetPasswordMailDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container d-flex">
    <div class="fromBg m-auto shadow-lg">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-5">
                <div class="logo d-flex align-items-center mb-4">
                    <img src="~/images/logo.png" alt="DDA" class="d-block me-3">
                    <strong>
                        Delhi Development Authority<br>
                        Government of India
                    </strong>
                </div>
                <form asp-action="Create" method="post" class="d-block px-2" id="form">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="mb-3 form-icons">
                            <i class="ri-mail-line"></i>
                            <input type="text" class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 form-icons">
                            <i class="ri-code-s-slash-line"></i>
                            <input asp-for="CaptchaCode" type="text" class="form-control" placeholder="Captcha *" autocomplete="off">
                        </div>
                    </div>

                    <div class="row">
                        <div>
                            <div class="codeImg">
                                <img src="~/get-captcha-image" id="img-captcha">
                                <i class="ri-refresh-line" id="refreshcaptcha" style="font-size:26px;"></i>
                                @* <span class="ri-refresh-line" style="font-size:26px;" id="refreshcaptcha"></span>*@
                            </div>
                        </div>
                    </div>
                    <div class="row  mt-md-3">
                        <div>
                            <div class="d-flex align-items-center">
                                <button class="btn ms-auto me-3 mr-2" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="col-md-6 col-lg-7">
                <img src="~/images/img.png" alt="DDA" class="d-none d-md-block image-right" width="450">
                <img src="~/images/formBg.png" alt="DDA" class="d-block formBg">

            </div>
        </div>
    </div>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/forgetpasswordcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/forgetpasswordcreate.min.js" asp-append-version="true"></script>
</environment>
