@model Libraries.Model.Entity.Interest

@await Component.InvokeAsync("PageHeader", new { pageName = "Interest" })


    <div class="pt-3">

    <form asp-action="Edit" disabled="disabled" id="myForm" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="PropertyId" asp-items="@(new SelectList(Model.PropertyTypeList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="PropertyId" class="text-danger"></span>
                    <label asp-for="PropertyId" class="floating-label">Property Type<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                   
                    <input asp-for="FromDate" placeholder="From Date" type="date"
                           class="floating-label-field floating-label-field--s3"  />

                    <span asp-validation-for="FromDate" class="text-danger"></span>

                    <label class="floating-label">From Date <span style="color:red">*</span>  </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                   
                    <input asp-for="ToDate" type="date" class="floating-label-field floating-label-field--s3" placeholder="To Date"
                           >
                    <span asp-validation-for="ToDate" class="text-danger "></span>
                    <label class="floating-label">To Date<span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    
                    <input asp-for="Percentage" type="text" class="floating-label-field floating-label-field--s3" placeholder="To Date"
                           limit="18">
                    <span asp-validation-for="Percentage" class="text-danger "></span>
                    <label class="floating-label">Interest Percentage<span style="color:red">*</span></label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>

        <div class="row mt-md-3">
            <div class="form-group col-md-12" style="margin-bottom:40px;">
                @Html.ActionLink("Back", "Index", "Interest", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>


</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

