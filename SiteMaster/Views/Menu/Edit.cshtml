@model Libraries.Model.Entity.Menu
@await Component.InvokeAsync("PageHeader", new { pageName = "Menu" })

<form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
    <h3 class="mb-3 d-flex">Edit Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />


    <div class="row">
        <div class="col-md-4">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3"
                        asp-for="ModuleId"
                        asp-items="@(new SelectList(Model.modulelist, "Id","Name"))">
                    <option selected="selected" disabled="disabled" value="">--Select--</option>
                </select>
                <span asp-validation-for="ModuleId" class="error"></span>
                <label asp-for="ModuleId" class="floating-label">Module Name<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3"
                        asp-for="ParentMenuId"
                        asp-items="@(new SelectList(Model.parentmenulist, "Id","Name"))">
                    <option selected="selected" disabled="disabled" value="">--Select--</option>
                </select>
                <span asp-validation-for="ParentMenuId" class="error"></span>
                <label asp-for="ParentMenuId" class="floating-label">Parent Menu</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input asp-for="Name" type="text"
                       class="floating-label-field floating-label-field--s3"
                       placeholder="Menu Name"
                       limit="150">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label class="floating-label">Menu Name<span style="color:red">*</span></label>
            </div>
        </div>
    </div>
    <div class="row mt-md-3">
        <div class="col-md-4">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input asp-for="Url" type="text"
                       class="floating-label-field floating-label-field--s3"
                       placeholder="/ControllerName/Actionname"
                       limit="200">
                <span asp-validation-for="Url" class="text-danger"></span>
                <label class="floating-label">Url</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input asp-for="SortBy" type="number"
                       class="floating-label-field floating-label-field--s3 onlynumbers"
                       placeholder="Sort By"
                       >
                <span asp-validation-for="SortBy" class="text-danger"></span>
                <label class="floating-label">Sort By<span style="color:red">*</span></label>
            </div>
        </div>
        <div class=" col-md-4">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <label asp-for="IsActive" class="floating-label">Status </label>
            </div>
        </div>
    </div>
    <div class="row mt-md-3">
        <div class=" col-md-12">
            <button class="btn btn-theme " type="submit">Update</button>
            @Html.ActionLink("Back", "Index", "Menu", null, new { @class = "btn btn-theme " })

        </div>
    </div>

</form>



<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
