@model Libraries.Model.Entity.Menu
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Menu</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create" novalidate="novalidate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Module Name <span style="color:red">*</span></label>
                        <select class="form-control dda-dropdown"  asp-for="ModuleId" asp-items="@(new SelectList(Model.modulelist, "Id","Name"))">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="ModuleId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Parent Menu </label>
                        <select class="form-control dda-dropdown" asp-for="ParentMenuId" asp-items="@(new SelectList(Model.parentmenulist, "Id","Name"))">
                            <option value="0">--Select--</option>
                        </select>
                        <span asp-validation-for="ParentMenuId" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Menu Name <span style="color:red">*</span></label>
                        <input asp-for="Name" type="text" class="form-control" limit="200"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Sort By <span style="color:red">*</span></label>
                        <input asp-for="SortBy" type="number" class="form-control onlynumbers" limit="11" />
                        <span asp-validation-for="SortBy" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Status</label>
                        <select asp-for="IsActive" class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class=" form-group  col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" />
                        @Html.ActionLink("Back", "Index", "Menu", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />