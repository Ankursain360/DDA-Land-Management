
@await Component.InvokeAsync("PageHeader", new { pageName = "Permissions" })

<div class="pt-2">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Access Control</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-3">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" id="ddlModule"
                            asp-items="@(new SelectList(ViewBag.Modules, "Id","Name"))">
                    </select>
                    <label for="ModuleId" class="floating-label">Module Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" id="ddlRole" 
                            asp-items="@(new SelectList(ViewBag.Roles,"Id","Name"))">
                    </select>
                    <label for="Role" class="floating-label">Role Name </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-2">
                <button id="btnSaveTop" class="tn btn-theme btn-block">Save</button>
            </div>
        </div>
        <div class="permission mt-2" id="divRolePermission">
            
        </div>
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-2">
                <button id="btnSaveBottom" class="tn btn-theme btn-block">Save</button>
            </div>
        </div>
    </div>
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">
    <script src="~/js/permissions.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/permissions.min.js" asp-append-version="true"></script>
</environment>
