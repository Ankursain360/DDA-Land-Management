@model Libraries.Model.Entity.Rate

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Rate</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white" style="margin-top:-0.4%">View Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm" asp-for="PropertyId">Property Type </label><span class="text-danger">*</span>
                        <select class="form-control dda-dropdown" asp-for="PropertyId" disabled asp-items="@(new SelectList(Model.PropertyTypeList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="PropertyId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">From Date</label><span class="text-danger">*</span>
                        <input asp-for="FromDate" type="date" class="form-control" disabled>
                        <span asp-validation-for="FromDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">To Date</label><span class="text-danger">*</span>
                        <input asp-for="ToDate" type="date" class="form-control" disabled>
                        <span asp-validation-for="ToDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Rate Amount per Sqr Yrd </label><span class="text-danger">*</span>
                        <input asp-for="RatePercentage" type="text" class="form-control numbers" disabled>
                        <span asp-validation-for="RatePercentage " class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Scheme Name</label>
                        <input asp-for="Scheme" type="text"  class="form-control" limit="1000"  disabled>
                        <span asp-validation-for="Scheme" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label><span class="text-danger">*</span>
                        <select asp-for="IsActive" class="form-control dda-dropdown" disabled>
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        @Html.ActionLink("Back", "Index", "Rate", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

