@model IEnumerable<Libraries.Model.Entity.Otherlandnotification>
@await Component.InvokeAsync("PageHeader", new { pageName = "Other land notification" })


<div class="pt-3">
    <div class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Search</h3>
        <div class="row">
            @*<div class="col-md-3">
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        <input type="text" id="txtProperty" class="floating-label-field floating-label-field--s3" placeholder="Property Type" />
                        <label for="txtProperty" class="floating-label">Property Type</label>
                    </div>
                </div>*@
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="LandType" class="floating-label-field floating-label-field--s3" placeholder="From Date" />
                    <label for="txtFromDate" class="floating-label">Land Type</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="NotificationNumber" class="floating-label-field floating-label-field--s3" placeholder="To Date">
                    <label for="txtToDate" class="floating-label">Notification Number</label>
                </div>
            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-12 col-xl-3">
                <div class="row">
                    <div class="col-6 col-md-5 col-xl-6">
                        <button class="btn btn-link btn-block d-flex align-items-center justify-content-center" id="btnReset" type="reset">
                            <i class="ri-refresh-line me-2"></i>Reset
                        </button>
                    </div>
                    <div class="col-6 col-md-7 col-xl-6">
                        <button class="btn btn-theme btn-block" id="btnSearch" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="table-section bg-white border shadow rounded">
        <div class="short-section d-md-flex align-items-center">
            <div class="p-3 d-flex align-items-end me-auto">
                <div class="floating-label-wrap">
                    <select id="ddlSort" class="floating-label-field floating-label-field--s3">
                        @*<option value="Type">Property Type </option>*@
                        <option value="LandType">Land Type </option>
                        <option value="NotificationNumber">Notification Number</option>

                        <option value="Status">Status</option>
                    </select>
                    <label for="field-1" class="floating-label">Sort by</label>
                </div>
                <div class="short-btn d-flex align-items-center">
                    <span class="btn slow active" id="btnAscending" title="Ascending order"><i class="ri-sort-asc"></i></span>
                    <span class="btn slow" id="btnDescending" title="Descending order"><i class="ri-sort-desc"></i></span>
                </div>
            </div>


            <div class="download-table d-flex align-items-center px-3 mb-3 mb-md-0">
                <a href="/Otherlandnotification/create" class="d-flex align-items-center btn btn-primary me-2">
                    <i class="ri-add-fill me-2 mr-lg-1"></i>
                    <small>Add More</small>
                </a>
                <a href="/Otherlandnotification/OtherlandnotificationList" target="_blank" class="d-flex align-items-center btn btn-success">
                    <i class="ri-download-2-line me-2 mr-lg-1"></i>
                    <small>Download</small>
                </a>
            </div>
        </div>

        <div class="table-responsive px-2">
            <div id="divTable"></div>
        </div>


    </div>

</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/otherlandnotificationindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/otherlandnotificationindex.min.js" asp-append-version="true"></script>
</environment>



