@model Libraries.Model.Entity.Newlandnotificationdetails
@await Component.InvokeAsync("PageHeader", new { pageName = "Notification Details" })


<div class="pt-3">

    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Edit Details</h3>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="NotificationTypeId"
                            asp-items="@(new SelectList(Model.NotificationTypeList, "Id","NotificationType"))">
                        <option selected disabled="disabled" value="">Select</option>
                    </select>
                    <span asp-validation-for="NotificationTypeId" class="text-danger"></span>
                    <label asp-for="NotificationTypeId" class="floating-label">Notification No</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="NotificationNo" placeholder="Notification"
                           type="text" class="floating-label-field floating-label-field--s3 " />
                    <span asp-validation-for="NotificationNo" class="text-danger"></span>
                    <label class="floating-label">Notification No    </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="VillageId" asp-items="@(new SelectList(Model.VillageList, "Id","Name"))"
                            onchange="return onChange(this.options[this.selectedIndex].value);">
                        <option selected disabled="disabled" value="">--Select--</option>
                    </select>
                    <span asp-validation-for="VillageId" class="text-danger"></span>
                    <label asp-for="VillageId" class="floating-label">Village Name </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3"
                            asp-for="KhasraId" asp-items="@(new SelectList(Model.KhasraList, "Id","Name"))">
                        <option value="">---Select---</option>
                    </select>
                    <span asp-validation-for="KhasraId" class="text-danger"></span>
                    <label asp-for="KhasraId" class="floating-label">Khasra No </label>
                </div>
            </div>

        </div>

        <div class="pt-3">
            <h3 class="my-3 sub-heading">Actual Area</h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input type="text" id="Bigha1" class="floating-label-field floating-label-field--s3 numbers" placeholder="Bigha" readonly />

                    <label class="floating-label">Bigha</label>

                </div>
            </div>

            <div class="form-group col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input  type="text" id="Biswa1" class="floating-label-field floating-label-field--s3 numbers" placeholder="Biswa" readonly />

                    <label class="floating-label">Biswa</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input  type="text" id="Biswanshi1" class="floating-label-field floating-label-field--s3 numbers" placeholder="Biswanshi" readonly />

                    <label class="floating-label">Biswanshi</label>
                </div>
            </div>
        </div>


        <h3 class="my-3 d-flex sub-heading pt-4"> Notified Area </h3>
        <div class="row mt-md-3">


            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Bigha" placeholder="Notification"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="Bigha" class="text-danger"></span>
                    <label class="floating-label">Bigha    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Biswa" placeholder="Name"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="Biswa" class="text-danger"></span>
                    <label class="floating-label">Biswa </label>
                </div>
            </div>

            <div class="col-md-4">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Biswanshi" placeholder="NoOfKhatauni"
                           class="floating-label-field floating-label-field--s3 numbers" />
                    <span asp-validation-for="Biswanshi" class="text-danger"></span>
                    <label class="floating-label">Biswanshi </label>
                </div>
            </div>


        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <textarea asp-for="Remarks" placeholder="Description" class="floating-label-field floating-label-field--s3"></textarea>

                    <span asp-validation-for="Remarks" class="text-danger"></span>
                    <label class="floating-label">Remarks  </label>
                </div>
            </div>
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select asp-for="IsActive" class="floating-label-field floating-label-field--s3">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label class="floating-label">Status </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "Newlandnotificationdetails", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>

