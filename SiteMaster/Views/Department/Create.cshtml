@model Libraries.Model.Entity.Department
@await Component.InvokeAsync("PageHeader", new { pageName = "Department" })

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid" id="MainContentForm">
    <div class="panel">

        <div class="panel-body">












            <form asp-action="Create" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
                <h3 class="mb-3 d-flex">Add Details</h3>
                <div class="row">
                    <div class="col-md-6    ">
                        <div class="floating-label-wrap mb-3 mb-md-0">
                            <input asp-for="Name"  type="text" id="txtName" class="floating-label-field floating-label-field--s3 form-control is-invalid" placeholder="Name" limit="100" />
                          
                            <label asp-validation-for="Name" class="floating-label error">Department Name</label>
                        </div>
                    </div>

                    <div class="col-md-6    ">
                        <div class="floating-label-wrap mb-3 mb-md-0">





                            <select asp-for="IsActive" class="floating-label-field floating-label-field--s3">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>

                            <label for="field-1" class="floating-label">Status</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-md-3">
                    <div class="col-md-12 col-xl-3">
                        <div class="row">
                            @Html.ActionLink("Back", "Index", "Department", null, new { @class = "btn btn-theme " })
                            <div class="col-6 col-md-7 col-xl-6">
                                <button value="Create" class="btn btn-theme btn-block" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>









        </div>
    </div>
</div>




<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/designationindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/designationindex.min.js" asp-append-version="true"></script>
</environment>