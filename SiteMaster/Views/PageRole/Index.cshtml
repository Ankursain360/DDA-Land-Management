@model Libraries.Model.Entity.PageRole
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Page Role Master</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Edit Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Page Role Type </label>
                        <select asp-for="OperationType" class="form-control dda-dropdown" id="ddlOperationType">
                            <option value="Role">Role Wise</option>
                            <option value="User">User Wise</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Role </label>
                        <select asp-for="RoleId" id="Role" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.RoleList,"Id","Name"))">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6" id="divUser" style="display:none;">
                        <label class="control-label lb-sm">User </label>
                        <select asp-for="UserId" id="ddlUser" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.UserList,"Id","Name"))">
                            <option value="-1" selected="selected">Select</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Module</label>
                        <select asp-for="ModuleId" id="ddlModuleId" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.ModuleList,"Id","Name"))">
                            <option value="value">Select</option>
                        </select>
                        <span asp-validation-for="ModuleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input id="GetPageRoleRecord" type="button" value="Get Page" class="btn btn-primary dda-pageheading" />
                    </div>
                </div>
                <div class="row">
                    <table id="tbl_posts" class="table table-responsive table-bordered table-card">
                        <thead>
                            <tr>
                                <th rowspan="2" class="text-center sn">Sr.No.</th>
                                <th rowspan="2" class="text-center">
                                    Page Role Status <br />
                                    <input type="checkbox" id="selectall_PageRole" />
                                </th>
                                <th rowspan="2" class="text-center">
                                    Module Name
                                </th>
                                <th rowspan="2" class="text-center">Menu Name</th>
                                <th colspan="4" class="text-center">Writes</th>
                            </tr>
                            <tr>
                                <th class="text-center">
                                    Add<br />
                                    <input type="checkbox" id="selectall_add" />
                                </th>
                                <th class="text-center">
                                    Edit Update<br />
                                    <input type="checkbox" id="selectall_editUpdate" />
                                </th>
                                <th class="text-center">
                                    Delete<br />
                                    <input type="checkbox" id="selectall_delete" />
                                </th>
                                <th class="text-center">
                                    View<br />
                                    <input type="checkbox" id="selectall_view" />
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tbl_posts_body"></tbody>
                        <tbody id="add">
                            <tr id="addtr">
                                <td><span class="sn">1</span></td>
                                <td class="text-center">
                                    <input type="checkbox" id="ChkDisplay" class="checkbox checkbox_role"/>
                                    <input type="hidden" asp-for="RDisplayList[0]" id="hdnRDisplay" class="isDisplay"/>
                                </td>
                                <td class="text-center">
                                    <input type="hidden" asp-for="PageIdList[0]" id="PageId" />
                                    <label asp-for="ModuleName" id="ModuleName"></label>
                                </td>
                                <td class="text-center">
                                    <label asp-for="PageName" id="PageName"></label>
                                </td>
                                <td class="text-center">
                                    <input type="checkbox" id="ChkAdd" class="checkbox checkbox_add" />
                                    <input type="hidden" asp-for="RAddList[0]" id="hdnRAdd" class="isAdd"/>
                                </td>
                                <td class="text-center">
                                    <input type="checkbox" id="ChkEdit" class="checkbox checkbox_editUpdate" />
                                    <input type="hidden" asp-for="REditList[0]" id="hdnREdit" class="isEdit"/>
                                </td>
                                <td class="text-center">
                                    <input type="checkbox" id="ChkDelete" class="checkbox checkbox_delete" />
                                    <input type="hidden" asp-for="RDeleteList[0]" id="hdnRDelete" class="isDelete"/>
                                </td>
                                <td class="text-center">
                                    <input type="hidden" asp-for="RViewList[0]" id="hdnRView" class="isView"/>
                                    <input type="checkbox" id="ChkView" class="checkbox checkbox_view"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="form-row">
                    <div class=" form-group  col-md-12">
                        <input type="submit" value="Submit" class="btn btn-primary dda-pageheading" />
                        @Html.ActionLink("Back", "Index", "PageRole", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/pagerolemasterindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/pagerolemasterindex.js" asp-append-version="true"></script>
</environment>
