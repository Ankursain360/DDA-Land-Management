@model Libraries.Model.Entity.PageRole
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Locality Master</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Edit Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Page Role Type </label>
                        <select asp-for="RoleId" class="form-control dda-dropdown">
                            <option value="Role">Role Wise</option>
                            <option value="User">User Wise</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Role </label>
                        <select asp-for="RoleId" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.RoleList,"Id","Name"))" onchange="return onChange(this.options[this.selectedIndex].value);">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Module</label>
                        <select asp-for="ModuleId" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.ModuleList,"Id","Name"))">
                            <option value="value">Select</option>
                        </select>
                        <span asp-validation-for="ModuleId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6" style="display:none;">
                        <label class="control-label lb-sm">Department </label>
                        <select asp-for="UserId" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.UserList,"Id","Name"))" onchange="return onChange(this.options[this.selectedIndex].value);">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                   
                </div>
                    <div class="form-row">
                        <div class=" form-group  col-md-12">
                            <input type="submit" value="Update" class="btn btn-primary dda-pageheading" />
                            @Html.ActionLink("Back", "Index", "Locality", null, new { @class = "btn btn-primary dda-pageheading" })
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />