@model Libraries.Model.Entity.Approvalstatus

@await Component.InvokeAsync("PageHeader", new { pageName = "Approval Status" })


<form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
   
    <h3 class="mb-3 d-flex">Add Approval Status<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" asp-for="StatusCode">

                    <option value="0" disabled>--select--</option>
                    <option value="1">Forward</option>
                    <option value="2">Revert</option>
                    <option value="3">Approved</option>
                    <option value="4">Rejected</option>
                    <option value="5">Query Forward</option>
                </select>
                <span asp-validation-for="StatusCode" class="text-danger"></span>
                <label asp-for="StatusCode" class="floating-label">Status Code<span style="color:red">*</span></label>
            </div>
        </div>

        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input asp-for="SentStatusName" type="text"
                       class="floating-label-field floating-label-field--s3"
                       placeholder="Sent Status Name"
                       limit="50">
                <span asp-validation-for="SentStatusName" class="text-danger"></span>
                <label class="floating-label">Sent Status Name<span style="color:red">*</span></label>
            </div>
        </div>

    </div>


    <div class="row mt-md-3">

        <div class="col-md-6">
            <div class="floating-label-wrap mb-3 mb-md-0">
                <input asp-for="Name" type="text"
                       class="floating-label-field floating-label-field--s3"
                       placeholder="Approval Status"
                       limit="50">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label class="floating-label">Approval Status<span style="color:red">*</span></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="floating-label-wrap">
                <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <label asp-for="IsActive" class="floating-label">Status </label>
            </div>
        </div>
    </div>


    <div class="row mt-md-3">
        <div class=" col-md-12">
            <button class="btn btn-theme " type="submit">Submit</button>
            @Html.ActionLink("Back", "Index", "Approvalstatus", null, new { @class = "btn btn-theme " })
        </div>
    </div>
</form>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />