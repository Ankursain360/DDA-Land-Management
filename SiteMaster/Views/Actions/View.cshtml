@model Libraries.Model.Entity.Actions
@{
    ViewData["Title"] = "View";
}


@await Component.InvokeAsync("PageHeader", new { pageName = "Actions" })

<div class="pt-3">

    <form asp-action="Edit" disabled="disabled" id="myForm" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                   
                    <input asp-for="Name" placeholder="Action" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label class="floating-label">Action <span style="color:red">*</span>  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                  
                    <input asp-for="Icon" placeholder="Icon" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />

                    <span asp-validation-for="Icon" class="text-danger"></span>

                    <label class="floating-label">Icon   </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                   
                    <input asp-for="Color" type="text" class="floating-label-field floating-label-field--s3" placeholder="Color"
                           limit="100">
                    <span asp-validation-for="Color" class="text-danger "></span>
                    <label class="floating-label">Color</label>
                </div>
            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="row ">
            <div class=" col-md-12">

                @Html.ActionLink("Back", "Index", "Actions", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>

