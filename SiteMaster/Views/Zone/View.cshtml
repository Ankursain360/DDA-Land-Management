<div class="container-fluid">
    
    <form asp-action="Edit" disabled="disabled" id="myForm" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId" asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))">
                        <option selected="selected"  disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    <label asp-for="DepartmentName" class="floating-label">Department </label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input disabled asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label class="floating-label">Zone Name   </label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class=" col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input disabled asp-for="Code" type="text" class="floating-label-field floating-label-field--s3" placeholder="Zone Code"
                           limit="100">
                    <span asp-validation-for="Code" class="text-danger "></span>
                    <label class="floating-label">Zone Code</label>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>

        <div class="form-row ">
            <div class="form-group col-md-12" style="margin-bottom:40px;">
                @Html.ActionLink("Back", "Index", "Zone", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>
       
   
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/zonecreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/zonecreate.js" asp-append-version="true"></script>
</environment>