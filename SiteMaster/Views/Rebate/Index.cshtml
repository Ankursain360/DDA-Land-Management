@model IEnumerable<Libraries.Model.Entity.Rebate>

@await Component.InvokeAsync("PageHeader", new { pageName = "Rebate" })
@{int rowNo = 0; }


<div class="pt-3">
    <form class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Search</h3>
        <div class="row">
            @*<div class="col-md-3">
                <div class="floating-label-wrap mb-3 mb-md-0">
