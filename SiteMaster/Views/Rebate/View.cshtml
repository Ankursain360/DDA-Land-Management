<div class="container-fluid">
    <form asp-action="Edit" disabled="disabled" id="myForm" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="form-group col-md-4">
                <label class="radio-inline ">
                    <input type="radio" asp-for="IsRebateOn" id="rbdPricipal" value="0" />Rebate on Principal Amount
                </label>
            </div>
            <div class="form-group col-md-4">
                <label class="radio-inline">
                    <input type="radio" asp-for="IsRebateOn" id="rbdInterest" value="1" />Rebate on Interest
                </label>
            </div>
            <div class="form-group col-md-4">
                <label class="radio-inline">
                    <input type="radio" asp-for="IsRebateOn" id="rbdBoth" value="2" />Both
                </label>
            </div>

        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="FromDate"  placeholder="From Date" type="date"
                           class="floating-label-field floating-label-field--s3" />

                    <span asp-validation-for="FromDate" class="text-danger"></span>

                    <label class="floating-label">From Date   </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="ToDate" type="date"  class="floating-label-field floating-label-field--s3" placeholder="To Date">

                    <span asp-validation-for="ToDate" class="text-danger "></span>
                    <label class="floating-label">To Date</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="RebatePercentage"  type="text" class="floating-label-field floating-label-field--s3 numbers" placeholder="Rebate Percentage"
                           limit="18">
                    <span asp-validation-for="RebatePercentage" class="text-danger "></span>
                    <label class="floating-label">Rebate Percentage</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="Scheme"  type="text" class="floating-label-field floating-label-field--s3" placeholder="Scheme"
                           limit="1000">
                    <span asp-validation-for="Scheme" class="text-danger "></span>
                    <label class="floating-label">Scheme Name</label>
                </div>
            </div>
        </div>
        <div class="row">

            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class="form-group col-md-12" style="margin-bottom:40px;">
                @Html.ActionLink("Back", "Index", "Rebate", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>


</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">
    <script src="~/js/rebateedit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/rebateedit.min.js" asp-append-version="true"></script>
</environment>
