@model Libraries.Model.Entity.Module
@await Component.InvokeAsync("PageHeader", new { pageName = "Module" })

<div class="pt-3">
    
    <form asp-action="Edit" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Edit Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">


            <div class=" col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <select class="floating-label-field floating-label-field--s3" asp-for="ModuleCategoryId" asp-items="@(new SelectList(Model.ModuleCategoryList, "Id","CategoryName"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="ModuleCategoryId" class="text-danger"></span>
                    <label class="floating-label">Module Category Name  </label>
                </div>

            </div>

            <div class=" col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Module Name  </label>
                </div>

            </div>

        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Description" placeholder="Description" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                    <label class="floating-label">Description   </label>
                </div>

            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Url" placeholder="Url" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Url" class="text-danger"></span>

                    <label class="floating-label">Url   </label>
                </div>
            </div>

        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Icon" placeholder="Icon" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Icon" class="text-danger"></span>

                    <label class="floating-label">Icon   </label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Target" placeholder="Target" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Target" class="text-danger"></span>

                    <label class="floating-label">Target   </label>
                </div>


            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="SortBy" type="text" class="floating-label-field floating-label-field--s3 onlynumbers" limit="2" />
                    <span asp-validation-for="SortBy" class="text-danger"></span>
                    <label class="floating-label">Sort By</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "Module", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>
       
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />