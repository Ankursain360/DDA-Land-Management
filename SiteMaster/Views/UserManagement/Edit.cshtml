@model Dto.Master.EditUserDto

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">User </h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create" id="create_user">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Name" class="control-label lb-sm">Name<span style="color:red">*</span></label>
                        <input asp-for="Name" class="form-control form-control-sm" limit="150" required="required" requiredMsg="Name is Mandatory" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Email" class="control-label lb-sm">Email<span style="color:red">*</span></label>
                        <input asp-for="Email" class="form-control form-control-sm" type="email" limit="256" required="required" requiredMsg="Email is Mandatory" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="PhoneNumber" class="control-label lb-sm">Phone Number<span style="color:red">*</span></label>
                        <input asp-for="PhoneNumber" class="form-control form-control-sm onlynumbers" maxlength="10" required="required" requiredMsg="Phone Number is Mandatory" onpaste="return false;" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" onclick="return ValidateForm();" />
                        @Html.ActionLink("Back", "Index", "UserManagement", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">
    <script src="~/js/UserManagement.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/UserManagement.min.js" asp-append-version="true"></script>
</environment>