@model Dto.Master.AddUserDto

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Application User  </h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create" id="create_user">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label asp-for="Name" class="control-label lb-sm">Name</label>
                        <input asp-for="Name" class="form-control form-control-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="UserName" class="control-label lb-sm">User Name</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="Email" class="control-label lb-sm">Email</label>
                        <input asp-for="Email" class="form-control form-control-sm" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="PhoneNumber" class="control-label lb-sm">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control form-control-sm" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="Password" class="control-label lb-sm">Password<span style="color:red">*</span></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="ConfirmPassword" class="control-label lb-sm">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-sm" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label lb-sm">Department <span style="color:red">*</span></label>
                        <select class="form-control dda-dropdown" asp-for="DepartmentId"
                                asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))"
                                onchange="return onChange(this.options[this.selectedIndex].value);">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label lb-sm">Zone <span style="color:red">*</span></label>
                        <select class="form-control dda-dropdown" asp-for="ZoneId" asp-items="@(new SelectList(Model.ZoneList, "Id","Name"))">
                            <option>Select</option>
                        </select>
                        <span asp-validation-for="ZoneId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <label class="control-label lb-sm"> Status</label>
                        <select class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class=" form-group  col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" onclick="return PasswordMatch();" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

<environment include="Development">
    <script src="~/js/UserManagement.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/UserManagement.min.js" asp-append-version="true"></script>
</environment>
