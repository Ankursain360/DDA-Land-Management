@model Libraries.Model.Entity.Division
@await Component.InvokeAsync("PageHeader", new { pageName = "Division" })

<div class="pt-3">
    
      
    <form asp-action="Edit" disabled="disabled" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />



        <div class="row">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId"
                            asp-items="@(new SelectList(Model.DepartmentList, "Id","Name"))"
                            onchange="return onChange(this.options[this.selectedIndex].value);">
                        <option selected="selected" disabled="disabled" value="">Select </option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    <label asp-for="DepartmentId" class="floating-label">Department </label>
                </div>



            </div>
            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="ZoneId"
                             asp-items="@(new SelectList(Model.ZoneList,"Id","Name"))" 
                            onchange="return onChangeZone(this.options[this.selectedIndex].value)">

                        <option selected="selected" disabled="disabled" value="">Select </option>
                    </select>
                    <span asp-validation-for="ZoneId" class="text-danger"></span>
                    <label asp-for="ZoneId" class="floating-label">Zone </label>
                </div>

            </div>
        </div>

        <br />
        <div class="row">
            <div class=" col-md-6">

                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label class="floating-label">Division Name  </label>
                </div>

            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input asp-for="Code" placeholder="Code" type="text" class="floating-label-field floating-label-field--s3" limit="10" />

                    <span asp-validation-for="Code" class="text-danger"></span>

                    <label class="floating-label"> Division Code   </label>
                </div>


            </div>
        </div>


        <div class="row">

            <div class=" col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>



            </div>
        </div>

        <br />
        <div class="row ">
            <div class=" col-md-12">
                @Html.ActionLink("Back", "Index", "Division", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>
       
</div>

<environment include="Development">
    <script src="~/js/divisionmaster.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/divisionmaster.min.js" asp-append-version="true"></script>
</environment>

