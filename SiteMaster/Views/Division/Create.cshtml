@model Libraries.Model.Entity.Division

<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Division Master </h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Department<span style="color:red">*</span> </label>
                        <select asp-for="DepartmentId" class="form-control dda-dropdown" required="required" requiredMsg="The Department field is required" asp-items="@(new SelectList(Model.DepartmentList,"Id","Name"))" onchange="return onChange(this.options[this.selectedIndex].value);">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Zone<span style="color:red">*</span></label>
                        <select asp-for="ZoneId" class="form-control dda-dropdown" required="required" requiredMsg="The Zone Name is required">
                            <option value="">Select</option>
                        </select>
                        <span asp-validation-for="ZoneId" class="text-danger"></span>
                    </div>
                </div>





                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Division Name <span style="color:red">*</span></label>
                        <input asp-for="Name" required="required" requiredMsg="The Division Name is required" class="form-control" limit="100">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Code<span style="color:red">*</span></label>
                        <input asp-for="Code" required="required" requiredMsg="The Code is required" class="form-control" limit="100">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>


                <div class="row">

                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Status</label>
                        <select asp-for="IsActive" class="form-control dda-dropdown">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>



                <div class="row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" onclick="return ValidateForm();" />
                        @Html.ActionLink("Back", "Index", "Division", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />


<environment include="Development">
    <script src="~/js/divisioncreate.js"></script>
    <script src="~/js/divisionmaster.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/divisionmaster.min.js" asp-append-version="true"></script>
</environment>

