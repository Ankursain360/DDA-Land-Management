@model Libraries.Model.Entity.Scheme

@await Component.InvokeAsync("PageHeader", new { pageName = "Scheme" })


<div class="pt-3">


    <form asp-action="View" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">

        <h3 class="mb-3 d-flex">View Details<span style="margin-left:800px"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input limit="100" class="floating-label-field floating-label-field--s3" placeholder="Scheme Name" asp-for="Name" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Scheme Name<span style="color:red">*</span>  </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">


                    <input limit="10" class="floating-label-field floating-label-field--s3" placeholder="Scheme Code" asp-for="Code" disabled />
                    <span asp-validation-for="Code" class="text-danger"></span>
                    <label class="floating-label">Scheme Code<span style="color:red">*</span> </label>
                </div>
            </div>
        </div>



        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input type="date" class="floating-label-field floating-label-field--s3" placeholder="Scheme Date" asp-for="SchemeDate" disabled/>
                    <span asp-validation-for="SchemeDate" class="text-danger"></span>
                    <label class="floating-label">Scheme Date<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <input limit="100" class="floating-label-field floating-label-field--s3" placeholder="Scheme File No." asp-for="FileNo" disabled/>
                    <span asp-validation-for="FileNo" class="text-danger"></span>
                    <label class="floating-label">Scheme File No. <span style="color:red">*</span> </label>
                </div>
            </div>
        </div>






        <div class="row mt-md-3">

            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">

                    <textarea limit="500" type="text" asp-for="Description" class="floating-label-field floating-label-field--s3" placeholder="Description" disabled></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label class="floating-label">Description</label>
                </div>
            </div>

            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive" disabled>
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>



        <div class="row mt-md-3">
            <div class=" col-md-12">
          
                @Html.ActionLink("Back", "Index", "Scheme", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>


</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />

