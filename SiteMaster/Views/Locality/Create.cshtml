<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Locality Master</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading dda-pageheading">
            <h6 class="pull-left color-white " style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Department </label>
                        <select required class="form-control dda-dropdown">
                            <option value="value">Select</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Zone    </label>
                        <select required style="height:30px;  background-color: #dddddd;" class="form-control">
                            <option value="value">Select</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Locality Name   </label>
                        <input required type="text" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Locality Code</label>
                        <input required type="text" class="form-control">


                    </div>


                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Landmark    </label>

                        <input required type="text" class="form-control">

                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm">Address    </label>

                        <input required type="text" class="form-control">

                    </div>
                </div>


                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label lb-sm"> Status</label>
                        <select style="height:30px; background-color: #dddddd;" required class="form-control">
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class=" form-group  col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary dda-pageheading" />
                        @Html.ActionLink("Back", "Index", "Locality", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_ValidationScriptsPartial.cshtml" />