@model Libraries.Model.Entity.Locality
@await Component.InvokeAsync("PageHeader", new { pageName = "Locality" })

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId" asp-items="@(new SelectList(Model.DepartmentList,"Id","Name"))" onchange="return onChange(this.options[this.selectedIndex].value);" required="required" requiredmsg="The Department field is required">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <label asp-validation-for="DepartmentId" class="error"></label>
                    <label asp-for="DepartmentId" class="floating-label">Department </label>
                </div>
            </div>
            <div class="col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="ZoneId" onchange="return onChangeZone(this.options[this.selectedIndex].value)" required="required" requiredmsg="The Zone field is required">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <label asp-validation-for="ZoneId" class="error"></label>
                    <label asp-for="ZoneId" class="floating-label">Zone </label>
                </div>
            </div>
        </div>


        <div class="row mt-md-3">
            <div class="col-md-6">

                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="DivisionId"  required="required" requiredMsg="The Division field is required">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <label asp-validation-for="DivisionId" class="error"></label>
                    <label asp-for="DivisionId" class="floating-label">Division </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="Name" type="text" class="floating-label-field floating-label-field--s3 " placeholder="Name"
                           limit="50">
                    <span asp-validation-for="Name" class="text-danger "></span>
                    <label class="floating-label">Locality(Village) Name</label>
                </div>
            </div>
        </div>
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="LocalityCode" type="text" class="floating-label-field floating-label-field--s3" placeholder="LocalityCode"
                           limit="10">
                    <span asp-validation-for="LocalityCode" class="text-danger "></span>
                    <label class="floating-label">Locality(Village) Name Code</label>
                </div>
            </div>
            <div class="col-md-6">

               
                    <div class="floating-label-wrap mb-3 mb-md-0">
                        @*<span class="text-danger">*</span>*@
                        <input asp-for="Landmark" type="text" class="floating-label-field floating-label-field--s3" placeholder="Landmark"
                               limit="200">
                        <span asp-validation-for="Landmark" class="text-danger "></span>
                        <label class="floating-label">Landmark</label>
                    </div>
                </div>
            </div>
        
        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    @*<span class="text-danger">*</span>*@
                    <input asp-for="Address" type="text" class="floating-label-field floating-label-field--s3" placeholder="Address"
                           limit="600">
                    <span asp-validation-for="Address" class="text-danger "></span>
                    <label class="floating-label">Address</label>
                </div>
                </div>
                <div class=" col-md-6">

                    <div class="floating-label-wrap">
                        <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                        <label asp-for="IsActive" class="floating-label">Status </label>
                    </div>

                </div>
           
            </div>
            <div class="row mt-md-3">
                <div class=" col-md-12">
                    <button class="btn btn-theme " type="submit">Create</button>
                    @Html.ActionLink("Back", "Index", "Locality", null, new { @class = "btn btn-theme " })

                </div>
            </div>

</form>

</div>

<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/LocalityMaster.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/LocalityMaster.min.js" asp-append-version="true"></script>
</environment>