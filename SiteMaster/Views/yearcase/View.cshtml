@model Libraries.Model.Entity.Caseyear
@await Component.InvokeAsync("PageHeader", new { pageName = "Case year" })

<div class="pt-3">

    <form asp-action="View" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class=" col-md-6">

                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text"
                           class="floating-label-field floating-label-field--s3" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Case Year  </label>
                </div>
            </div>

            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive" disabled>

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>


        <div class="row mt-md-3 ">
            <div class=" col-md-12">
                @Html.ActionLink("Back", "Index", "yearcase", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>
</div>


