@model Libraries.Model.Entity.Zone
@{
    ViewData["Title"] = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="myapp-hed">
            <div class="col-md-12">
                <h6 class="pull-left" style="color:white;margin-top:5px;">Zone Master</h6>
                <i class="fa fa-arrow-left pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />

<br />
<div class="container-fluid" id="MainContentForm">
    <div class="panel">
        <div class="panel-heading  myapp-hed1">
            <h6 class="pull-left" style="color:white; margin-top:-0.4%">View Details</h6>
        </div>
        <div class="panel-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="DepartmentName">Department </label>
                        <select asp-for="DepartmentId" required style="height:30px;  background-color: #dddddd;" class="form-control" asp-items="@(new SelectList( @ViewBag.DepartmentList, "DepartmentRecNo","DepartmentName"))">
                            <option value="value">Select</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">

                        <label class="control-label">Zone Name   </label>

                        <input asp-for="Name" required type="text" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label">Zone Code    </label>

                        <input asp-for="Code" required type="text" class="form-control">

                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label"> Status</label>
                        <select asp-for="IsActive" style="height:30px;    background-color: #dddddd;" required class="form-control">
                            <option value="1">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="form-row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        @*<input type="submit" value="Create" class="btn btn-primary myapp-hed1" />*@
                        @Html.ActionLink("Back", "Index", "ZoneMaster", null, new { @class = "btn btn-primary myapp-hed1" })
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@if (ViewData["Msg"] != null)
{
    SiteMaster.Models.Message msg = ViewData["Msg"] as SiteMaster.Models.Message;
    @await Html.PartialAsync("~/Views/Shared/_ShowMsg.cshtml", msg);
}




