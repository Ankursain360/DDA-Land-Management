@model Libraries.Model.Entity.WorkflowTemplate

<style>
    .dda-innerheading {
        background: linear-gradient(to left, #9e1c32, #991141, #900f50, #83155d, #721e68, #68226f, #5d2675, #4f2a7a, #492b80, #422c85, #392e8b, #2c3091);
        Color: #ffffff;
        Font-size: 0.95rem;
        Font-Family: Arial, Helvetica, sans-serif;
        /* margin-left: 3px;*/
        top: -10px;
        border-radius: 5px;
        position: absolute;
        width: 97%;
        height: 38px;
        margin-top: 10px;
        margin-bottom: 50px;
    }
</style>
<div class="row">
    <div class="col-sm-12">
        <div class="dda-topheading">
            <div class="col-md-12">
                <h6 class="pull-left color-white" style="margin-top:5px;">Workflow</h6>
                <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
            </div>
        </div>
    </div>
</div>
<br />
<br />


<div class="container-fluid">
    <div class="panel">
        <div class="panel-heading  dda-pageheading">
            <h6 class="pull-left color-white" style="margin-top:-0.4%">Add Details</h6>
        </div>
        <div class="panel-body">
            @*<form asp-action="Create">*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-md-3">
                    <label class="control-label lb-sm" asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label lb-sm" asp-for="Description">Description</label>
                    <input asp-for="Description" type="text" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label lb-sm" asp-for="ModuleId">Module</label>
                    <select asp-for="ModuleId" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.ModuleList,"Id","Name"))">
                        <option value="value">Select</option>
                    </select>
                    <span asp-validation-for="ModuleId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    <label class="control-label lb-sm">IsActive</label>
                    <input type="checkbox" asp-for="IsActiveData" />
                </div>
                <div class="form-group col-md-3">
                    <a class="btn btn-primary dda-pageheading add-record" data-added="0"> Add Task</a>
                </div>
            </div>


            <div class="form-row">
                <div class="col-md-12">
                    <div class="table">
                        <table class="table" border="0" id="tbl_posts">
                            <tbody id="tbl_posts_body">
                            </tbody>
                            <tbody class="tbody" id="add">
                                <tr id="">
                                    <td>
                                        <div id="Div">
                                            <div class="row" style="margin-bottom:50px;">
                                                <div class="col-sm-12">
                                                    <div class="dda-innerheading">
                                                        <div class="col-md-12">
                                                            <h6 class="pull-left color-white" style="align-content:center;"><span class="sn">Task 1</span></h6>
                                                            <a class="btn btn-danger pull-right delete-record" data-id="0" style="width: unset; padding: unset; margin-top: 5px; display:none;">Delete</a>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-3">
                                                    <label class="control-label lb-sm">Parameter Name</label>
                                                    <input asp-for="ParameterNameList[0]" type="text" id="parameterName" class="form-control" />
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label class="control-label lb-sm">Parameter Value</label>
                                                    <input asp-for="ParameterValueList[0]" type="text" id="parameterValue" class="form-control" />
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label class="control-label lb-sm">Level</label>
                                                    <input asp-for="ParameterLevelList[0]" type="text" id="parameterLevel" class="form-control" />
                                                </div>
                                                <div class="form-group col-md-3">
                                                    <label class="control-label lb-sm">Skip</label>
                                                    <input type="checkbox" class="checkbox" asp-for="ParameterSkipList[0]" id="paramenterSkip" />
                                                </div>
                                            </div>

                                        </div>
                                    </td>
                                </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row ">
                <div class="form-group col-md-12" style="margin-bottom:40px;">
                    <input type="submit" value="Update" id="btnCreate" class="btn btn-primary dda-pageheading" />
                    @Html.ActionLink("Back", "Index", "WorkFlowTemplate", null, new { @class = "btn btn-primary dda-pageheading" })
                </div>
            </div>

            @*</form>*@
        </div>
    </div>
</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/workflowedit.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/workflowedit.js" asp-append-version="true"></script>
</environment>

