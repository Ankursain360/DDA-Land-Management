@model Libraries.Model.Entity.WorkflowTemplate
    <style>
        .dda-innerheading {
            background: linear-gradient(to left, #9e1c32, #991141, #900f50, #83155d, #721e68, #68226f, #5d2675, #4f2a7a, #492b80, #422c85, #392e8b, #2c3091);
            Color: #ffffff;
            Font-size: 0.95rem;
            Font-Family: Arial, Helvetica, sans-serif;
            top: -10px;
            border-radius: 5px;
            position: absolute;
            width: 97%;
            height: 38px;
            margin-top: 10px;
            margin-bottom: 50px;
        }
    </style>


    <div class="row">
        <div class="col-sm-12">
            <div class="dda-topheading">
                <div class="col-md-12">
                    <h6 class="pull-left color-white" style="margin-top:5px;">Workflow</h6>
                    <i class="glyphicon glyphicon-arrow-right pull-right" aria-hidden="true" style="padding-top:4px;"></i>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    <div class="container-fluid">
        <div class="panel">
            <div class="panel-heading  dda-pageheading">
                <h6 class="pull-left color-white" style="margin-top:-0.4%">Add Details</h6>
            </div>
            <div class="panel-body">
                @*<form id="myForm"  method="post" asp-action="Create" >*@
                <div asp-validation-summary="ModelOnly" class="text-danger lb-sm"></div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label lb-sm" asp-for="ModuleId">Module</label><span class="text-danger">*</span>
                        <select asp-for="ModuleId" class="form-control dda-dropdown" asp-items="@(new SelectList(Model.ModuleList,"Id","Name"))">
                            <option value="0">--Select--</option>  @*value*@
                        </select>
                        <span asp-validation-for="ModuleId" class="text-danger lb-sm" style="display:none;" id="ModuleIdMessage">Module is Mandatory</span>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label lb-sm" asp-for="Name">Proccess Name</label><span class="text-danger">*</span>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger lb-sm" style="display:none;" id="NameMessage">Proccess Name is Mandatory</span>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label lb-sm" asp-for="Description">Proccess Description</label><span class="text-danger">*</span>
                        <input asp-for="Description" type="text" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger lb-sm" style="display:none;" id="DescriptionMessage">Proccess Description is Mandatory</span>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group col-md-3">
                        <label class="control-label lb-sm">IsActive</label>
                        <input type="checkbox" asp-for="IsActiveData" checked />
                    </div>
                    <div class="form-group col-md-3">
                        <a class="btn btn-primary dda-pageheading add-record" data-added="0"> Add Level</a>
                    </div>
                </div>
                <div id="LoadReportView">

                </div>

                <div class="row ">
                    <div class="form-group col-md-12" style="margin-bottom:40px;">
                        <input type="submit" value="Create" id="btnCreate" class="btn btn-primary dda-pageheading" />
                        @Html.ActionLink("Back", "Index", "WorkFlowTemplate", null, new { @class = "btn btn-primary dda-pageheading" })
                    </div>
                </div>

                @*</form>*@
            </div>
        </div>
    </div>


    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <environment include="Development">
        <script src="~/js/workflowcreate.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/workflowcreate.min.js" asp-append-version="true"></script>
    </environment>
