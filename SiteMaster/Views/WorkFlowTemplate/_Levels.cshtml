@model Libraries.Model.Entity.WorkflowTemplate

<link href="~/lib/bootstrap/select2/select2.css" rel="stylesheet" />
<script src="~/lib/bootstrap/select2/select2.js" defer></script>

<div class="table myWebsiteTable delete-recordDiv" id="delete-recordDiv0">
    <input type="hidden" asp-for="OperationId" />
    <table class="table" border="0" id="tbl_posts">
        <tbody id="tbl_posts_body">
        </tbody>
        <tbody class="tbody" id="add">
            <tr id="">
                <td>
                    <div id="Div">
                        <div class="row" style="margin-bottom:50px;">
                            <div class="col-sm-12">
                                <div class="dda-innerheading">
                                    <div class="col-md-12">
                                        <h6 class="pull-left color-white" style="align-content:center;"><span class="sn">Level 1</span></h6>
                                        <a class="btn btn-danger pull-right delete-record" data-id="0" style="width: unset; padding: unset; margin-top: 5px; display:block;">Delete</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="form-group col-md-2">
                                <label class="control-label lb-sm">Name</label>
                                <select asp-for="ParameterNameList[0]" asp-items="@(new SelectList(ViewBag.Items,"Id","Name"))" class="form-control dda-dropdown dropdownclass ParameterNameListClass" id="dropdownlistDesrtoy">
                                    <option value="0">--Select--</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <label class="control-label lb-sm">Parameter Value</label>
                                <input asp-for="ParameterValueList[0]" type="text" id="parameterValue" class="form-control inputclass ParameterValueListClass" />
                            </div>
                            <div class="form-group col-md-2">
                                <label class="control-label lb-sm">Level</label>
                                <input asp-for="ParameterLevelList[0]" type="text" id="parameterLevel" value="1" disabled class="form-control inputclass ParameterLevelListClass" />
                            </div>
                            <div class="form-group col-md-2">
                                <label class="control-label lb-sm">Action Taken</label>
                                <select asp-for="ParameterActionList[0]" class="form-control dda-dropdown drpactiontakenclass dropdownclass ParameterActionListClass" id="ddlActionType">

                                    <option value="1">Forward</option>
                                    <option value="3">Approved</option>
                                    <option value="2">Revert</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <label class="control-label lb-sm">Skip</label>
                                <input type="checkbox" asp-for="ParameterSkipList[0]" id="paramenterSkip" class="ParameterSkipListClass" />
                            </div>
                        </div>

                    </div>
                </td>
            </tr>
    </table>
</div>
<link href="~/lib/bootstrap/select2/select2.css" rel="stylesheet" />
<script src="~/lib/bootstrap/select2/select2.js" defer></script>
<environment include="Development">
    <script src="~/js/site.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>