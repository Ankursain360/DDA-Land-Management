@model Libraries.Model.Entity.Leasesubpurpose
@await Component.InvokeAsync("PageHeader", new { pageName = "Lease Sub Purpose" })

<div class="pt-3">

    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">View Details<span style="margin-left:800px"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select disabled class="floating-label-field floating-label-field--s3" asp-for="PurposeUseId" asp-items="@(new SelectList(Model.LeasePurposeUseList, "Id","PurposeUse"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="PurposeUseId" class="text-danger"></span>
                    <label asp-for="PurposeUseId" class="floating-label">Purpose Use<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="SubPurposeUse" type="text" disabled  
                           class="floating-label-field floating-label-field--s3" limit="200" />
                    <span asp-validation-for="SubPurposeUse" class="text-danger"></span>
                    <label class="floating-label">Sub Purpose Use<span style="color:red">*</span> </label>
                </div>
            </div>
        </div>

  

        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive" disabled >
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                @Html.ActionLink("Back", "Index", "Leasesubpurpose", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>


