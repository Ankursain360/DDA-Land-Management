@model Libraries.Model.Entity.PropertyType
@await Component.InvokeAsync("PageHeader", new { pageName = "Property Type Details" })

<div class="pt-3">
    <form asp-action="Edit" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Edit Details<span style="margin-left:800px"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="StatusCode">

                        <option value="0" disabled>--select--</option>
                        <option value="1">Residential</option>
                        <option value="2">Commercial</option>
                    </select>
                    <span asp-validation-for="StatusCode" class="text-danger"></span>
                    <label asp-for="StatusCode" class="floating-label">Status Code<span style="color:red">*</span></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" placeholder="Name" type="text" limit="100"
                           class="floating-label-field floating-label-field--s3 " />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Name<span style="color:red">*</span>  </label>
                </div>
            </div>
        </div>



        <div class="row mt-md-3">

            
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">

        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Update</button>
                @Html.ActionLink("Back", "Index", "PropertyType", null, new { @class = "btn btn-theme " })
            </div>
        </div>

    </form>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/propertytypeindex.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/propertytypeindex.min.js" asp-append-version="true"></script>
</environment>