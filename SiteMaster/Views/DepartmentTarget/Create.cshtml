@model Libraries.Model.Entity.Departmenttarget
@await Component.InvokeAsync("PageHeader", new { pageName = "Department Target " })

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="DepartmentId" asp-items="@(new SelectList(Model.DepartmentList,"Id","Name"))" onchange="return onChange(this.options[this.selectedIndex].value);" required="required" requiredmsg="The Department field is required">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    <label asp-for="DepartmentId" class="floating-label">Department </label>
                </div>
            </div>

            <div class="col-md-6">
                <span asp-validation-for="FilesToBeDone" class="text-danger"></span>
                <input asp-for="FilesToBeDone" placeholder="Name" type="number" id="txtFiles" class="floating-label-field floating-label-field--s3" limit="10" />
                <label class="floating-label">Files to be done  </label>

            </div>

            <div class=" col-md-6">
                <input asp-for="WeeklyToBeDone" placeholder="Name" type="number" id="txtWeekFiles"
                       class="floating-label-field floating-label-field--s3" limit="10" />

                <span asp-validation-for="WeeklyToBeDone" class="text-danger"></span>

                <label class="floating-label">Weekly to be done  </label>
            </div>
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">

                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>
                </div>


            </div>






            <div class="row mt-md-3">
                <div class=" col-md-12">
                    <button class="btn btn-theme " type="submit">Submit</button>
                    @Html.ActionLink("Back", "Index", "DepartmentTarget", null, new { @class = "btn btn-theme " })

                </div>
            </div>

</form>

</div>