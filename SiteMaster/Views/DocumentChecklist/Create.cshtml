@model Libraries.Model.Entity.Documentchecklist
@await Component.InvokeAsync("PageHeader", new { pageName = "Document Checklist" })

<div class="pt-3">

    <form asp-action="Create" method="post" class="d-block rounded border p-3 bg-white search-filer shadow mb-3">
        <h3 class="mb-3 d-flex">Add Details<span class="ms-auto"><span style="color:red">*&nbsp;</span>Marked are mandatory fields</span></h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="row">
            <div class="col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="ServiceTypeId" asp-items="@(new SelectList(Model.ServiceTypeList, "Id","Name"))">
                        <option selected="selected" disabled="disabled" value="">--Select-- </option>
                    </select>
                    <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                    <label asp-for="ServiceTypeId" class="floating-label">Service Type<span style="color:red">*</span> </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Name" type="text"
                           class="floating-label-field floating-label-field--s3" limit="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label class="floating-label">Document Name<span style="color:red">*</span></label>
                </div>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class="col-md-6">
                <div class="floating-label-wrap mb-3 mb-md-0">
                    <input asp-for="Description" type="text" class="floating-label-field floating-label-field--s3" >
                    <span asp-validation-for="Description" class="text-danger "></span>
                    <label class="floating-label">Description</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row mt-md-3">
                    <div class="col-md-4">
                        <label>Is Mandatory</label>
                    </div>
                    <input type="hidden" asp-for="IsMandatory" value="0" />
                    <div class="col-md-2">
                        <div class="form-check theme">
                            <input class="form-check-input" type="radio" asp-for="IsMandatory" name="grpIsMandatory" value="1">
                            <label class="form-check-label">Yes </label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-check theme">
                            <input class="form-check-input" type="radio" asp-for="IsMandatory" name="grpIsMandatory" value="0" checked>
                            <label class="form-check-label">No</label>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="IsMandatory" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-md-3">
            <div class=" col-md-6">
                <div class="floating-label-wrap">
                    <select class="floating-label-field floating-label-field--s3" asp-for="IsActive">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                    <label asp-for="IsActive" class="floating-label">Status </label>
                </div>

            </div>
        </div>
        <div class="row mt-md-3">
            <div class=" col-md-12">
                <button class="btn btn-theme " type="submit">Submit</button>
                @Html.ActionLink("Back", "Index", "DocumentChecklist", null, new { @class = "btn btn-theme " })

            </div>
        </div>

    </form>

</div>


<partial name="../Shared/_ValidationScriptsPartial.cshtml" />
<environment include="Development">
    <script src="~/js/documentchecklistcreate.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/documentchecklistcreate.min.js" asp-append-version="true"></script>
</environment>